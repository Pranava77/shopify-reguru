{% liquid
  assign font_heading = settings.font_heading
  assign font_body = settings.font_body
%}

<!-- Google Fonts for Neo-Brutalist Design -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Overpass+Mono:wght@300..700&family=Overpass:ital,wght@0,100..900;1,100..900&family=Poppins:wght@400;500;600;700&family=Roboto:wght@400;500;700&family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">

{% style %}
  :root {
    /* Neo-Brutalist Color Palette */
    --color-primary: #1E1A5C;
    --color-primary-dark: #151875;
    --color-accent: #1BDE8F;
    --color-accent-blue: #5294FF;
    --color-hero-dark: #212844;
    --color-discount-blue: #3B68AC;
    --color-background: #ffffff;
    --color-text: #10111A;
    --color-text-light: #636270;
    --color-border: #000000;
    --color-footer-bg: #1E1A5C;
    --color-footer-text: #ffffff;
    --color-white: #ffffff;
    --color-black: #000000;
    --color-gray-light: #FAFAFA;
    --color-announcement: #1BDE8F;

    /* Typography - Neo-Brutalist Fonts */
    --font-heading: 'Syne', {{ font_heading.family }}, sans-serif;
    --font-body: 'DM Sans', {{ font_body.family }}, sans-serif;
    --font-mono: 'Overpass Mono', monospace;
    --font-display: 'Overpass', sans-serif;
    --font-poppins: 'Poppins', sans-serif;
    --font-roboto: 'Roboto', sans-serif;
    --font-size-base: 16px;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;
    --spacing-3xl: 5rem;

    /* Layout */
    --container-max-width: 1440px;
    --container-padding: 1rem;
    --header-height: 80px;
    --nav-height: 50px;
    --announcement-height: 43px;

    /* Borders - Neo-Brutalist */
    --border-radius-sm: 4px;
    --border-radius-md: 6px;
    --border-radius-lg: 10px;
    --border-radius-xl: 16px;
    --border-radius-pill: 34px;
    --border-width: 1px;
    --border-width-thick: 2px;

    /* Neo-Brutalist Box Shadows */
    --shadow-brutal-sm: 2px 2px 0px 0px var(--color-black);
    --shadow-brutal-md: 4px 4px 0px 0px var(--color-black);
    --shadow-brutal-lg: 5px 4px 0px 0px var(--color-black);
    --shadow-brutal-primary: 4px 4px 3.9px 0px var(--color-primary);
    --shadow-brutal-green: 4px 4px 0px 3px var(--color-accent);
    --shadow-brutal-blue: 6px 6px 0px 0px var(--color-primary);
    --shadow-brutal-card: 3px 3px 0px 0px var(--color-black);
    --shadow-brutal-button: 2px 2px 0px 0px var(--color-black);
    
    /* Standard Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);

    /* Feature Card Gradients */
    --gradient-blue: linear-gradient(-28.68deg, rgba(0, 22, 121, 1) 5.12%, rgba(99, 185, 226, 1) 99.44%);
    --gradient-blue-radial: radial-gradient(circle, rgba(124, 194, 228, 1) 0%, rgba(0, 22, 121, 1) 100%);

    /* Transitions */
    --transition-speed: 0.3s;
    --transition-timing: ease-in-out;
    --transition-fast: 0.15s;

    /* Z-index */
    --z-dropdown: 1000;
    --z-sticky: 1020;
    --z-modal-backdrop: 1040;
    --z-modal: 1050;
    --z-toast: 1060;

    /* Grid Background Pattern */
    --grid-pattern: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg stroke='%23e0e0e0' stroke-width='0.5'%3E%3Cpath d='M0 0h40v40H0z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
{% endstyle %}

{%- comment -%}
  Font-face declarations are automatically generated by Shopify's content_for_header
  when using font_picker settings. No manual generation needed to avoid duplicates.
{%- endcomment -%}
