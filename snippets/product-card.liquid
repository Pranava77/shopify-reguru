{%- comment -%}
  Product Card Snippet
  
  Accepts:
  - product: {Object} Product Liquid object
  - show_discount: {Boolean} Whether to show discount badge (default: true)
  - show_rating: {Boolean} Whether to show rating (default: true)
  - badge_enabled: {Boolean} Whether badge is enabled (default: true)
  - badge_text: {String} Custom badge text (default: auto-calculated discount)
  - badge_position: {String} Badge position: "top-left", "top-right", "bottom-left", "bottom-right" (default: "top-left")
  - badge_style: {String} Badge style: "discount", "custom" (default: "discount")
  - badge_color: {String} Badge background color (default: var(--color-blue))
  - badge_text_color: {String} Badge text color (default: var(--color-white))
{%- endcomment -%}

{%- liquid
  assign show_discount = show_discount | default: true
  assign show_rating = show_rating | default: true
  assign badge_enabled = badge_enabled | default: true
  assign badge_position = badge_position | default: 'top-left'
  assign badge_style = badge_style | default: 'discount'
  assign badge_color = badge_color | default: 'var(--color-blue)'
  assign badge_text_color = badge_text_color | default: 'var(--color-white)'
  
  assign compare_at_price = product.compare_at_price
  assign price = product.price
  
  if compare_at_price > price
    assign discount_percentage = compare_at_price | minus: price | times: 100 | divided_by: compare_at_price | round
  endif
  
  assign show_badge = false
  assign badge_display_text = ''
  
  if badge_enabled
    if badge_style == 'discount' and show_discount and discount_percentage
      assign show_badge = true
      assign badge_display_text = discount_percentage | append: '% off'
    elsif badge_style == 'custom' and badge_text != blank
      assign show_badge = true
      assign badge_display_text = badge_text
    endif
  endif
-%}

{%- liquid
  comment
    Get category from metafield if available, otherwise use product_type
  endcomment
  assign product_category = product.metafields.custom.category.value | default: product.metafields.custom.category | default: product.product_type
  assign product_brand = product.metafields.custom.brand.value | default: product.metafields.custom.brand | default: product.vendor
  
  comment
    Build metafield data attributes for filtering
  endcomment
  assign product_metafields_data = ''
  if product.metafields.custom.category != blank
    assign category_value = product.metafields.custom.category.value | default: product.metafields.custom.category
    assign product_metafields_data = product_metafields_data | append: 'custom:category:' | append: category_value | handleize | append: ','
  endif
  if product.metafields.custom.brand != blank
    assign brand_value = product.metafields.custom.brand.value | default: product.metafields.custom.brand
    assign product_metafields_data = product_metafields_data | append: 'custom:brand:' | append: brand_value | handleize | append: ','
  endif
-%}
<article 
  class="product-card card--sm"
  data-product-category="{{ product_category | handleize }}"
  data-product-brand="{{ product_brand | handleize }}"
  data-product-price="{{ product.price }}"
  data-product-tags="{% for tag in product.tags %}{{ tag | handleize }}{% unless forloop.last %} {% endunless %}{% endfor %}"
  data-product-metafields="{{ product_metafields_data }}"
>
  {%- if show_badge -%}
    <div class="product-card__badge product-card__badge--{{ badge_position }}" style="background-color: {{ badge_color }}; color: {{ badge_text_color }};">
      {{ badge_display_text }}
    </div>
  {%- endif -%}

  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__image">
      {%- if product.featured_image != blank -%}
        <img 
          src="{{ product.featured_image | image_url: width: 400 }}"
          srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                  {{ product.featured_image | image_url: width: 400 }} 400w,
                  {{ product.featured_image | image_url: width: 600 }} 600w"
          sizes="(max-width: 576px) 100vw, (max-width: 992px) 50vw, (max-width: 1200px) 33vw, 25vw"
          alt="{{ product.featured_image.alt | default: product.title }}"
          width="400"
          height="300"
          loading="lazy"
        >
      {%- else -%}
        <div class="product-card__placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    <div class="product-card__info">
      <div class="product-card__header">
        <h3 class="product-card__title">{{ product.title }}</h3>
        {%- if show_rating and product.metafields.reviews.rating.value -%}
          <div class="product-card__rating">
            {%- for i in (1..5) -%}
              <svg class="product-card__star{% if i <= product.metafields.reviews.rating.value %} product-card__star--filled{% endif %}" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7 1L8.5 5H12.5L9 8L10.5 12L7 9.5L3.5 12L5 8L1.5 5H5.5L7 1Z" fill="currentColor"/>
              </svg>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <p class="product-card__description">
        {{ product.description | strip_html | truncate: 120 }}
      </p>
    </div>
  </a>

  <div class="product-card__footer">
    <div class="product-card__price">
      {{ price | money }}
    </div>
    <div class="product-card__actions">
      <a href="{{ product.url }}" class="product-card__btn product-card__btn--primary">
        View Details
      </a>
      {%- assign card_variant = product.selected_or_first_available_variant -%}
      <button 
        type="button" 
        class="product-card__btn product-card__btn--secondary{% unless card_variant.available %} product-card__btn--sold-out{% endunless %}" 
        data-add-to-cart 
        data-variant-id="{{ card_variant.id }}"
        {% unless card_variant.available %}disabled{% endunless %}
      >
        {%- if card_variant.available -%}
          Add to cart
        {%- else -%}
          Sold out
        {%- endif -%}
      </button>
    </div>
  </div>
</article>

{% stylesheet %}
.product-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 17px;
  background-color: var(--color-white);
  border: 0.5px solid var(--color-black);
  border-radius: 6px;
  box-shadow: 4px 4px 0px 0px var(--color-black);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.product-card.card--sm {
  border-radius: 6px;
}

.product-card:hover {
  transform: translate(-2px, -2px);
  box-shadow: 6px 6px 0px 0px var(--color-black);
}

.product-card__badge {
  position: absolute;
  padding: 4px 12px;
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 14px;
  border-radius: 0 2px 0 0;
  box-shadow: 1px 2px 0px 0.5px var(--color-black);
  z-index: 2;
}

.product-card__badge--top-left {
  top: 0;
  left: 0;
  border-radius: 0 2px 0 0;
}

.product-card__badge--top-right {
  top: 0;
  right: 0;
  border-radius: 2px 0 0 0;
}

.product-card__badge--bottom-left {
  bottom: 0;
  left: 0;
  border-radius: 0 0 2px 0;
}

.product-card__badge--bottom-right {
  bottom: 0;
  right: 0;
  border-radius: 0 0 0 2px;
}

.product-card__link {
  display: flex;
  flex-direction: column;
  gap: 15px;
  text-decoration: none;
  color: inherit;
}

.product-card__image {
  position: relative;
  width: 100%;
  aspect-ratio: 1.7;
  overflow: hidden;
}

.product-card__image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-card__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-gray);
}

.product-card__placeholder svg {
  width: 60%;
  height: 60%;
  opacity: 0.5;
}

.product-card__info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-card__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.product-card__title {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 17px;
  line-height: 1.2;
  color: var(--color-black);
  margin: 0;
}

.product-card__rating {
  display: flex;
  gap: 2px;
}

.product-card__star {
  color: var(--color-gray);
}

.product-card__star--filled {
  color: var(--color-star);
}

.product-card__description {
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 12px;
  line-height: 1.4;
  color: var(--color-black);
  margin: 0;
}

.product-card__footer {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-card__price {
  font-family: Overpass;
  font-weight: 700;
  font-size: 18px;
  color: var(--color-black);
  text-align: center;
}

.product-card__actions {
  display: flex;
  gap: 10px;
}

.product-card__btn {
  flex: 1;
  padding: 12px 16px;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 14px;
  text-align: center;
  text-decoration: none;
  border: 2px solid var(--color-black);
  border-radius: 4px;
  box-shadow: 3px 3px 0px 0px var(--color-black);
  cursor: pointer;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  white-space: nowrap;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.product-card__btn--primary {
  background-color: var(--color-light-blue);
  color: var(--color-black);
}

.product-card__btn--secondary {
  background-color: rgba(40, 217, 142, 1);
  color: var(--color-black);
}

.product-card__btn--sold-out,
.product-card__btn--sold-out:hover {
  background-color: var(--color-gray);
  color: var(--color-black);
  cursor: not-allowed;
  opacity: 0.7;
  transform: none;
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.product-card__btn:hover {
  transform: translate(-2px, -2px);
  box-shadow: 5px 5px 0px 0px var(--color-black);
}

.product-card__btn:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

@media screen and (max-width: 768px) {
  .product-card {
    padding: 14px;
    gap: 12px;
    box-shadow: 4px 4px 0px 0px var(--color-black);
  }

  .product-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0px 0px var(--color-black);
  }

  .product-card__price {
    font-size: 16px;
  }

  .product-card__btn {
    padding: 10px 14px;
    font-size: 13px;
  }
}

@media screen and (max-width: 576px) {
  .product-card {
    padding: 12px;
    gap: 10px;
  }

  .product-card__title {
    font-size: 15px;
  }

  .product-card__description {
    font-size: 11px;
  }

  .product-card__price {
    font-size: 15px;
  }

  .product-card__btn {
    padding: 10px 12px;
    font-size: 12px;
  }
}

@media screen and (max-width: 480px) {
  .product-card {
    padding: 10px;
  }

  .product-card__title {
    font-size: 14px;
  }

  .product-card__price {
    font-size: 14px;
  }

  .product-card__btn {
    font-size: 11px;
    padding: 9px 10px;
  }
}
{% endstylesheet %}
