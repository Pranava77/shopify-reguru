{%- comment -%}
  Product Card Snippet
  
  Accepts:
  - product: {Object} Product Liquid object
  - show_discount: {Boolean} Whether to show discount badge (default: true)
  - show_rating: {Boolean} Whether to show rating (default: true)
{%- endcomment -%}

{%- liquid
  assign show_discount = show_discount | default: true
  assign show_rating = show_rating | default: true
  
  assign compare_at_price = product.compare_at_price
  assign price = product.price
  
  if compare_at_price > price
    assign discount_percentage = compare_at_price | minus: price | times: 100 | divided_by: compare_at_price | round
  endif
-%}

<article class="product-card card--sm">
  {%- if show_discount and discount_percentage -%}
    <div class="product-card__badge">
      {{ discount_percentage }}% off
    </div>
  {%- endif -%}

  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__image">
      {%- if product.featured_image != blank -%}
        <img 
          src="{{ product.featured_image | image_url: width: 400 }}"
          alt="{{ product.featured_image.alt | default: product.title }}"
          width="400"
          height="300"
          loading="lazy"
        >
      {%- else -%}
        <div class="product-card__placeholder">
          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>

    <div class="product-card__info">
      <div class="product-card__header">
        <h3 class="product-card__title">{{ product.title }}</h3>
        {%- if show_rating and product.metafields.reviews.rating.value -%}
          <div class="product-card__rating">
            {%- for i in (1..5) -%}
              <svg class="product-card__star{% if i <= product.metafields.reviews.rating.value %} product-card__star--filled{% endif %}" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7 1L8.5 5H12.5L9 8L10.5 12L7 9.5L3.5 12L5 8L1.5 5H5.5L7 1Z" fill="currentColor"/>
              </svg>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <p class="product-card__description">
        {{ product.description | strip_html | truncate: 120 }}
      </p>
    </div>
  </a>

  <div class="product-card__footer">
    <div class="product-card__price btn btn--green">
      {{ price | money }}
    </div>
    <div class="product-card__actions">
      <button type="button" class="product-card__btn btn btn--secondary" data-buy-now data-variant-id="{{ product.selected_or_first_available_variant.id }}">
        Buy Now
      </button>
      <button type="button" class="product-card__btn btn btn--blue" data-add-to-cart data-variant-id="{{ product.selected_or_first_available_variant.id }}">
        Add to cart
      </button>
    </div>
  </div>
</article>

{% stylesheet %}
.product-card {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 17px;
  background-color: var(--color-white);
  border: 0.5px solid var(--color-black);
  border-radius: 6px;
  box-shadow: var(--shadow-md);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.product-card.card--sm {
  border-radius: 6px;
}

.product-card:hover {
  transform: translate(-2px, -2px);
  box-shadow: 6px 6px 0px 0px var(--color-black);
}

.product-card__badge {
  position: absolute;
  top: 0;
  left: 0;
  padding: 4px 12px;
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 14px;
  color: var(--color-white);
  background-color: var(--color-blue);
  border-radius: 0 2px 0 0;
  box-shadow: 1px 2px 0px 0.5px var(--color-black);
  z-index: 2;
}

.product-card__link {
  display: flex;
  flex-direction: column;
  gap: 15px;
  text-decoration: none;
  color: inherit;
}

.product-card__image {
  position: relative;
  width: 100%;
  aspect-ratio: 1.7;
  overflow: hidden;
}

.product-card__image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.product-card__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-gray);
}

.product-card__placeholder svg {
  width: 60%;
  height: 60%;
  opacity: 0.5;
}

.product-card__info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-card__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.product-card__title {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 17px;
  line-height: 1.2;
  color: var(--color-black);
  margin: 0;
}

.product-card__rating {
  display: flex;
  gap: 2px;
}

.product-card__star {
  color: var(--color-gray);
}

.product-card__star--filled {
  color: var(--color-star);
}

.product-card__description {
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 12px;
  line-height: 1.4;
  color: var(--color-black);
  margin: 0;
}

.product-card__footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20px;
}

.product-card__price {
  padding: 5px 9px;
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 11px;
  border-width: 1px;
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.product-card__actions {
  display: flex;
  gap: 14px;
}

.product-card__btn {
  padding: 5px 9px;
  font-family: var(--font-product);
  font-weight: 500;
  font-size: 11px;
  border-width: 1px;
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.product-card__btn:hover {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.product-card__btn:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}
{% endstylesheet %}
