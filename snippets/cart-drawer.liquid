{%- comment -%}
  Cart Drawer Snippet
  
  A slide-out cart drawer that displays cart contents without leaving the current page.
  Opens when items are added to cart via the Add to Cart button.
{%- endcomment -%}

<div class="cart-drawer" id="CartDrawer" data-cart-drawer aria-hidden="true">
  <div class="cart-drawer__overlay" data-cart-drawer-overlay></div>
  
  <div class="cart-drawer__panel" role="dialog" aria-modal="true" aria-label="{{ 'general.cart.title' | t | default: 'Shopping Cart' }}">
    <header class="cart-drawer__header">
      <h2 class="cart-drawer__title">{{ 'general.cart.title' | t | default: 'Shopping Cart' }}</h2>
      <button type="button" class="cart-drawer__close" data-cart-drawer-close aria-label="{{ 'accessibility.close' | t | default: 'Close' }}">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 5L15 15M15 5L5 15" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </header>

    <div class="cart-drawer__content" data-cart-drawer-content>
      {%- if cart.item_count > 0 -%}
        <div class="cart-drawer__items" data-cart-drawer-items>
          {%- for item in cart.items -%}
            {% render 'cart-drawer-item', item: item %}
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="cart-drawer__empty" data-cart-drawer-empty>
          <p class="cart-drawer__empty-text">{{ 'general.cart.empty' | t | default: 'Your cart is empty' }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn btn--blue cart-drawer__continue">
            {{ 'general.cart.continue_shopping' | t | default: 'Continue Shopping' }}
          </a>
        </div>
      {%- endif -%}
    </div>

    <footer class="cart-drawer__footer" data-cart-drawer-footer {% if cart.item_count == 0 %}style="display: none;"{% endif %}>
      <div class="cart-drawer__subtotal">
        <span class="cart-drawer__subtotal-label">{{ 'general.cart.subtotal' | t | default: 'Subtotal' }}</span>
        <span class="cart-drawer__subtotal-value" data-cart-drawer-subtotal>{{ cart.total_price | money }}</span>
      </div>
      
      <p class="cart-drawer__note">{{ 'general.cart.shipping_note' | t | default: 'Shipping & taxes calculated at checkout' }}</p>
      
      <div class="cart-drawer__actions">
        <a href="{{ routes.cart_url }}" class="btn btn--secondary cart-drawer__view-cart">
          {{ 'general.cart.view_cart' | t | default: 'View Cart' }}
        </a>
        <a href="/checkout" class="btn btn--blue cart-drawer__checkout">
          {{ 'general.cart.checkout' | t | default: 'Checkout' }}
        </a>
      </div>
    </footer>
  </div>
</div>

{% stylesheet %}
.cart-drawer {
  position: fixed;
  inset: 0;
  z-index: 9999;
  pointer-events: none;
  visibility: hidden;
}

.cart-drawer.is-open {
  pointer-events: auto;
  visibility: visible;
}

.cart-drawer__overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.cart-drawer.is-open .cart-drawer__overlay {
  opacity: 1;
}

.cart-drawer__panel {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  max-width: 420px;
  background-color: var(--color-white);
  border-left: 2px solid var(--color-black);
  box-shadow: -8px 0 24px rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform 0.3s ease;
}

.cart-drawer.is-open .cart-drawer__panel {
  transform: translateX(0);
}

.cart-drawer__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 24px;
  border-bottom: 2px solid var(--color-black);
  background-color: var(--color-cream);
}

.cart-drawer__title {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 22px;
  color: var(--color-black);
  margin: 0;
}

.cart-drawer__close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  padding: 0;
  background-color: var(--color-white);
  border: 2px solid var(--color-black);
  border-radius: var(--radius-xs);
  box-shadow: 3px 3px 0 0 var(--color-black);
  color: var(--color-black);
  cursor: pointer;
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.cart-drawer__close:hover {
  transform: translate(-2px, -2px);
  box-shadow: 5px 5px 0 0 var(--color-black);
}

.cart-drawer__close:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0 0 var(--color-black);
}

.cart-drawer__content {
  flex: 1;
  overflow-y: auto;
  padding: 0;
}

.cart-drawer__items {
  display: flex;
  flex-direction: column;
}

.cart-drawer__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 24px;
  text-align: center;
  gap: 24px;
}

.cart-drawer__empty-text {
  font-family: var(--font-body);
  font-size: 16px;
  color: var(--color-text-secondary);
  margin: 0;
}

.cart-drawer__continue {
  padding: 12px 24px;
  font-size: 14px;
}

.cart-drawer__footer {
  padding: 20px 24px;
  border-top: 2px solid var(--color-black);
  background-color: var(--color-cream);
}

.cart-drawer__subtotal {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8px;
}

.cart-drawer__subtotal-label {
  font-family: var(--font-body);
  font-weight: 600;
  font-size: 16px;
  color: var(--color-black);
}

.cart-drawer__subtotal-value {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 22px;
  color: var(--color-black);
}

.cart-drawer__note {
  font-family: var(--font-body);
  font-size: 12px;
  color: var(--color-text-secondary);
  margin: 0 0 16px 0;
}

.cart-drawer__actions {
  display: flex;
  gap: 12px;
}

.cart-drawer__view-cart,
.cart-drawer__checkout {
  flex: 1;
  padding: 12px 16px;
  font-size: 14px;
  text-align: center;
  text-decoration: none;
}

@media screen and (max-width: 480px) {
  .cart-drawer__panel {
    max-width: 100%;
  }
  
  .cart-drawer__header {
    padding: 16px 20px;
  }
  
  .cart-drawer__footer {
    padding: 16px 20px;
  }
  
  .cart-drawer__actions {
    flex-direction: column;
  }
}
{% endstylesheet %}

