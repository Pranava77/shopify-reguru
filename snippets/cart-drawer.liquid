<div class="cart-drawer__overlay" data-cart-overlay hidden></div>
<div class="cart-drawer__content" data-cart-content>
  <div class="cart-drawer__header">
    <h2 class="cart-drawer__title">{{ 'cart.general.title' | t }}</h2>
    <button type="button" class="cart-drawer__close" data-cart-close aria-label="{{ 'general.accessibility.close' | t }}">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <div class="cart-drawer__items" data-cart-items>
    <!-- Cart items will be loaded via JavaScript -->
  </div>

  <div class="cart-drawer__footer">
    <div class="cart-drawer__subtotal">
      <span>{{ 'cart.general.subtotal' | t }}</span>
      <span class="cart-drawer__subtotal-price" data-cart-subtotal>{{ cart.total_price | money }}</span>
    </div>
    
    <a href="{{ routes.cart_url }}" class="cart-drawer__view-cart">
      {{ 'cart.general.view_cart' | t }}
    </a>
    
    <button type="button" class="cart-drawer__checkout" data-cart-checkout>
      {{ 'cart.general.checkout' | t }}
    </button>
  </div>
</div>

{% stylesheet %}
  .cart-drawer {
    position: fixed;
    inset: 0;
    z-index: var(--z-modal);
    pointer-events: none;
  }

  .cart-drawer__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity var(--transition-speed);
  }

  .cart-drawer[data-open] .cart-drawer__overlay {
    opacity: 1;
    pointer-events: all;
  }

  .cart-drawer__content {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 400px;
    height: 100%;
    background-color: white;
    transform: translateX(100%);
    transition: transform var(--transition-speed);
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow-lg);
  }

  .cart-drawer[data-open] .cart-drawer__content {
    transform: translateX(0);
    pointer-events: all;
  }

  .cart-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md);
    border-bottom: 1px solid var(--color-border);
  }

  .cart-drawer__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
  }

  .cart-drawer__close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-text);
  }

  .cart-drawer__items {
    flex: 1;
    overflow-y: auto;
    padding: var(--spacing-md);
  }

  .cart-drawer__footer {
    padding: var(--spacing-md);
    border-top: 1px solid var(--color-border);
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }

  .cart-drawer__view-cart {
    display: block;
    width: 100%;
    padding: 0.875rem;
    text-align: center;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
    border-radius: var(--border-radius-md);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    transition: all var(--transition-speed);
  }

  .cart-drawer__view-cart:hover {
    background-color: var(--color-primary);
    color: white;
  }

  .cart-drawer__checkout {
    width: 100%;
    padding: 0.875rem;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-md);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-speed);
  }

  .cart-drawer__checkout:hover {
    background-color: #1E3A8A;
  }
{% endstylesheet %}



