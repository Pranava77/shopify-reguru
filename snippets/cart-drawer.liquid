{%- liquid
  assign drawer_title = 'Cart' | t | default: 'Shopping Cart'
  assign continue_shopping_text = 'Continue Shopping' | t | default: 'Continue Shopping'
  assign checkout_text = 'Checkout' | t | default: 'Checkout'
  assign empty_cart_title = 'Your cart is empty' | t | default: 'Your cart is empty'
  assign empty_cart_text = 'Continue shopping to add items to your cart.' | t | default: 'Continue shopping to add items to your cart.'
-%}

<div class="cart-drawer" id="cart-drawer" aria-hidden="true">
  <div class="cart-drawer__overlay" data-cart-drawer-overlay></div>
  <div class="cart-drawer__panel">
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title">{{ drawer_title }}</h2>
      <button type="button" class="cart-drawer__close" data-cart-drawer-close aria-label="Close cart">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>

    <div class="cart-drawer__content" data-cart-drawer-content>
      <div class="cart-drawer__loading" data-cart-drawer-loading>
        <p>Loading cart...</p>
      </div>

      <div class="cart-drawer__empty" data-cart-drawer-empty style="display: none;">
        <h3 class="cart-drawer__empty-title">{{ empty_cart_title }}</h3>
        <p class="cart-drawer__empty-text">{{ empty_cart_text }}</p>
        <button type="button" class="btn btn--blue cart-drawer__continue-btn" data-cart-drawer-close>
          {{ continue_shopping_text }}
        </button>
      </div>

      <div class="cart-drawer__items" data-cart-drawer-items style="display: none;">
        <div class="cart-drawer__items-list" data-cart-drawer-items-list></div>
        
        <div class="cart-drawer__summary" data-cart-drawer-summary>
          <div class="cart-drawer__summary-row">
            <span class="cart-drawer__summary-label">Subtotal</span>
            <span class="cart-drawer__summary-value" data-cart-drawer-subtotal>$0.00</span>
          </div>
          <div class="cart-drawer__summary-row cart-drawer__summary-row--total">
            <span class="cart-drawer__summary-label">Total</span>
            <span class="cart-drawer__summary-value" data-cart-drawer-total>$0.00</span>
          </div>
        </div>

        <div class="cart-drawer__actions">
          <a href="{{ routes.cart_url }}" class="btn btn--secondary cart-drawer__view-cart">
            View Cart
          </a>
          <form action="{{ routes.cart_url }}" method="post">
            <button type="submit" name="checkout" class="btn btn--blue cart-drawer__checkout">
              {{ checkout_text }}
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
.cart-drawer {
  position: fixed;
  inset: 0;
  z-index: 10000;
  pointer-events: none;
  visibility: hidden;
}

.cart-drawer.is-open {
  visibility: visible;
  pointer-events: auto;
}

.cart-drawer__overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.cart-drawer.is-open .cart-drawer__overlay {
  opacity: 1;
}

.cart-drawer__panel {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 480px;
  height: 100%;
  background-color: var(--color-white);
  box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.cart-drawer.is-open .cart-drawer__panel {
  transform: translateX(0);
}

.cart-drawer__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px;
  border-bottom: 1px solid var(--color-gray);
}

.cart-drawer__title {
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 24px;
  color: var(--color-black);
  margin: 0;
}

.cart-drawer__close {
  width: 40px;
  height: 40px;
  padding: 0;
  background: none;
  border: 1px solid var(--color-black);
  border-radius: var(--radius-xs);
  cursor: pointer;
  color: var(--color-black);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.cart-drawer__close:hover {
  transform: translate(-1px, -1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.cart-drawer__close:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

.cart-drawer__content {
  flex: 1;
  overflow-y: auto;
  padding: 24px;
  display: flex;
  flex-direction: column;
}

.cart-drawer__loading,
.cart-drawer__empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  text-align: center;
  padding: 40px 20px;
}

.cart-drawer__empty-title {
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 24px;
  color: var(--color-black);
  margin: 0 0 16px 0;
}

.cart-drawer__empty-text {
  font-family: var(--font-body);
  font-size: 16px;
  color: var(--color-text-secondary);
  margin: 0 0 24px 0;
}

.cart-drawer__continue-btn {
  padding: 12px 32px;
  font-size: 14px;
}

.cart-drawer__items {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
}

.cart-drawer__items-list {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.cart-drawer-item {
  display: grid;
  grid-template-columns: 80px 1fr;
  gap: 16px;
  padding: 16px;
  background-color: var(--color-white);
  border: 0.5px solid var(--color-black);
  border-radius: var(--radius-xs);
  box-shadow: var(--shadow-xs);
}

.cart-drawer-item__image {
  width: 80px;
  height: 80px;
  overflow: hidden;
  border-radius: var(--radius-xs);
  border: 0.5px solid var(--color-black);
}

.cart-drawer-item__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-drawer-item__details {
  display: flex;
  flex-direction: column;
  gap: 8px;
  position: relative;
}

.cart-drawer-item__title {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 16px;
  color: var(--color-black);
  margin: 0;
  line-height: 1.2;
}

.cart-drawer-item__title a {
  color: inherit;
  text-decoration: none;
}

.cart-drawer-item__variant {
  font-family: var(--font-body);
  font-size: 12px;
  color: var(--color-text-secondary);
  margin: 0;
}

.cart-drawer-item__price {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 16px;
  color: var(--color-black);
}

.cart-drawer-item__quantity {
  display: flex;
  align-items: center;
  gap: 8px;
}

.cart-drawer-item__quantity-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  padding: 0;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-xs);
  box-shadow: var(--shadow-xs);
  color: var(--color-black);
  cursor: pointer;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.cart-drawer-item__quantity-btn:hover {
  transform: translate(-1px, -1px);
  box-shadow: var(--shadow-sm);
}

.cart-drawer-item__quantity-btn:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

.cart-drawer-item__quantity-input {
  width: 50px;
  height: 28px;
  padding: 0 6px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  text-align: center;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-xs);
  box-shadow: var(--shadow-xs);
}

.cart-drawer-item__remove {
  position: absolute;
  top: 0;
  right: 0;
  width: 24px;
  height: 24px;
  padding: 0;
  background: none;
  border: none;
  color: var(--color-text-secondary);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color var(--transition-fast);
}

.cart-drawer-item__remove:hover {
  color: var(--color-navy);
}

.cart-drawer__summary {
  padding: 20px 0;
  border-top: 1px solid var(--color-gray);
  border-bottom: 1px solid var(--color-gray);
  margin-bottom: 20px;
}

.cart-drawer__summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 0;
}

.cart-drawer__summary-row--total {
  border-top: 2px solid var(--color-black);
  padding-top: 12px;
  margin-top: 8px;
}

.cart-drawer__summary-label {
  font-family: var(--font-body);
  font-weight: 500;
  font-size: 16px;
  color: var(--color-black);
}

.cart-drawer__summary-value {
  font-family: var(--font-product);
  font-weight: 700;
  font-size: 18px;
  color: var(--color-black);
}

.cart-drawer__summary-row--total .cart-drawer__summary-value {
  font-size: 24px;
}

.cart-drawer__actions {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.cart-drawer__view-cart,
.cart-drawer__checkout {
  width: 100%;
  padding: 12px 24px;
  font-size: 14px;
}

@media screen and (max-width: 576px) {
  .cart-drawer__panel {
    max-width: 100%;
  }

  .cart-drawer__header {
    padding: 20px;
  }

  .cart-drawer__content {
    padding: 20px;
  }

  .cart-drawer-item {
    grid-template-columns: 70px 1fr;
    gap: 12px;
    padding: 12px;
  }

  .cart-drawer-item__image {
    width: 70px;
    height: 70px;
  }
}
{% endstylesheet %}

