{% stylesheet %}
  .brand-marquee {
    padding: var(--spacing-xl) 0;
    overflow: hidden;
    position: relative;
    background-color: var(--color-white);
  }

  .brand-marquee__wrapper {
    transform: rotate(-3.41deg);
    position: relative;
    left: -5%;
    width: 110%;
    overflow: hidden;
    background-color: var(--color-white);
    border-top: 0.5px solid var(--color-black);
    border-bottom: 0.5px solid var(--color-black);
    padding: 15px 0;
  }

  .brand-marquee__strip {
    display: flex;
    width: max-content;
    animation: marquee 30s linear infinite;
  }

  .brand-marquee__content {
    display: flex;
    align-items: center;
    gap: 40px;
    padding-right: 40px;
  }

  .brand-marquee__item {
    font-family: var(--font-roboto);
    font-size: 16px;
    font-weight: var(--font-weight-medium);
    color: var(--color-black);
    text-transform: uppercase;
    white-space: nowrap;
    letter-spacing: 0.96px;
  }

  .brand-marquee__dot {
    font-size: 14px;
    color: var(--color-black);
    opacity: 0.5;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause animation on hover */
  .brand-marquee:hover .brand-marquee__strip {
    animation-play-state: paused;
  }

  @media screen and (max-width: 768px) {
    .brand-marquee__wrapper {
      transform: rotate(-2deg);
      padding: 10px 0;
    }

    .brand-marquee__item {
      font-size: 12px;
    }

    .brand-marquee__content {
      gap: 24px;
      padding-right: 24px;
    }
  }
{% endstylesheet %}

