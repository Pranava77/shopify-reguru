  assign subtitle = section.settings.subtitle | default: 'Get in touch to start your franchise with ReGuru'
  assign phone = section.settings.phone | default: '+91 8123456789'
  assign email = section.settings.email | default: 'demo@gmail.com'
  assign address = section.settings.address | default: '2nd floor central complex sv road near mantri mall seshadripuram bengaluru 560020'
  assign contact_image = section.settings.contact_image
  assign facebook_url = section.settings.facebook_url
  assign twitter_url = section.settings.twitter_url
  assign instagram_url = section.settings.instagram_url
-%}

<section class="franchise-section">
