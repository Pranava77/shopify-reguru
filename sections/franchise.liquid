          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="âœ“">
          
          <div class="franchise-section__form-row">
            <div class="franchise-section__form-group">
              <label for="franchise-first-name" class="franchise-section__form-label">First Name</label>
              <input 
                type="text" 
                id="franchise-first-name" 
                name="contact[first_name]" 
                class="franchise-section__form-input"
                required
              >
            </div>
            
            <div class="franchise-section__form-group">
              <label for="franchise-last-name" class="franchise-section__form-label">Last Name</label>
              <input 
                type="text" 
                id="franchise-last-name" 
                name="contact[last_name]" 
                class="franchise-section__form-input"
                placeholder="Doe"
              >
            </div>
          </div>
          
          <div class="franchise-section__form-row">
            <div class="franchise-section__form-group">
              <label for="franchise-email" class="franchise-section__form-label">Email</label>
              <input 
                type="email" 
                id="franchise-email" 
                name="contact[email]" 
                class="franchise-section__form-input"
                required
              >
            </div>
            
            <div class="franchise-section__form-group">
              <label for="franchise-phone" class="franchise-section__form-label">Phone Number</label>
              <input 
                type="tel" 
                id="franchise-phone" 
                name="contact[phone]" 
                class="franchise-section__form-input"
                placeholder="+91 012 3456 789"
              >
            </div>
          </div>
          
          <div class="franchise-section__form-group franchise-section__form-group--full">
            <label for="franchise-message" class="franchise-section__form-label">Message</label>
            <textarea 
              id="franchise-message" 
              name="contact[body]" 
              class="franchise-section__form-textarea"
              rows="5"
              placeholder="Write your message.."
            ></textarea>
          </div>
          
          <button type="submit" class="franchise-section__form-submit">
            Apply now
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.franchise-section {
  position: relative;
  min-height: 100vh;
  padding: 120px 0 80px;
  background-color: var(--color-white);
  overflow: hidden;
}

.franchise-section__background {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}

.franchise-section__pattern {
  position: absolute;
  opacity: 0.42;
}

.franchise-section__pattern--top {
  top: 7.33%;
  left: -0.21%;
  right: 0;
  bottom: 42.37%;
  background: linear-gradient(135deg, rgba(177, 216, 255, 0.3) 0%, rgba(82, 148, 255, 0.2) 100%);
  clip-path: polygon(0 0, 100% 0, 100% 50%, 0 100%);
}

.franchise-section__pattern--bottom {
  top: 55.74%;
  left: 0.28%;
  right: -0.49%;
  bottom: -26.92%;
  background: linear-gradient(135deg, rgba(177, 216, 255, 0.3) 0%, rgba(82, 148, 255, 0.2) 100%);
  clip-path: polygon(0 50%, 100% 0, 100% 100%, 0 100%);
}

.franchise-section__inner {
  position: relative;
  z-index: 1;
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.franchise-section__header {
  text-align: center;
  margin-bottom: 60px;
}

.franchise-section__title {
  font-family: var(--font-accent);
  font-size: 40px;
  font-weight: 700;
  color: var(--color-navy);
  margin-bottom: 16px;
}

.franchise-section__subtitle {
  font-family: var(--font-accent);
  font-size: 18px;
  font-weight: 500;
  color: #717171;
  margin: 0;
}

.franchise-section__content {
  display: grid;
  grid-template-columns: 491px 1fr;
  gap: 40px;
  align-items: start;
}

/* Contact Panel */
.franchise-section__contact-panel {
  position: relative;
  background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-dark-blue) 100%);
  border-radius: var(--radius-md);
  padding: 40px;
  min-height: 647px;
  overflow: hidden;
}

.franchise-section__contact-image {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.franchise-section__contact-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.3;
}

.franchise-section__contact-overlay {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.franchise-section__contact-title {
  font-family: var(--font-accent);
  font-size: 28px;
  font-weight: 600;
  color: var(--color-white);
  margin-bottom: 8px;
}

.franchise-section__contact-subtitle {
  font-family: var(--font-accent);
  font-size: 18px;
  font-weight: 400;
  color: #c9c9c9;
  margin-bottom: 48px;
}

.franchise-section__contact-details {
  display: flex;
  flex-direction: column;
  gap: 24px;
  margin-bottom: auto;
}

.franchise-section__contact-item {
  display: flex;
  align-items: flex-start;
  gap: 16px;
}

.franchise-section__contact-icon {
  flex-shrink: 0;
  width: 24px;
  height: 24px;
  color: var(--color-white);
  margin-top: 2px;
}

.franchise-section__contact-text {
  font-family: var(--font-accent);
  font-size: 16px;
  font-weight: 400;
  color: var(--color-white);
  line-height: 1.5;
}

.franchise-section__social-links {
  display: flex;
  gap: 24px;
  margin-top: 24px;
}

.franchise-section__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
  transition: transform var(--transition-fast);
}

.franchise-section__social-link:hover {
  transform: scale(1.1);
}

/* Form */
.franchise-section__form-wrapper {
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-md);
  padding: 40px;
  box-shadow: 0px 0px 60px 30px rgba(0, 0, 0, 0.03);
}

.franchise-section__form {
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.franchise-section__form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 45px 39px;
}

.franchise-section__form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.franchise-section__form-group--full {
  grid-column: 1 / -1;
}

.franchise-section__form-label {
  font-family: var(--font-accent);
  font-size: 12px;
  font-weight: 500;
  color: #8d8d8d;
  margin-bottom: 8px;
}

.franchise-section__form-input,
.franchise-section__form-textarea {
  width: 100%;
  padding: 12px 0;
  font-family: var(--font-accent);
  font-size: 14px;
  font-weight: 500;
  color: var(--color-black);
  background: transparent;
  border: none;
  border-bottom: 1px solid var(--color-black);
  outline: none;
  transition: border-color var(--transition-fast);
}

.franchise-section__form-input::placeholder,
.franchise-section__form-textarea::placeholder {
  color: #8d8d8d;
}

.franchise-section__form-input:focus,
.franchise-section__form-textarea:focus {
  border-bottom-color: var(--color-green);
}

.franchise-section__form-textarea {
  resize: vertical;
  min-height: 120px;
}

.franchise-section__form-submit {
  align-self: flex-start;
  padding: 8px 21px;
  font-family: var(--font-heading);
  font-size: 18px;
  font-weight: 400;
  color: var(--color-text);
  background-color: var(--color-white);
  border: 0.5px solid var(--color-black);
  border-radius: 0;
  box-shadow: 3px 3px 0px 0px var(--color-black);
  cursor: pointer;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.franchise-section__form-submit:hover {
  transform: translate(-2px, -2px);
  box-shadow: 5px 5px 0px 0px var(--color-black);
}

.franchise-section__form-submit:active {
  transform: translate(1px, 1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

/* Responsive */
@media screen and (max-width: 1200px) {
  .franchise-section__content {
    grid-template-columns: 400px 1fr;
    gap: 30px;
  }
}

@media screen and (max-width: 992px) {
  .franchise-section {
    padding: 80px 0 60px;
  }
  
  .franchise-section__content {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .franchise-section__contact-panel {
    min-height: auto;
  }
  
  .franchise-section__form-row {
    grid-template-columns: 1fr;
    gap: 30px;
  }
}

@media screen and (max-width: 576px) {
  .franchise-section__title {
    font-size: 32px;
  }
  
  .franchise-section__subtitle {
    font-size: 16px;
  }
  
  .franchise-section__form-wrapper {
    padding: 24px;
  }
  
  .franchise-section__contact-panel {
    padding: 24px;
  }
}
{% endstylesheet %}

