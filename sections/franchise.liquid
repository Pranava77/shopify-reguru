    <div class="franchise-section__pattern franchise-section__pattern--top"></div>
    <div class="franchise-section__pattern franchise-section__pattern--bottom"></div>
  </div>

  <div class="franchise-section__inner">
    <div class="franchise-section__header">
      <h1 class="franchise-section__title">{{ title }}</h1>
      <p class="franchise-section__subtitle">{{ subtitle }}</p>
    </div>

    <div class="franchise-section__content">
      <!-- Contact Information Panel (Left) -->
      <div class="franchise-section__contact-panel">
        {%- if contact_image != blank -%}
