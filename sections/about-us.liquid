<div class="about-us">
  <div class="about-us__container container">
    <h2 class="about-us__heading">{{ section.settings.heading }}</h2>
    
    <div class="about-us__content">
      <div class="about-us__image">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.heading | escape }}"
            width="600"
            height="auto"
            loading="lazy"
          >
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'about-us__placeholder' }}
        {%- endif -%}
      </div>
      
      <div class="about-us__text">
        {%- if section.settings.text != blank -%}
          <div class="about-us__description">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .about-us {
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-background);
  }

  .about-us__heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    color: var(--color-text);
  }

  .about-us__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .about-us__image {
    width: 100%;
  }

  .about-us__image img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
  }

  .about-us__placeholder {
    width: 100%;
    height: 420px;
    background-color: #f3f4f6;
    border-radius: var(--border-radius-lg);
  }

  .about-us__description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-light);
  }

  @media screen and (max-width: 768px) {
    .about-us__heading {
      font-size: 2rem;
    }

    .about-us__content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .about-us__description {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Reguru leads India's refurbished electronics revolution with certified quality, steep discounts, and total assurance. As the nation's sole offline chain, we equip individuals, businesses, schools, and corporates affordably while slashing e-waste</p>"
    }
  ],
  "presets": [
    {
      "name": "About Us"
    }
  ]
}
{% endschema %}


