{%- liquid
  assign hero_heading_part1 = section.settings.hero_heading_part1 | default: 'Beyond Refurbishment'
  assign hero_heading_part2 = section.settings.hero_heading_part2 | default: 'Redefining Smart'
  assign hero_heading_part3 = section.settings.hero_heading_part3 | default: 'Tech Ownership'
  assign hero_description = section.settings.hero_description | default: 'ReGuru is building a sustainable, circular tech ecosystem — making technology accessible while reducing e-waste.'
  assign join_franchise_button_text = section.settings.join_franchise_button_text | default: 'Join Franchise'
  assign join_franchise_button_url = section.settings.join_franchise_button_url | default: '/pages/franchise'
  
  assign franchise_title = section.settings.franchise_title | default: 'ReGuru Franchise'
  assign franchise_description = section.settings.franchise_description | default: 'Build a high-growth tech retail business with India's most trusted refurbished electronics brand.'
  assign franchise_feature_1 = section.settings.franchise_feature_1 | default: 'Proven business model'
  assign franchise_feature_2 = section.settings.franchise_feature_2 | default: 'High-margin product portfolio'
  assign franchise_card_button_text = section.settings.franchise_card_button_text | default: 'join franchise'
  
  assign brands_heading = section.settings.brands_heading | default: 'Top Brands  we sell:'
  assign expertise_heading = section.settings.expertise_heading | default: 'Our expertise'
  assign expertise_description = section.settings.expertise_description | default: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos.'
  
  assign home_page_heading = section.settings.home_page_heading
  assign home_page_description = section.settings.home_page_description
  assign home_page_image = section.settings.home_page_image
  assign home_page_link_text = section.settings.home_page_link_text | default: 'know more'
  assign home_page_link_url = section.settings.home_page_link_url | default: '/pages/about'
  
  assign is_home_page_variant = false
  if home_page_heading != blank
    assign is_home_page_variant = true
  endif
-%}

<section class="about-us" id="about-us-{{ section.id }}">
  <div class="about-us__container">
    {%- if is_home_page_variant -%}
      <!-- Home Page Variant -->
      <div class="about-us__home-variant">
        {%- if home_page_image != blank -%}
          <div class="about-us__home-image">
            <img 
              src="{{ home_page_image | image_url: width: 600 }}"
              alt="{{ home_page_image.alt | default: home_page_heading }}"
              width="600"
              height="400"
              loading="lazy"
            >
          </div>
        {%- endif -%}
        <div class="about-us__home-content">
          {%- if home_page_heading != blank -%}
            <h2 class="about-us__home-heading">{{ home_page_heading }}</h2>
          {%- endif -%}
          {%- if home_page_description != blank -%}
            <p class="about-us__home-description">{{ home_page_description }}</p>
          {%- endif -%}
          {%- if home_page_link_text != blank and home_page_link_url != blank -%}
            <a href="{{ home_page_link_url }}" class="about-us__home-link">{{ home_page_link_text }}</a>
          {%- endif -%}
        </div>
      </div>
    {%- else -%}
      <!-- Full About Us Page Variant -->
      <!-- Hero Section -->
      <div class="about-us__hero">
      <div class="about-us__hero-content">
        <h1 class="about-us__hero-heading">
          <span class="about-us__hero-heading--blue">{{ hero_heading_part1 }}</span>
          <span class="about-us__hero-heading--black">{{ hero_heading_part2 }}</span>
          <span class="about-us__hero-heading--black">{{ hero_heading_part3 }}</span>
        </h1>
        <p class="about-us__hero-description">{{ hero_description }}</p>
        <a href="{{ join_franchise_button_url }}" class="about-us__hero-button">
          {{ join_franchise_button_text }}
        </a>
        <div class="about-us__brands">
          <p class="about-us__brands-heading">{{ brands_heading }}</p>
          <div class="about-us__brands-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'brand' -%}
                <div class="about-us__brand-item">
                  {%- if block.settings.brand_image != blank -%}
                    <img 
                      src="{{ block.settings.brand_image | image_url: width: 120 }}"
                      alt="{{ block.settings.brand_name | default: 'Brand logo' }}"
                      width="120"
                      height="60"
                      loading="lazy"
                      class="about-us__brand-image"
                    >
                  {%- else -%}
                    <span class="about-us__brand-placeholder">{{ block.settings.brand_name | default: 'Logo' }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
      
      <!-- Franchise Card -->
      <div class="about-us__franchise-card">
        <h2 class="about-us__franchise-title">{{ franchise_title }}</h2>
        <p class="about-us__franchise-description">{{ franchise_description }}</p>
        <ul class="about-us__franchise-features">
          <li class="about-us__franchise-feature">
            {% render 'icon-checkmark', size: 10 %}
            <span>{{ franchise_feature_1 }}</span>
          </li>
          <li class="about-us__franchise-feature">
            {% render 'icon-checkmark', size: 10 %}
            <span>{{ franchise_feature_2 }}</span>
          </li>
        </ul>
        <a href="{{ join_franchise_button_url }}" class="about-us__franchise-button">
          {{ franchise_card_button_text }}
        </a>
      </div>
    </div>
    
    <!-- Expertise Section -->
    <div class="about-us__expertise">
      <h2 class="about-us__expertise-heading">{{ expertise_heading }}</h2>
      <p class="about-us__expertise-description">{{ expertise_description }}</p>
    </div>
    
    <!-- Content Blocks -->
    <div class="about-us__content-blocks">
      {%- for block in section.blocks -%}
        {%- if block.type == 'content_block' -%}
          <div class="about-us__content-block{% if block.settings.image_position == 'right' %} about-us__content-block--reverse{% endif %}">
            <div class="about-us__content-block-image">
              {%- if block.settings.image != blank -%}
                <img 
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.heading }}"
                  width="600"
                  height="400"
                  loading="lazy"
                >
              {%- else -%}
                <div class="about-us__content-block-placeholder"></div>
              {%- endif -%}
            </div>
            <div class="about-us__content-block-text">
              <p class="about-us__content-block-description">{{ block.settings.description }}</p>
              {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" class="about-us__content-block-link">{{ block.settings.link_text }}</a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    {%- endif -%}
  </div>
</section>

