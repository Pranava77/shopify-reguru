{%- comment -%}
  Related Products Section
  
  Displays related products using product recommendations or a manual collection
{%- endcomment -%}

{%- liquid
  assign section_title = section.settings.title | default: 'Related Products'
  assign products_to_show = section.settings.products_to_show | default: 4
  
  assign related_products = blank
  assign collection_handle = section.settings.collection
  
  if collection_handle != blank
    assign related_collection = collections[collection_handle]
    if related_collection != blank
      assign related_products = related_collection.products
    endif
  else
    assign related_products = product.metafields.custom.related_products.value
    if related_products == blank
      assign related_products = collections[product.collections.first.handle].products
      if related_products.size > 0
        assign related_products = related_products | where: 'id', '!=', product.id
      endif
    endif
  endif
-%}

{%- if related_products != blank and related_products.size > 0 -%}
  <section class="related-products" data-section-id="{{ section.id }}">
    <div class="related-products__container">
      <h2 class="related-products__title">{{ section_title }}</h2>
      
      <div class="related-products__grid">
        {%- for related_product in related_products limit: products_to_show -%}
          {%- if related_product.id != product.id -%}
            {%- render 'product-card', product: related_product, show_discount: true, show_rating: true -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

{% stylesheet %}
.related-products {
  padding: var(--spacing-2xl) 0;
  background-color: var(--color-white);
}

.related-products__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.related-products__title {
  font-family: var(--font-heading);
  font-size: 36px;
  font-weight: 600;
  line-height: normal;
  color: #101750;
  text-align: center;
  margin: 0 0 var(--spacing-2xl) 0;
}

.related-products__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-xl);
}

@media screen and (max-width: 1200px) {
  .related-products__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (max-width: 992px) {
  .related-products__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
  }
  
  .related-products__title {
    font-size: 28px;
  }
}

@media screen and (max-width: 576px) {
  .related-products {
    padding: var(--spacing-xl) 0;
  }
  
  .related-products__grid {
    grid-template-columns: 1fr;
  }
  
  .related-products__title {
    font-size: 24px;
    margin-bottom: var(--spacing-lg);
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Related Products",
  "tag": "section",
  "class": "related-products-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Related Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select a collection to show related products. If left empty, will try to use product's collection or recommendations."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Related Products"
    }
  ]
}
{% endschema %}

