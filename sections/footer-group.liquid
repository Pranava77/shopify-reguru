{%- liquid
  assign bg_image = section.settings.background_image
-%}

{%- comment -%}
  Footer Group Section
  Contains the main footer
{%- endcomment -%}

{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when '@app' -%}
      {% render block %}
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Footer Group",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ]
}
{% endschema %}

