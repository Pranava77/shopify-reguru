{%- liquid
  assign hero_heading_part1 = section.settings.hero_heading_part1 | default: 'Beyond Refurbishment'
  assign hero_heading_part2 = section.settings.hero_heading_part2 | default: 'Redefining Smart'
  assign hero_heading_part3 = section.settings.hero_heading_part3 | default: 'Tech Ownership'
  assign hero_description = section.settings.hero_description | default: 'ReGuru is building a sustainable, circular tech ecosystem — making technology accessible while reducing e-waste.'
  assign hero_cta_text = section.settings.hero_cta_text | default: 'Join Franchise'
  assign hero_cta_link = section.settings.hero_cta_link | default: routes.pages_url | append: '/franchise'
  
  assign franchise_title = section.settings.franchise_title | default: 'ReGuru Franchise'
  assign franchise_description = section.settings.franchise_description | default: 'Build a high-growth tech retail business with India's most trusted refurbished electronics brand.'
  assign franchise_feature1 = section.settings.franchise_feature1 | default: 'Proven business model'
  assign franchise_feature2 = section.settings.franchise_feature2 | default: 'High-margin product portfolio'
  assign franchise_cta_text = section.settings.franchise_cta_text | default: 'join franchise'
  assign franchise_cta_link = section.settings.franchise_cta_link | default: routes.pages_url | append: '/franchise'
  
  assign brands_heading = section.settings.brands_heading | default: 'Top Brands  we sell:'
  assign brand1_text = section.settings.brand1_text | default: 'logo one'
  assign brand2_text = section.settings.brand2_text | default: 'logo two'
  assign brand3_text = section.settings.brand3_text | default: 'logo three'
  assign brand4_text = section.settings.brand4_text | default: 'logo four'
  
  assign expertise_heading = section.settings.expertise_heading | default: 'Our expertise'
  assign expertise_description = section.settings.expertise_description | default: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos.'
  
  assign content1_image = section.settings.content1_image
  assign content1_text = section.settings.content1_text
  assign content1_link_text = section.settings.content1_link_text | default: 'Lorem ipsum'
  assign content1_link_url = section.settings.content1_link_url
  
  assign content2_image = section.settings.content2_image
  assign content2_text = section.settings.content2_text
  assign content2_link_text = section.settings.content2_link_text | default: 'Lorem ipsum'
  assign content2_link_url = section.settings.content2_link_url
  
  assign background_image1 = section.settings.background_image1
  assign background_image2 = section.settings.background_image2
-%}

<section class="about-page">
  {%- comment -%} Hero Section {%- endcomment -%}
  <div class="about-page__hero">
    <div class="about-page__hero-background">
      {%- if background_image1 != blank -%}
        <img 
          src="{{ background_image1 | image_url: width: 700 }}"
          alt=""
          class="about-page__hero-bg-image about-page__hero-bg-image--1"
          loading="lazy"
        >
      {%- endif -%}
      {%- if background_image2 != blank -%}
        <img 
          src="{{ background_image2 | image_url: width: 746 }}"
          alt=""
          class="about-page__hero-bg-image about-page__hero-bg-image--2"
          loading="lazy"
        >
      {%- endif -%}
      <div class="about-page__hero-dots">
        <div class="about-page__hero-dot"></div>
        <div class="about-page__hero-dot"></div>
        <div class="about-page__hero-dot"></div>
      </div>
      <div class="about-page__hero-squares">
        <div class="about-page__hero-square"></div>
        <div class="about-page__hero-square"></div>
      </div>
    </div>
    
    <div class="about-page__hero-content">
      <div class="about-page__hero-main">
        <h1 class="about-page__hero-heading">
          <span class="about-page__hero-heading--blue">{{ hero_heading_part1 }}</span>
          <span class="about-page__hero-heading--black">{{ hero_heading_part2 }}</span>
          <span class="about-page__hero-heading--black">{{ hero_heading_part3 }}</span>
        </h1>
        <p class="about-page__hero-description">{{ hero_description }}</p>
        <a href="{{ hero_cta_link }}" class="about-page__hero-cta">
          {{ hero_cta_text }}
        </a>
        
        {%- if brands_heading != blank -%}
          <div class="about-page__brands">
            <p class="about-page__brands-heading">{{ brands_heading }}</p>
            <div class="about-page__brands-list">
              {%- if brand1_text != blank -%}
                <div class="about-page__brand-item">{{ brand1_text }}</div>
              {%- endif -%}
              {%- if brand2_text != blank -%}
                <div class="about-page__brand-item">{{ brand2_text }}</div>
              {%- endif -%}
              {%- if brand3_text != blank -%}
                <div class="about-page__brand-item">{{ brand3_text }}</div>
              {%- endif -%}
              {%- if brand4_text != blank -%}
                <div class="about-page__brand-item">{{ brand4_text }}</div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
      
      <div class="about-page__franchise-card">
        <h3 class="about-page__franchise-title">{{ franchise_title }}</h3>
        <p class="about-page__franchise-description">{{ franchise_description }}</p>
        <ul class="about-page__franchise-features">
          {%- if franchise_feature1 != blank -%}
            <li class="about-page__franchise-feature">
              <svg class="about-page__franchise-check" width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.33333 2.5L3.75 7.08333L1.66667 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ franchise_feature1 }}</span>
            </li>
          {%- endif -%}
          {%- if franchise_feature2 != blank -%}
            <li class="about-page__franchise-feature">
              <svg class="about-page__franchise-check" width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.33333 2.5L3.75 7.08333L1.66667 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ franchise_feature2 }}</span>
            </li>
          {%- endif -%}
        </ul>
        <a href="{{ franchise_cta_link }}" class="about-page__franchise-cta">
          {{ franchise_cta_text }}
        </a>
      </div>
    </div>
  </div>
  
  {%- comment -%} Expertise Section {%- endcomment -%}
  {%- if expertise_heading != blank or expertise_description != blank -%}
    <div class="about-page__expertise">
      {%- if expertise_heading != blank -%}
        <h2 class="about-page__expertise-heading">{{ expertise_heading }}</h2>
      {%- endif -%}
      {%- if expertise_description != blank -%}
        <p class="about-page__expertise-description">{{ expertise_description }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}
  
  {%- comment -%} Content Blocks {%- endcomment -%}
  <div class="about-page__content-blocks">
    {%- if content1_text != blank or content1_image != blank -%}
      <div class="about-page__content-block">
        {%- if content1_image != blank -%}
          <div class="about-page__content-image">
            <img 
              src="{{ content1_image | image_url: width: 440 }}"
              alt=""
              width="440"
              height="279"
              loading="lazy"
            >
          </div>
        {%- else -%}
          <div class="about-page__content-placeholder"></div>
        {%- endif -%}
        <div class="about-page__content-text">
          {%- if content1_text != blank -%}
            <p class="about-page__content-paragraph">{{ content1_text }}</p>
          {%- endif -%}
          {%- if content1_link_text != blank and content1_link_url != blank -%}
            <a href="{{ content1_link_url }}" class="about-page__content-link">{{ content1_link_text }}</a>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
    
    {%- if content2_text != blank or content2_image != blank -%}
      <div class="about-page__content-block about-page__content-block--reverse">
        <div class="about-page__content-text">
          {%- if content2_text != blank -%}
            <p class="about-page__content-paragraph">{{ content2_text }}</p>
          {%- endif -%}
          {%- if content2_link_text != blank and content2_link_url != blank -%}
            <a href="{{ content2_link_url }}" class="about-page__content-link">{{ content2_link_text }}</a>
          {%- endif -%}
        </div>
        {%- if content2_image != blank -%}
          <div class="about-page__content-image">
            <img 
              src="{{ content2_image | image_url: width: 440 }}"
              alt=""
              width="440"
              height="279"
              loading="lazy"
            >
          </div>
        {%- else -%}
          <div class="about-page__content-placeholder"></div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
.about-page {
  position: relative;
  width: 100%;
  padding: 84px 0 0;
  background-color: var(--color-white);
}

/* Hero Section */
.about-page__hero {
  position: relative;
  width: 100%;
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
  min-height: 830px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.about-page__hero-background {
  position: absolute;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
}

.about-page__hero-bg-image {
  position: absolute;
  opacity: 0.1;
}

.about-page__hero-bg-image--1 {
  left: 64px;
  top: 84px;
  width: 700px;
  height: 746px;
}

.about-page__hero-bg-image--2 {
  left: 64px;
  top: 84px;
  width: 746px;
  height: 700px;
}

.about-page__hero-dots {
  position: absolute;
  left: 711px;
  top: 231px;
  display: flex;
  flex-direction: column;
  gap: 50px;
}

.about-page__hero-dot {
  width: 6px;
  height: 6px;
  background-color: var(--color-black);
  border-radius: 50%;
}

.about-page__hero-squares {
  position: absolute;
}

.about-page__hero-square {
  position: absolute;
  width: 50px;
  height: 50px;
  background-color: #cce6ff;
}

.about-page__hero-square:first-child {
  left: 689px;
  top: 302px;
}

.about-page__hero-square:last-child {
  left: 564px;
  top: 483px;
}

.about-page__hero-content {
  position: relative;
  z-index: 2;
  display: grid;
  grid-template-columns: 755px 495px;
  gap: 72px;
  align-items: start;
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 55px 0;
}

.about-page__hero-main {
  display: flex;
  flex-direction: column;
  gap: 48px;
}

.about-page__hero-heading {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 59.468px;
  line-height: 1.31;
  color: var(--color-black);
  margin: 0;
  display: flex;
  flex-direction: column;
}

.about-page__hero-heading--blue {
  color: #006ed8;
  font-weight: 700;
}

.about-page__hero-heading--black {
  font-weight: 600;
}

.about-page__hero-description {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 20.298px;
  line-height: 28.998px;
  color: #666;
  margin: 0;
  max-width: 593px;
}

.about-page__hero-cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 11.778px 30.917px;
  font-family: var(--font-product);
  font-weight: 500;
  font-size: 20.61px;
  line-height: 29.444px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.736px solid var(--color-black);
  border-radius: 3px;
  box-shadow: 4.417px 4.417px 0px 0px var(--color-black);
  text-decoration: none;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  align-self: flex-start;
}

.about-page__hero-cta:hover {
  transform: translate(-2px, -2px);
  box-shadow: 6px 6px 0px 0px var(--color-black);
}

.about-page__hero-cta:active {
  transform: translate(1px, 1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.about-page__brands {
  display: flex;
  flex-direction: column;
  gap: 13px;
  max-width: 606px;
}

.about-page__brands-heading {
  font-family: var(--font-heading);
  font-weight: 500;
  font-size: 20.298px;
  line-height: 28.998px;
  color: #585858;
  margin: 0;
}

.about-page__brands-list {
  display: flex;
  gap: 33px;
  flex-wrap: wrap;
}

.about-page__brand-item {
  padding: 4px 18px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 20.298px;
  line-height: 28.998px;
  color: #7c7c7c;
  text-transform: capitalize;
  background-color: transparent;
  border: 1px solid #c8c8c8;
  border-radius: 5px;
}

/* Franchise Card */
.about-page__franchise-card {
  position: relative;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  padding: 27px 19px;
  display: flex;
  flex-direction: column;
  gap: 23px;
  width: 234px;
}

.about-page__franchise-title {
  font-family: var(--font-heading);
  font-weight: 500;
  font-size: 18.402px;
  line-height: 1.31;
  color: var(--color-black);
  margin: 0;
}

.about-page__franchise-description {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 12.574px;
  line-height: 1.31;
  color: var(--color-black);
  margin: 0;
}

.about-page__franchise-features {
  display: flex;
  flex-direction: column;
  gap: 8px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.about-page__franchise-feature {
  display: flex;
  align-items: center;
  gap: 3px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 13.424px;
  line-height: 1.31;
  color: var(--color-black);
}

.about-page__franchise-check {
  flex-shrink: 0;
  width: 10px;
  height: 10px;
  color: #28D98E;
}

.about-page__franchise-cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10px 54px;
  font-family: var(--font-accent);
  font-weight: 500;
  font-size: 12px;
  line-height: 1.31;
  color: var(--color-white);
  text-transform: capitalize;
  text-decoration: none;
  background-color: #494949;
  border-radius: 3px;
  box-shadow: 4px 4px 0px 0px var(--color-black);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.about-page__franchise-cta:hover {
  transform: translate(-2px, -2px);
  box-shadow: 6px 6px 0px 0px var(--color-black);
}

.about-page__franchise-cta:active {
  transform: translate(1px, 1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

/* Expertise Section */
.about-page__expertise {
  text-align: center;
  padding: 52px 0;
  max-width: var(--container-max);
  margin: 0 auto;
  padding-left: var(--container-padding);
  padding-right: var(--container-padding);
}

.about-page__expertise-heading {
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 29.734px;
  line-height: 1.31;
  color: var(--color-black);
  margin: 0 0 10px;
}

.about-page__expertise-description {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 29.734px;
  line-height: 1.31;
  color: #7c7c7c;
  margin: 0;
  max-width: 942px;
  margin-left: auto;
  margin-right: auto;
}

/* Content Blocks */
.about-page__content-blocks {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding) 80px;
  display: flex;
  flex-direction: column;
  gap: 52px;
}

.about-page__content-block {
  display: flex;
  gap: 72px;
  align-items: center;
}

.about-page__content-block--reverse {
  flex-direction: row-reverse;
}

.about-page__content-image {
  flex-shrink: 0;
  width: 440px;
  height: 279px;
  overflow: hidden;
}

.about-page__content-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.about-page__content-placeholder {
  width: 440px;
  height: 279px;
  background-color: var(--color-gray);
  flex-shrink: 0;
}

.about-page__content-text {
  display: flex;
  flex-direction: column;
  gap: 23px;
  flex: 1;
  max-width: 598px;
}

.about-page__content-paragraph {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 24px;
  line-height: 1.31;
  color: #7c7c7c;
  margin: 0;
}

.about-page__content-link {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 24px;
  line-height: 1.31;
  color: #57a0ff;
  text-decoration: none;
  align-self: flex-start;
}

.about-page__content-link:hover {
  text-decoration: underline;
}

/* Responsive */
@media screen and (max-width: 1440px) {
  .about-page__hero-content {
    grid-template-columns: 1fr 400px;
    gap: 60px;
  }
  
  .about-page__hero-heading {
    font-size: 48px;
  }
  
  .about-page__hero-description {
    font-size: 18px;
    line-height: 26px;
  }
}

@media screen and (max-width: 992px) {
  .about-page {
    padding-top: 40px;
  }
  
  .about-page__hero {
    min-height: auto;
    padding: 40px 0;
  }
  
  .about-page__hero-content {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .about-page__franchise-card {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .about-page__hero-main {
    gap: 32px;
  }
  
  .about-page__hero-heading {
    font-size: 40px;
  }
  
  .about-page__hero-description {
    font-size: 16px;
    line-height: 24px;
  }
  
  .about-page__content-block {
    flex-direction: column;
    gap: 32px;
  }
  
  .about-page__content-block--reverse {
    flex-direction: column;
  }
  
  .about-page__content-image,
  .about-page__content-placeholder {
    width: 100%;
    max-width: 440px;
  }
  
  .about-page__content-text {
    max-width: 100%;
  }
  
  .about-page__content-paragraph {
    font-size: 20px;
  }
}

@media screen and (max-width: 576px) {
  .about-page__hero-heading {
    font-size: 32px;
  }
  
  .about-page__hero-description {
    font-size: 14px;
    line-height: 20px;
  }
  
  .about-page__hero-cta {
    font-size: 16px;
    padding: 10px 24px;
  }
  
  .about-page__brands-list {
    gap: 16px;
  }
  
  .about-page__brand-item {
    font-size: 16px;
    padding: 4px 12px;
  }
  
  .about-page__expertise-heading,
  .about-page__expertise-description {
    font-size: 24px;
  }
  
  .about-page__content-paragraph,
  .about-page__content-link {
    font-size: 18px;
  }
}
{% endstylesheet %}

