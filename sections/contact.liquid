  top: 333.43px;
  display: flex;
  flex-direction: column;
  gap: 18.064px;
  z-index: 3;
}

.contact-section__card {
  background-color: #ffffff;
  border: 3.011px solid #041c66;
  border-radius: 19.569px;
  padding: 24.085px 30.106px;
  box-shadow: 2.258px 3.763px 0px 0px #272033;
  width: 402px;
}

.contact-section__card-label {
  font-family: 'Archivo', sans-serif;
  font-weight: 400;
  font-size: 18.064px;
  line-height: 13.548px;
  color: #041c66;
  margin: 0 0 18.064px;
  text-transform: uppercase;
}

.contact-section__card-content {
  display: flex;
  gap: 12.043px;
  align-items: flex-start;
}

.contact-section__card-icon {
  flex-shrink: 0;
  width: 48.17px;
  height: auto;
}

.contact-section__card-icon img {
  width: 100%;
  height: auto;
  display: block;
}

.contact-section__card-text {
  font-family: 'Overpass', sans-serif;
  font-weight: 400;
  font-size: 13.589px;
  line-height: 16.105px;
  color: #041c66;
  letter-spacing: -0.1359px;
  text-transform: uppercase;
  margin: 0;
  flex: 1;
}

.contact-section__card-text p {
  margin: 0;
}

.contact-section__email-link {
  font-family: 'Syne', sans-serif;
  font-weight: 400;
  font-size: 28.601px;
  line-height: 25.59px;
  color: #041c66;
  text-decoration: underline;
  text-decoration-skip-ink: none;
  text-underline-position: from-font;
  letter-spacing: -0.858px;
}

.contact-section__map-panel {
  position: relative;
  flex: 0 0 auto;
  background-color: var(--map-bg);
  border: 3.011px solid #141019;
  border-radius: 24.085px;
  box-shadow: 2.258px 4.516px 0px 0px #141019;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  width: fit-content;
  max-width: 100%;
}

.contact-section__map-image-wrapper {
  position: relative;
  width: 505px;
  height: auto;
  z-index: 0;
  display: block;
}

.contact-section__map-image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
  pointer-events: none;
}

.contact-section__map-pin {
  position: absolute;
  top: 24.16%;
  right: 40.05%;
  bottom: 65.72%;
  left: 44.58%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.contact-section__map-pin-img {
  width: 90.629px;
  height: 76.09px;
  transform: rotate(359.106deg);
  display: block;
}

