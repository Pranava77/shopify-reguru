{%- liquid
  assign heading = section.settings.heading | default: 'Ready to Assist You'
  assign description = section.settings.description | default: 'Contact us for any queries or bookings, and experience our prompt, friendly service. Your satisfaction is our priority.'
  assign email = section.settings.email | default: 'reguru@gmail.com'
  assign address_line_1 = section.settings.address_line_1 | default: '2nd floor central complex'
  assign address_line_2 = section.settings.address_line_2 | default: 'sv road near mantri'
  assign address_line_3 = section.settings.address_line_3 | default: 'mall seshadripuram'
  assign address_line_4 = section.settings.address_line_4 | default: 'bengaluru 560020'
  assign logo = section.settings.logo
  assign map_image = section.settings.map_image
  assign map_pin_image = section.settings.map_pin_image
  assign telephone_image = section.settings.telephone_image
  assign mail_icon_image = section.settings.mail_icon_image
  assign map_icon_image = section.settings.map_icon_image
  assign background_color = section.settings.background_color | default: '#041c66'
  assign map_background_color = section.settings.map_background_color | default: '#c1cff4'
-%}

<section class="contact-section" id="contact-section-{{ section.id }}">
  <div class="contact-section__wrapper">
    <!-- Left Panel: Contact Information -->
    <div class="contact-section__left-panel" style="--panel-bg: {{ background_color }};">
      <div class="contact-section__footer-bg"></div>
      
      <div class="contact-section__data">
        {%- if logo != blank -%}
          <div class="contact-section__logo">
            <img 
              src="{{ logo | image_url: width: 232 }}"
              alt="{{ shop.name }}"
              width="232"
              height="61"
              loading="lazy"
            >
          </div>
        {%- endif -%}

        <h1 class="contact-section__heading">{{ heading }}</h1>

        {%- if description != blank -%}
          <p class="contact-section__description">{{ description }}</p>
        {%- endif -%}

        {%- if telephone_image != blank -%}
          <div class="contact-section__telephone">
            <div class="contact-section__telephone-wrapper">
              <img 
                src="{{ telephone_image | image_url: width: 266 }}"
                alt="Telephone illustration"
                width="266"
                height="387"
                loading="lazy"
                class="contact-section__telephone-img"
              >
            </div>
          </div>
        {%- endif -%}
      </div>

      <!-- Contact Info Cards -->
      <div class="contact-section__contact-info">
        <!-- Email Card -->
        <div class="contact-section__card">
          <p class="contact-section__card-label">EMAIL</p>
          <div class="contact-section__card-content">
            {%- if mail_icon_image != blank -%}
              <div class="contact-section__card-icon">
                <img 
                  src="{{ mail_icon_image | image_url: width: 48 }}"
                  alt="Mail icon"
                  width="48"
                  height="36"
                  loading="lazy"
                >
              </div>
            {%- endif -%}
            <p class="contact-section__card-text">
              <a href="mailto:{{ email }}" class="contact-section__email-link">{{ email }}</a>
            </p>
          </div>
        </div>

        <!-- Headquarters Card -->
        <div class="contact-section__card">
          <p class="contact-section__card-label">HEADQUARTERS</p>
          <div class="contact-section__card-content">
            {%- if map_icon_image != blank -%}
              <div class="contact-section__card-icon">
                <img 
                  src="{{ map_icon_image | image_url: width: 48 }}"
                  alt="Map icon"
                  width="48"
                  height="42"
                  loading="lazy"
                >
              </div>
            {%- endif -%}
            <div class="contact-section__card-text">
              {%- if address_line_1 != blank -%}
                <p>{{ address_line_1 }}</p>
              {%- endif -%}
              {%- if address_line_2 != blank -%}
                <p>{{ address_line_2 }}</p>
              {%- endif -%}
              {%- if address_line_3 != blank -%}
                <p>{{ address_line_3 }}</p>
              {%- endif -%}
              {%- if address_line_4 != blank -%}
                <p>{{ address_line_4 }}</p>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Panel: Map -->
    <div class="contact-section__map-panel" style="--map-bg: {{ map_background_color }};">
      {%- if map_image != blank -%}
        <div class="contact-section__map-image-wrapper">
          <img 
            src="{{ map_image | image_url: width: 1200 }}"
            alt="Location map"
            width="1200"
            height="813"
            loading="lazy"
            class="contact-section__map-image"
          >
        </div>
      {%- endif -%}
      
      {%- if map_pin_image != blank -%}
        <div class="contact-section__map-pin">
          <img 
            src="{{ map_pin_image | image_url: width: 91 }}"
            alt="Location pin"
            width="91"
            height="76"
            loading="lazy"
            class="contact-section__map-pin-img"
          >
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
.contact-section {
