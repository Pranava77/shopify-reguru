{%- liquid
  assign heading = section.settings.heading | default: 'FAQs'
  assign bg_image = section.settings.background_image
-%}

<section class="faq"{% if bg_image != blank %} style="background-image: url('{{ bg_image | image_url: width: 1920 }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"{% endif %}>
  <div class="faq__container">
    <div class="faq__card card--lg">
      <div class="faq__header">
        <h2 class="faq__title">{{ heading }}</h2>
        <div class="faq__decoration"></div>
      </div>

      <div class="faq__tabs">
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab' -%}
            <button 
              type="button" 
              class="faq__tab tab--pill{% if forloop.first %} active{% endif %}"
              data-tab-id="{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.label }}
            </button>
          {%- endif -%}
        {%- endfor -%}

        {%- if section.blocks.size == 0 -%}
          <button type="button" class="faq__tab tab--pill active" data-tab-id="general">General</button>
          <button type="button" class="faq__tab tab--pill" data-tab-id="services">services</button>
          <button type="button" class="faq__tab tab--pill" data-tab-id="business">Business</button>
        {%- endif -%}
      </div>

      <div class="faq__content">
        {%- assign faq_index = 0 -%}
        {%- assign current_tab_id = blank -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'tab' -%}
            {%- assign current_tab_id = block.id -%}
          {%- elsif block.type == 'faq_item' -%}
            {%- assign faq_index = faq_index | plus: 1 -%}
            <div data-tab-id="{{ current_tab_id | default: 'general' }}">
              {%- render 'faq-item',
                index: faq_index,
                question: block.settings.question,
                answer: block.settings.answer
              -%}
            </div>
          {%- endif -%}
        {%- endfor -%}

        {%- if section.blocks.size == 0 -%}
          {%- assign default_faqs = 'Do ReGuru products come with warranty?|What is the return policy for ReGuru products?|Do ReGuru products come with warranty?' | split: '|' -%}
          {%- for faq in default_faqs -%}
            <div data-tab-id="general">
              <details class="faq__item">
                <summary class="faq__question">
                  <span class="faq__number">0{{ forloop.index }}</span>
                  <span class="faq__question-text">{{ faq }}</span>
                  <span class="faq__icon">
                    <svg width="41" height="43" viewBox="0 0 41 43" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M10 17L20.5 27L31 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </span>
                </summary>
                <div class="faq__answer">
                  <p>Yes, all ReGuru products come with a comprehensive warranty. Our refurbished electronics are thoroughly tested and certified, ensuring quality and reliability. Specific warranty terms vary by product category.</p>
                </div>
              </details>
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.faq {
  padding: 60px 0;
}

.faq__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
  display: flex;
  justify-content: center;
}

.faq__card {
  width: 100%;
  max-width: 977px;
  padding: 32px 40px 48px;
  background-color: var(--color-white);
  border: 2px solid var(--color-black);
  border-radius: 12px;
  box-shadow: 5px 4px 0px 0px var(--color-black);
}

.faq__header {
  text-align: center;
  margin-bottom: 24px;
}

.faq__title {
  font-family: var(--font-body);
  font-weight: 400;
  font-size: 47px;
  line-height: 1.31;
  color: var(--color-black);
  margin: 0 0 16px;
}

.faq__decoration {
  width: 273px;
  height: 2px;
  margin: 0 auto;
  background: linear-gradient(90deg, transparent 0%, var(--color-black) 50%, transparent 100%);
}

.faq__tabs {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin-bottom: 40px;
}

.faq__tab {
  padding: 8px 21px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 18px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.5px solid var(--color-black);
  border-radius: var(--radius-pill);
  box-shadow: 3px 3px 0px 0px var(--color-black);
  cursor: pointer;
  transition: background-color var(--transition-fast), transform var(--transition-fast);
}

.faq__tab:hover {
  background-color: var(--color-light-blue);
}

.faq__tab.active {
  background-color: var(--color-blue);
  color: var(--color-white);
}

.faq__content {
  max-width: 602px;
  margin: 0 auto;
}

/* FAQ Item Styles */
.faq__item {
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  padding: 14px 0;
}

.faq__item:last-child {
  border-bottom: none;
}

.faq__question {
  display: flex;
  align-items: center;
  gap: 13px;
  cursor: pointer;
  list-style: none;
}

.faq__question::-webkit-details-marker {
  display: none;
}

.faq__number {
  font-family: var(--font-body);
  font-weight: 400;
  font-size: 30px;
  line-height: 1.31;
  color: var(--color-black);
}

.faq__question-text {
  flex: 1;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 24px;
  line-height: 1.31;
  color: var(--color-black);
}

.faq__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 41px;
  height: 43px;
  transition: transform var(--transition-fast);
}

.faq__item[open] .faq__icon {
  transform: rotate(180deg);
}

.faq__icon svg {
  width: 100%;
  height: 100%;
}

.faq__answer {
  padding: 16px 0 8px 43px;
  font-family: var(--font-body);
  font-size: 16px;
  line-height: 1.6;
  color: var(--color-text-secondary);
}

.faq__answer p {
  margin: 0;
}

@media screen and (max-width: 768px) {
  .faq__card {
    padding: 24px 20px 32px;
  }

  .faq__title {
    font-size: 32px;
  }

  .faq__tabs {
    flex-wrap: wrap;
    gap: 12px;
  }

  .faq__tab {
    font-size: 14px;
    padding: 6px 16px;
  }

  .faq__number {
    font-size: 22px;
  }

  .faq__question-text {
    font-size: 18px;
  }

  .faq__icon {
    width: 32px;
    height: 34px;
  }

  .faq__answer {
    padding-left: 35px;
  }
}
{% endstylesheet %}

