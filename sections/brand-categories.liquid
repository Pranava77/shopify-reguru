<section class="brand-categories">
  <div class="brand-categories__container container">
    {%- if section.settings.heading != blank -%}
      <h2 class="brand-categories__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="brand-categories__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'brand_card' -%}
            <div class="brand-card" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link }}" class="brand-card__link">
                <span class="brand-card__name">{{ block.settings.name }}</span>
                {%- if block.settings.image != blank -%}
                  <div class="brand-card__image">
                    <img
                      src="{{ block.settings.image | image_url: width: 300 }}"
                      alt="{{ block.settings.name }}"
                      width="163"
                      height="167"
                      loading="lazy"
                      class="brand-card__img"
                    >
                  </div>
                {%- else -%}
                  <div class="brand-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </a>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .brand-categories {
    padding: var(--spacing-xl) 0;
    background: var(--color-white);
    position: relative;
  }

  .brand-categories::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--grid-pattern);
    background-repeat: repeat;
    opacity: 0.3;
    pointer-events: none;
  }

  .brand-categories__container {
    position: relative;
    z-index: 1;
  }

  .brand-categories__heading {
    font-family: var(--font-heading);
    font-size: 30px;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    text-align: center;
    margin: 0 0 var(--spacing-lg) 0;
  }

  .brand-categories__grid {
    display: flex;
    justify-content: center;
    gap: 62px;
    flex-wrap: wrap;
  }

  .brand-card {
    width: 280px;
    height: 168px;
    background: var(--color-white);
    border: 1px solid var(--color-primary);
    border-radius: 6px;
    box-shadow: 4px 4px 0px 3px var(--color-accent);
    position: relative;
    overflow: visible;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .brand-card:nth-child(2),
  .brand-card:nth-child(3),
  .brand-card:nth-child(4) {
    border-color: #b8f5dc;
  }

  .brand-card:nth-child(3) {
    box-shadow: 4px 4px 0px 3px #4b487d;
  }

  .brand-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0px 3px var(--color-accent);
  }

  .brand-card__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    position: relative;
  }

  .brand-card__name {
    position: absolute;
    top: 28px;
    left: 18px;
    font-family: var(--font-heading);
    font-size: 30px;
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
    z-index: 2;
  }

  .brand-card__image {
    position: absolute;
    right: -10px;
    bottom: -10px;
    width: 163px;
    height: 167px;
    z-index: 1;
  }

  .brand-card__img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .brand-card__placeholder {
    position: absolute;
    right: 10px;
    bottom: 10px;
    width: 100px;
    height: 100px;
    opacity: 0.3;
  }

  .brand-card__placeholder svg {
    width: 100%;
    height: 100%;
  }

  @media screen and (max-width: 1200px) {
    .brand-categories__grid {
      gap: 30px;
    }

    .brand-card {
      width: 240px;
      height: 150px;
    }

    .brand-card__name {
      font-size: 24px;
    }

    .brand-card__image {
      width: 130px;
      height: 140px;
    }
  }

  @media screen and (max-width: 768px) {
    .brand-categories__grid {
      gap: 20px;
      justify-content: center;
    }

    .brand-card {
      width: calc(50% - 10px);
      max-width: 200px;
      height: 130px;
    }

    .brand-card__name {
      font-size: 18px;
      top: 15px;
      left: 12px;
    }

    .brand-card__image {
      width: 90px;
      height: 100px;
      right: -5px;
      bottom: -5px;
    }
  }
{% endstylesheet %}

