<section class="feature-cards">
  <div class="feature-cards__container container">
    <div class="feature-cards__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'icon_card' -%}
            <div class="feature-card" {{ block.shopify_attributes }}>
              <div class="feature-card__inner">
                <div class="feature-card__content">
                  {%- if block.settings.label != blank -%}
                    <p class="feature-card__label">{{ block.settings.label }}</p>
                  {%- endif -%}
                </div>
                
                {%- if block.settings.icon != blank -%}
                  <div class="feature-card__icon">
                    <img
                      src="{{ block.settings.icon | image_url: width: 200 }}"
                      alt="{{ block.settings.label | escape }}"
                      width="120"
                      height="auto"
                      loading="lazy"
                      class="feature-card__img"
                    >
                  </div>
                {%- else -%}
                  <div class="feature-card__icon-placeholder">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </div>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .feature-cards {
    padding: var(--spacing-xl) 0;
    background-color: var(--color-white);
    position: relative;
  }

  .feature-cards::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--grid-pattern);
    background-repeat: repeat;
    opacity: 0.3;
    pointer-events: none;
  }

  .feature-cards__container {
    position: relative;
    z-index: 1;
    padding: 0 138px;
  }

  .feature-cards__grid {
    display: flex;
    justify-content: center;
    gap: 46px;
    flex-wrap: wrap;
  }

  .feature-card {
    width: 173px;
    height: 270px;
    position: relative;
  }

  .feature-card__inner {
    width: 100%;
    height: 100%;
    background: linear-gradient(-28.68deg, rgba(0, 22, 121, 1) 5.12%, rgba(99, 185, 226, 1) 99.44%);
    border-radius: 6px;
    box-shadow: 2.86px 2.86px 0px 0px var(--color-black);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .feature-card:hover .feature-card__inner {
    transform: translate(-2px, -2px);
    box-shadow: 5px 5px 0px 0px var(--color-black);
  }

  .feature-card__content {
    padding: 35px 18px 0;
    position: relative;
    z-index: 2;
  }

  .feature-card__label {
    font-family: var(--font-poppins);
    font-size: 19px;
    font-weight: var(--font-weight-medium);
    color: var(--color-white);
    text-shadow: 0.625px 0.625px 0px rgba(6, 24, 58, 0.97);
    letter-spacing: 0.96px;
    text-align: center;
    line-height: 1.2;
    margin: 0;
    text-transform: capitalize;
  }

  .feature-card__icon {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 140px;
    height: 140px;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    z-index: 1;
  }

  .feature-card__img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .feature-card__icon-placeholder {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 80px;
    color: rgba(255, 255, 255, 0.4);
  }

  .feature-card__icon-placeholder svg {
    width: 100%;
    height: 100%;
  }

  /* Variant for first card (RRR Policy) */
  .feature-card:first-child .feature-card__label {
    font-size: 31px;
    letter-spacing: 1.57px;
    text-align: center;
    line-height: 1.1;
  }

  /* Variant for second card (Affordable) */
  .feature-card:nth-child(2) .feature-card__label {
    font-size: 23px;
    letter-spacing: 1.17px;
  }

  @media screen and (max-width: 1200px) {
    .feature-cards__container {
      padding: 0 40px;
    }

    .feature-cards__grid {
      gap: 24px;
    }

    .feature-card {
      width: 150px;
      height: 230px;
    }

    .feature-card__label {
      font-size: 16px;
    }

    .feature-card:first-child .feature-card__label {
      font-size: 24px;
    }

    .feature-card:nth-child(2) .feature-card__label {
      font-size: 18px;
    }
  }

  @media screen and (max-width: 768px) {
    .feature-cards__container {
      padding: 0 16px;
    }

    .feature-cards__grid {
      gap: 16px;
      justify-content: center;
    }

    .feature-card {
      width: calc(33.333% - 12px);
      min-width: 100px;
      max-width: 140px;
      height: 180px;
    }

    .feature-card__content {
      padding: 20px 10px 0;
    }

    .feature-card__label {
      font-size: 12px;
    }

    .feature-card:first-child .feature-card__label,
    .feature-card:nth-child(2) .feature-card__label {
      font-size: 14px;
    }

    .feature-card__icon {
      width: 80px;
      height: 80px;
    }
  }
{% endstylesheet %}

