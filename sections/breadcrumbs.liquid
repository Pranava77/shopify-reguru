{%- comment -%}
  Breadcrumbs Section
  
  Wrapper section for breadcrumbs snippet
{%- endcomment -%}

<section class="breadcrumbs-section">
  <div class="breadcrumbs-section__container">
    {%- render 'breadcrumbs' -%}
  </div>
</section>

{% stylesheet %}
.breadcrumbs-section {
  padding: var(--spacing-md) 0;
  background-color: var(--color-white);
}

.breadcrumbs-section__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}
{% endstylesheet %}

