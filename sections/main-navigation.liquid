<nav class="main-nav">
  <div class="main-nav__container">
    <ul class="main-nav__list">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'nav_link' -%}
            <li class="main-nav__item" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link }}" class="main-nav__link">
                <svg class="main-nav__chevron" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="main-nav__text">{{ block.settings.label }}</span>
              </a>
            </li>
        {%- endcase -%}
      {%- endfor -%}
    </ul>
  </div>
</nav>

{% stylesheet %}
  .main-nav {
    background-color: var(--color-white);
    padding: 12px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .main-nav__container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 142px;
  }

  .main-nav__list {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 114px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .main-nav__item {
    position: relative;
  }

  .main-nav__link {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    color: var(--color-primary);
    font-family: var(--font-heading);
    font-size: 16px;
    font-weight: var(--font-weight-medium);
    transition: color var(--transition-fast);
  }

  .main-nav__link:hover {
    color: var(--color-accent-blue);
  }

  .main-nav__chevron {
    width: 13px;
    height: 7px;
    flex-shrink: 0;
  }

  .main-nav__text {
    white-space: nowrap;
  }

  /* Special styling for last item (could be different font) */
  .main-nav__item:last-child .main-nav__link {
    font-family: var(--font-mono);
    font-weight: var(--font-weight-bold);
  }

  @media screen and (max-width: 1200px) {
    .main-nav__container {
      padding: 0 40px;
    }

    .main-nav__list {
      gap: 40px;
    }
  }

  @media screen and (max-width: 768px) {
    .main-nav {
      display: none;
    }
  }
{% endstylesheet %}

