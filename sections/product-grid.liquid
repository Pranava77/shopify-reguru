{%- liquid
  assign section_title = section.settings.title | default: 'Latest Products'
  assign collection_handle = section.settings.collection
  assign collection = collections[collection_handle]
  assign products_to_show = section.settings.products_to_show | default: 6
  assign bg_image = section.settings.background_image
-%}

<section class="product-grid bg-grid-pattern"{% if bg_image != blank %} style="background-image: url('{{ bg_image | image_url: width: 1920 }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"{% endif %}>
  <div class="product-grid__container">
    <div class="product-grid__header">
      <h2 class="product-grid__title section__title">{{ section_title }}</h2>
      
      {%- if section.blocks.size > 0 -%}
        <div class="product-grid__tabs tabs" data-product-grid-tabs>
          {%- for block in section.blocks -%}
            {%- liquid
              assign tab_collection_handle = block.settings.collection
              assign tab_collection = blank
              assign tab_handle = ''
              
              if tab_collection_handle != blank and tab_collection_handle != ''
                assign tab_collection = collections[tab_collection_handle]
                if tab_collection != blank
                  assign tab_handle = tab_collection.handle
                else
                  assign tab_handle = tab_collection_handle | handleize
                endif
              else
                assign tab_handle = 'tab-' | append: block.id
              endif
            -%}
            {%- liquid
              assign tab_label = block.settings.label
              if tab_label == blank and tab_collection != blank
                assign tab_label = tab_collection.title
              elsif tab_label == blank
                assign tab_label = 'Category'
              endif
            -%}
            <button 
              type="button" 
              class="product-grid__tab tab{% if forloop.first %} active{% endif %}"
              data-tab-target="{{ tab_handle }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {{ tab_label }}
            </button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <div class="product-grid__content" data-product-grid-content>
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- liquid
            assign tab_collection_handle = block.settings.collection
            assign tab_collection = blank
            assign tab_handle = ''
            
            if tab_collection_handle != blank and tab_collection_handle != ''
              assign tab_collection = collections[tab_collection_handle]
              if tab_collection != blank
                assign tab_handle = tab_collection.handle
              else
                assign tab_handle = tab_collection_handle | handleize
              endif
            else
              assign tab_handle = 'tab-' | append: block.id
            endif
          -%}
          <div 
            class="product-grid__carousel-wrapper{% unless forloop.first %} hidden{% endunless %}" 
            data-tab-content="{{ tab_handle }}"
            data-tab-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <div class="product-grid__carousel" data-product-carousel>
              <div class="product-grid__items" data-carousel-track>
                {%- if tab_collection != blank and tab_collection.products.size > 0 -%}
                  {%- for product in tab_collection.products limit: products_to_show -%}
                    {%- render 'product-card', product: product, badge_enabled: section.settings.badge_enabled, badge_text: section.settings.badge_text, badge_position: section.settings.badge_position, badge_style: section.settings.badge_style, badge_color: section.settings.badge_color, badge_text_color: section.settings.badge_text_color, show_discount: section.settings.show_discount, show_rating: section.settings.show_rating -%}
                  {%- endfor -%}
                {%- elsif collection != blank and collection.products.size > 0 -%}
                  {%- for product in collection.products limit: products_to_show -%}
                    {%- render 'product-card', product: product, badge_enabled: section.settings.badge_enabled, badge_text: section.settings.badge_text, badge_position: section.settings.badge_position, badge_style: section.settings.badge_style, badge_color: section.settings.badge_color, badge_text_color: section.settings.badge_text_color, show_discount: section.settings.show_discount, show_rating: section.settings.show_rating -%}
                  {%- endfor -%}
                {%- else -%}
                  <p class="product-grid__empty">No products available in this category.</p>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} No blocks: Show default collection {%- endcomment -%}
        {%- if collection != blank and collection.products.size > 0 -%}
          <div class="product-grid__carousel-wrapper">
            <div class="product-grid__carousel" data-product-carousel>
              <div class="product-grid__items" data-carousel-track>
                {%- for product in collection.products limit: products_to_show -%}
                  {%- render 'product-card', product: product, badge_enabled: section.settings.badge_enabled, badge_text: section.settings.badge_text, badge_position: section.settings.badge_position, badge_style: section.settings.badge_style, badge_color: section.settings.badge_color, badge_text_color: section.settings.badge_text_color, show_discount: section.settings.show_discount, show_rating: section.settings.show_rating -%}
                {%- endfor -%}
              </div>
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
.product-grid {
  padding: 60px 0;
  color: rgba(177, 216, 255, 1);
}

.product-grid__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.product-grid__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28px;
  margin-bottom: 54px;
}

.product-grid__title {
  margin-bottom: 0;
}

.product-grid__tabs {
  display: flex;
  align-items: center;
}

.product-grid__tab {
  padding: 10px 25px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 22px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.6px solid var(--color-black);
  box-shadow: 4px 4px 0px 0px var(--color-black);
  cursor: pointer;
  transition: color var(--transition-fast), background-color var(--transition-fast);
}

.product-grid__tab:first-child {
  border-radius: 7px 0 0 7px;
}

.product-grid__tab:last-child {
  border-radius: 0 7px 7px 0;
}

.product-grid__tab:hover,
.product-grid__tab.active {
  color: var(--color-text);
  background-color: var(--color-light-blue);
}

.product-grid__items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 37px 31px;
}

.product-grid__carousel-wrapper.hidden {
  display: none;
}

.product-grid__carousel-wrapper {
  position: relative;
}

.product-grid__carousel {
  position: relative;
  overflow: hidden;
  padding-bottom: 4px;
  padding-right: 4px;
}

.product-grid__items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 37px 31px;
  transition: transform 0.3s ease-in-out;
  margin-bottom: 4px;
}

/* Animation classes for category change */
.product-grid__items.animating {
  display: grid;
}

.product-grid__items.animating .product-card {
  animation: productSlideIn 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  opacity: 0;
  transform: translateY(12px) scale(0.98);
}

/* Staggered animation delays for product cards */
.product-grid__items.animating .product-card:nth-child(1) {
  animation-delay: 0.05s;
}

.product-grid__items.animating .product-card:nth-child(2) {
  animation-delay: 0.1s;
}

.product-grid__items.animating .product-card:nth-child(3) {
  animation-delay: 0.15s;
}

.product-grid__items.animating .product-card:nth-child(4) {
  animation-delay: 0.2s;
}

.product-grid__items.animating .product-card:nth-child(5) {
  animation-delay: 0.25s;
}

.product-grid__items.animating .product-card:nth-child(6) {
  animation-delay: 0.3s;
}

.product-grid__items.animating .product-card:nth-child(7) {
  animation-delay: 0.35s;
}

.product-grid__items.animating .product-card:nth-child(8) {
  animation-delay: 0.4s;
}

.product-grid__items.animating .product-card:nth-child(9) {
  animation-delay: 0.45s;
}

.product-grid__items.animating .product-card:nth-child(10) {
  animation-delay: 0.5s;
}

.product-grid__items.animating .product-card:nth-child(11) {
  animation-delay: 0.55s;
}

.product-grid__items.animating .product-card:nth-child(12) {
  animation-delay: 0.6s;
}

/* Keyframe animation - Neubrutalism style (subtle) */
@keyframes productSlideIn {
  0% {
    opacity: 0;
    transform: translateY(12px) scale(0.98);
    box-shadow: 2px 2px 0px 0px var(--color-black);
  }
  60% {
    transform: translateY(-2px) scale(1.01);
    box-shadow: 5px 5px 0px 0px var(--color-black);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    box-shadow: var(--shadow-md);
  }
}

.product-grid__empty {
  grid-column: 1 / -1;
  text-align: center;
  padding: 40px 20px;
  font-family: var(--font-body);
  font-size: 16px;
  color: var(--color-text-secondary);
}

/* Carousel Navigation Buttons */
.product-grid__nav {
  display: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  width: 40px;
  height: 40px;
  align-items: center;
  justify-content: center;
  background-color: rgba(177, 216, 255, 1);
  border: 2px solid var(--color-black);
  border-radius: 4px;
  box-shadow: 4px 4px 0px 0px var(--color-black);
  cursor: pointer;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  color: rgba(0, 0, 0, 1);
}

.product-grid__nav:hover {
  transform: translateY(-50%) translate(-2px, -2px);
  box-shadow: 6px 6px 0px 0px var(--color-black);
}

.product-grid__nav:active {
  transform: translateY(-50%) translate(2px, 2px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.product-grid__nav--prev {
  left: 10px;
}

.product-grid__nav--next {
  right: 10px;
}

.product-grid__nav svg {
  width: 20px;
  height: 20px;
}


@media screen and (max-width: 992px) {
  .product-grid {
    padding: 40px 0;
  }

  .product-grid__header {
    gap: 20px;
    margin-bottom: 40px;
  }

  .product-grid__tabs {
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }

  .product-grid__tab,
  .product-grid__tab:first-child,
  .product-grid__tab:last-child {
    font-size: 16px;
    padding: 8px 16px;
    border-radius: 5px;
  }

  .product-grid__items {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
}

@media screen and (max-width: 768px) {
  .product-grid__carousel {
    overflow: visible;
    padding-bottom: 4px;
    padding-right: 0;
  }

  .product-grid__items {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-left: 7.5%;
    padding-right: calc(7.5% + 4px);
    padding-bottom: 4px;
  }

  .product-grid__items::-webkit-scrollbar {
    display: none;
  }

  .product-grid__items .product-card {
    flex: 0 0 85%;
    min-width: 85%;
    max-width: 85%;
    scroll-snap-align: center;
    box-shadow: 4px 4px 0px 0px var(--color-black);
  }

  .product-grid__nav {
    display: flex;
  }
}

@media screen and (max-width: 768px) {
  .product-grid {
    padding: 32px 0;
  }

  .product-grid__container {
    padding: 0 16px;
  }

  .product-grid__header {
    gap: 16px;
    margin-bottom: 32px;
  }

  .product-grid__title {
    font-size: 28px;
  }

  .product-grid__nav {
    width: 36px;
    height: 36px;
  }

  .product-grid__nav svg {
    width: 18px;
    height: 18px;
  }
}

@media screen and (max-width: 576px) {
  .product-grid {
    padding: 24px 0;
  }

  .product-grid__container {
    padding: 0 12px;
  }

  .product-grid__header {
    gap: 12px;
    margin-bottom: 24px;
  }

  .product-grid__title {
    font-size: 24px;
  }

  .product-grid__items {
    padding-left: 5%;
    padding-right: calc(5% + 4px);
    padding-bottom: 4px;
  }

  .product-grid__items .product-card {
    flex: 0 0 90%;
    min-width: 90%;
    max-width: 90%;
    scroll-snap-align: center;
    box-shadow: 4px 4px 0px 0px var(--color-black);
  }

  .product-grid__nav {
    width: 32px;
    height: 32px;
  }

  .product-grid__nav--prev {
    left: 5px;
  }

  .product-grid__nav--next {
    right: 5px;
  }

  .product-grid__nav svg {
    width: 16px;
    height: 16px;
  }

  .product-grid__tab {
    font-size: 14px;
    padding: 6px 12px;
  }
}

@media screen and (max-width: 480px) {
  .product-grid__container {
    padding: 0 8px;
  }

  .product-grid__title {
    font-size: 20px;
  }

  .product-grid__items {
    gap: 12px;
  }
}
