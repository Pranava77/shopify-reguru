{%- liquid
  assign section_title = section.settings.title | default: 'Latest Products'
  assign collection_handle = section.settings.collection
  assign collection = collections[collection_handle]
  assign products_to_show = section.settings.products_to_show | default: 6
  assign bg_image = section.settings.background_image
  assign bg_overlay_color = section.settings.background_overlay_color | default: '#000000'
  assign bg_overlay_opacity = section.settings.background_overlay_opacity | default: 0 | divided_by: 100.0
  assign bg_position = section.settings.background_image_position | default: 'center'
  assign bg_size = section.settings.background_image_size | default: 'cover'
-%}

<section 
  class="product-grid{% if bg_image != blank %} product-grid--has-bg-image{% endif %}" 
  style="
    {%- if bg_image != blank -%}
      --bg-image: url('{{ bg_image | image_url: width: 1920 }}');
      --bg-position: {{ bg_position }};
      --bg-size: {{ bg_size }};
    {%- endif -%}
    --bg-overlay-color: {{ bg_overlay_color }};
    --bg-overlay-opacity: {{ bg_overlay_opacity }};
  "
>
  {%- if bg_image != blank and bg_overlay_opacity > 0 -%}
    <div class="product-grid__overlay"></div>
  {%- endif -%}
  <div class="product-grid__container">
    <div class="product-grid__header">
      <h2 class="product-grid__title section__title">{{ section_title }}</h2>
      
      {%- if section.blocks.size > 0 -%}
        <div class="product-grid__tabs tabs" data-product-grid-tabs>
          {%- for block in section.blocks -%}
            {%- liquid
              assign tab_collection_handle = block.settings.collection
              assign tab_collection = blank
              assign tab_handle = ''
              
              if tab_collection_handle != blank and tab_collection_handle != ''
                assign tab_collection = collections[tab_collection_handle]
                if tab_collection != blank
                  assign tab_handle = tab_collection.handle
                else
                  assign tab_handle = tab_collection_handle | handleize
                endif
              else
                assign tab_handle = 'tab-' | append: block.id
              endif
            -%}
            {%- liquid
              assign tab_label = block.settings.label
              if tab_label == blank and tab_collection != blank
                assign tab_label = tab_collection.title
              elsif tab_label == blank
                assign tab_label = 'Category'
              endif
            -%}
            <button 
              type="button" 
              class="product-grid__tab tab{% if forloop.first %} active{% endif %}"
              data-tab-target="{{ tab_handle }}"
              data-tab-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              {{ tab_label }}
            </button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    <div class="product-grid__content" data-product-grid-content>
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- liquid
            assign tab_collection_handle = block.settings.collection
            assign tab_collection = blank
            assign tab_handle = ''
            
            if tab_collection_handle != blank and tab_collection_handle != ''
              assign tab_collection = collections[tab_collection_handle]
              if tab_collection != blank
                assign tab_handle = tab_collection.handle
              else
                assign tab_handle = tab_collection_handle | handleize
              endif
            else
              assign tab_handle = 'tab-' | append: block.id
            endif
          -%}
          <div 
            class="product-grid__items{% unless forloop.first %} hidden{% endunless %}" 
            data-tab-content="{{ tab_handle }}"
            data-tab-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            {%- if tab_collection != blank and tab_collection.products.size > 0 -%}
              {%- for product in tab_collection.products limit: products_to_show -%}
                {%- render 'product-card', product: product -%}
              {%- endfor -%}
            {%- elsif collection != blank and collection.products.size > 0 -%}
              {%- for product in collection.products limit: products_to_show -%}
                {%- render 'product-card', product: product -%}
              {%- endfor -%}
            {%- else -%}
              <p class="product-grid__empty">No products available in this category.</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} No blocks: Show default collection {%- endcomment -%}
        {%- if collection != blank and collection.products.size > 0 -%}
          <div class="product-grid__items">
            {%- for product in collection.products limit: products_to_show -%}
              {%- render 'product-card', product: product -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
.product-grid {
  position: relative;
  padding: 60px 0;
}

.product-grid--has-bg-image {
  background-image: var(--bg-image);
  background-position: var(--bg-position);
  background-size: var(--bg-size);
  background-repeat: no-repeat;
}

.product-grid__overlay {
  position: absolute;
  inset: 0;
  background-color: var(--bg-overlay-color);
  opacity: var(--bg-overlay-opacity);
  z-index: 1;
  pointer-events: none;
}

.product-grid__container {
  position: relative;
  z-index: 2;
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.product-grid__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28px;
  margin-bottom: 54px;
}

.product-grid__title {
  margin-bottom: 0;
}

.product-grid__tabs {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10px;
}

.product-grid__tab {
  padding: 6px 12px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 14px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.6px solid var(--color-black);
  border-radius: 5px;
  box-shadow: 4px 4px 0px 0px var(--color-black);
  cursor: pointer;
  transition: color var(--transition-fast), background-color var(--transition-fast);
}

.product-grid__tab:hover,
.product-grid__tab.active {
  color: var(--color-text);
  background-color: var(--color-light-blue);
}

.product-grid__items {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24px;
}

.product-grid__items.hidden {
  display: none;
}

.product-grid__empty {
  grid-column: 1 / -1;
  text-align: center;
  padding: 40px 20px;
  font-family: var(--font-body);
  font-size: 16px;
  color: var(--color-text-secondary);
}


/* Responsive Styles (Mobile-First) */

/* Small tablet and up */
@media screen and (min-width: 577px) {
  .product-grid__items {
    grid-template-columns: repeat(2, 1fr);
  }

  .product-grid__tab {
    font-size: 16px;
    padding: 8px 16px;
  }
}

/* Desktop and up */
@media screen and (min-width: 993px) {
  .product-grid__tabs {
    flex-wrap: nowrap;
    gap: 0;
  }

  .product-grid__tab {
    font-size: 22px;
    padding: 10px 25px;
    border-radius: 0;
  }

  .product-grid__tab:first-child {
    border-radius: 7px 0 0 7px;
  }

  .product-grid__tab:last-child {
    border-radius: 0 7px 7px 0;
  }

  .product-grid__items {
    grid-template-columns: repeat(3, 1fr);
    gap: 37px 31px;
  }
}
{% endstylesheet %}


{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "product-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Products",
      "info": "The heading displayed above the product grid"
