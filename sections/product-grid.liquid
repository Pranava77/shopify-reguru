  "tag": "section",
  "class": "product-grid-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Products",
      "info": "The heading displayed above the product grid"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Default Collection",
