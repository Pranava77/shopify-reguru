{%- liquid
  assign section_title = section.settings.title | default: 'Latest Products'
  assign default_collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 6
-%}

<section class="product-grid bg-grid-pattern" data-product-grid>
  <div class="product-grid__container">
    <div class="product-grid__header">
      <h2 class="product-grid__title section__title">{{ section_title }}</h2>
      
      <div class="product-grid__tabs">
        {%- for block in section.blocks -%}
          {%- assign tab_collection = block.settings.collection -%}
          {%- assign tab_id = 'tab-' | append: forloop.index -%}
          <button 
            type="button" 
            class="product-grid__tab{% if forloop.first %} active{% endif %}"
            data-tab-target="{{ tab_id }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.label | default: tab_collection.title | default: 'Category' }}
          </button>
        {%- endfor -%}
      </div>
    </div>

    <div class="product-grid__content">
      {%- for block in section.blocks -%}
        {%- assign tab_collection = block.settings.collection -%}
        {%- assign tab_id = 'tab-' | append: forloop.index -%}
        <div 
          class="product-grid__items{% unless forloop.first %} hidden{% endunless %}" 
          data-tab-content="{{ tab_id }}"
          {{ block.shopify_attributes }}
        >
          {%- if tab_collection != blank and tab_collection.products.size > 0 -%}
            {%- for product in tab_collection.products limit: products_to_show -%}
              {%- render 'product-card', product: product -%}
            {%- endfor -%}
          {%- elsif default_collection != blank -%}
            {%- for product in default_collection.products limit: products_to_show -%}
              {%- render 'product-card', product: product -%}
            {%- endfor -%}
          {%- else -%}
            <p class="product-grid__empty">No products available. Please assign a collection to this tab.</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
(function() {
  const section = document.querySelector('[data-product-grid]');
  if (!section) return;
  
  const tabs = section.querySelectorAll('.product-grid__tab');
  const panels = section.querySelectorAll('[data-tab-content]');
  
  tabs.forEach(function(tab) {
    tab.addEventListener('click', function() {
      const target = this.getAttribute('data-tab-target');
      
      // Update active tab
      tabs.forEach(function(t) { t.classList.remove('active'); });
      this.classList.add('active');
      
      // Show/hide panels
      panels.forEach(function(panel) {
        if (panel.getAttribute('data-tab-content') === target) {
          panel.classList.remove('hidden');
        } else {
          panel.classList.add('hidden');
        }
      });
    });
  });
})();
</script>

{% stylesheet %}
.product-grid {
  padding: 60px 0;
}

.product-grid__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.product-grid__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28px;
  margin-bottom: 54px;
}

.product-grid__title {
  margin-bottom: 0;
}

.product-grid__tabs {
  display: flex;
  align-items: center;
}

.product-grid__tab {
  padding: 10px 25px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 22px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.6px solid var(--color-black);
  box-shadow: 4px 4px 0px 0px var(--color-black);
  cursor: pointer;
  transition: color var(--transition-fast), background-color var(--transition-fast);
}

.product-grid__tab:first-child {
  border-radius: 7px 0 0 7px;
}

.product-grid__tab:last-child {
  border-radius: 0 7px 7px 0;
}

.product-grid__tab:hover,
.product-grid__tab.active {
  color: var(--color-text);
  background-color: var(--color-light-blue);
}

.product-grid__items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 37px 31px;
}

.product-grid__items.hidden {
  display: none;
}

.product-grid__empty {
  grid-column: 1 / -1;
  text-align: center;
  padding: 40px;
  color: var(--color-text-secondary);
}

@media screen and (max-width: 992px) {
  .product-grid__tabs {
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }

  .product-grid__tab {
    font-size: 16px;
    padding: 8px 16px;
    border-radius: 5px !important;
  }

  .product-grid__items {
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }
}

@media screen and (max-width: 576px) {
  .product-grid__items {
    grid-template-columns: 1fr;
  }

  .product-grid__tab {
    font-size: 14px;
    padding: 6px 12px;
  }
}
{% endstylesheet %}

