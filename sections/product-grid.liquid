{%- liquid
  assign section_title = section.settings.title | default: 'Latest Products'
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 6
-%}

<section class="product-grid bg-grid-pattern">
  <div class="product-grid__container">
    <div class="product-grid__header">
      <h2 class="product-grid__title section__title">{{ section_title }}</h2>
      
      <div class="product-grid__tabs tabs">
        {%- for block in section.blocks -%}
          {%- assign tab_collection = block.settings.collection -%}
          {%- assign tab_handle = tab_collection.handle | default: 'all' -%}
          <button 
            type="button" 
            class="product-grid__tab tab{% if forloop.first %} active{% endif %}"
            data-tab-target="{{ tab_handle }}"
            {{ block.shopify_attributes }}
          >
            {{ block.settings.label | default: tab_collection.title | default: 'Category' }}
          </button>
        {%- endfor -%}

        {%- if section.blocks.size == 0 -%}
          {%- comment -%} Default tabs - these won't have functionality without collections {%- endcomment -%}
          {%- assign default_tabs = 'Phone,Laptop,Monitors,Headphone,Television' | split: ',' -%}
          {%- for tab in default_tabs -%}
            <button 
              type="button" 
              class="product-grid__tab tab{% if forloop.first %} active{% endif %}"
              data-tab-target="{{ tab | handleize }}"
            >
              {{ tab }}
            </button>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>

    <div class="product-grid__content">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- assign tab_collection = block.settings.collection -%}
          {%- if tab_collection != blank -%}
            {%- assign tab_handle = tab_collection.handle -%}
          {%- else -%}
            {%- assign tab_handle = 'all' -%}
          {%- endif -%}
          <div 
            class="product-grid__items{% unless forloop.first %} hidden{% endunless %}" 
            data-tab-content="{{ tab_handle }}"
            {{ block.shopify_attributes }}
          >
            {%- if tab_collection != blank and tab_collection.products.size > 0 -%}
              {%- for product in tab_collection.products limit: products_to_show -%}
                {%- render 'product-card', product: product -%}
              {%- endfor -%}
            {%- else -%}
              {%- comment -%} Fallback: Show default collection if tab collection is empty {%- endcomment -%}
              {%- if collection != blank -%}
                {%- for product in collection.products limit: products_to_show -%}
                  {%- render 'product-card', product: product -%}
                {%- endfor -%}
              {%- else -%}
                {%- comment -%} Placeholder products {%- endcomment -%}
                {%- for i in (1..products_to_show) -%}
                  <article class="product-card card--sm">
                    <div class="product-card__badge">50% off</div>
                    <a href="#" class="product-card__link">
                      <div class="product-card__image">
                        <div class="product-card__placeholder product-card__placeholder--laptop">
                          <svg viewBox="0 0 200 150" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="30" y="20" width="140" height="90" rx="5" fill="#E8E8E8"/>
                            <rect x="40" y="30" width="120" height="70" rx="3" fill="#D0D0D0"/>
                            <rect x="20" y="110" width="160" height="15" rx="3" fill="#C0C0C0"/>
                            <ellipse cx="100" cy="65" rx="25" ry="20" fill="#B0B0B0"/>
                          </svg>
                        </div>
                      </div>
                      <div class="product-card__info">
                        <div class="product-card__header">
                          <h3 class="product-card__title">MacBook Pro M2</h3>
                          <div class="product-card__rating">
                            {%- for star in (1..5) -%}
                              <svg class="product-card__star product-card__star--filled" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M7 1L8.5 5H12.5L9 8L10.5 12L7 9.5L3.5 12L5 8L1.5 5H5.5L7 1Z" fill="currentColor"/>
                              </svg>
                            {%- endfor -%}
                          </div>
                        </div>
                        <p class="product-card__description">
                          Apple 2025 MacBook Air (13-inch, Apple M4 chip with 10-core CPU and 8-core GPU, 16GB Unified Memory, 256GB) - Sky Blue
                        </p>
                        <div class="product-card__footer">
                          <div class="product-card__price btn btn--green">₹ 21736.00</div>
                          <div class="product-card__actions">
                            <button type="button" class="product-card__btn btn btn--secondary">Buy Now</button>
                            <button type="button" class="product-card__btn btn btn--blue">Add to cart</button>
                          </div>
                        </div>
                      </div>
                    </a>
                  </article>
                {%- endfor -%}
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} No blocks: Show default collection {%- endcomment -%}
        {%- if collection != blank -%}
          <div class="product-grid__items">
            {%- for product in collection.products limit: products_to_show -%}
              {%- render 'product-card', product: product -%}
            {%- endfor -%}
          </div>
        {%- else -%}
          <div class="product-grid__items">
            {%- for i in (1..products_to_show) -%}
              <article class="product-card card--sm">
                <div class="product-card__badge">50% off</div>
                <a href="#" class="product-card__link">
                  <div class="product-card__image">
                    <div class="product-card__placeholder product-card__placeholder--laptop">
                      <svg viewBox="0 0 200 150" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="30" y="20" width="140" height="90" rx="5" fill="#E8E8E8"/>
                        <rect x="40" y="30" width="120" height="70" rx="3" fill="#D0D0D0"/>
                        <rect x="20" y="110" width="160" height="15" rx="3" fill="#C0C0C0"/>
                        <ellipse cx="100" cy="65" rx="25" ry="20" fill="#B0B0B0"/>
                      </svg>
                    </div>
                  </div>
                  <div class="product-card__info">
                    <div class="product-card__header">
                      <h3 class="product-card__title">MacBook Pro M2</h3>
                      <div class="product-card__rating">
                        {%- for star in (1..5) -%}
                          <svg class="product-card__star product-card__star--filled" width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 1L8.5 5H12.5L9 8L10.5 12L7 9.5L3.5 12L5 8L1.5 5H5.5L7 1Z" fill="currentColor"/>
                          </svg>
                        {%- endfor -%}
                      </div>
                    </div>
                    <p class="product-card__description">
                      Apple 2025 MacBook Air (13-inch, Apple M4 chip with 10-core CPU and 8-core GPU, 16GB Unified Memory, 256GB) - Sky Blue
                    </p>
                    <div class="product-card__footer">
                      <div class="product-card__price btn btn--green">₹ 21736.00</div>
                      <div class="product-card__actions">
                        <button type="button" class="product-card__btn btn btn--secondary">Buy Now</button>
                        <button type="button" class="product-card__btn btn btn--blue">Add to cart</button>
                      </div>
                    </div>
                  </div>
                </a>
              </article>
            {%- endfor -%}
          </div>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
.product-grid {
  padding: 60px 0;
}

.product-grid__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.product-grid__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28px;
  margin-bottom: 54px;
}

.product-grid__title {
  margin-bottom: 0;
}

.product-grid__tabs {
  display: flex;
  align-items: center;
}

.product-grid__tab {
  padding: 10px 25px;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 22px;
  color: var(--color-black);
  background-color: var(--color-white);
  border: 0.6px solid var(--color-black);
  box-shadow: 4px 4px 0px 0px var(--color-black);
  cursor: pointer;
  transition: color var(--transition-fast), background-color var(--transition-fast);
}

.product-grid__tab:first-child {
  border-radius: 7px 0 0 7px;
}

.product-grid__tab:last-child {
  border-radius: 0 7px 7px 0;
}

.product-grid__tab:hover,
.product-grid__tab.active {
  color: var(--color-text);
  background-color: var(--color-light-blue);
}

.product-grid__items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 37px 31px;
}

.product-grid__items.hidden {
  display: none;
}

.product-card__placeholder--laptop {
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.product-card__placeholder--laptop svg {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

@media screen and (max-width: 992px) {
  .product-grid__tabs {
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }

  .product-grid__tab {
    font-size: 16px;
    padding: 8px 16px;
    border-radius: 5px !important;
  }

  .product-grid__items {
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }
}

@media screen and (max-width: 576px) {
  .product-grid__items {
    grid-template-columns: 1fr;
  }

  .product-grid__tab {
    font-size: 14px;
    padding: 6px 12px;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "product-grid-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Latest Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Default Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    }
  ],
  "blocks": [
    {
      "type": "category_tab",
      "name": "Category Tab",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Tab Label"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "blocks": [
        {
          "type": "category_tab",
          "settings": {
            "label": "Phone"
          }
        },
        {
          "type": "category_tab",
          "settings": {
            "label": "Laptop"
          }
        },
        {
          "type": "category_tab",
          "settings": {
            "label": "Monitors"
          }
        },
        {
          "type": "category_tab",
          "settings": {
            "label": "Headphone"
          }
        },
        {
          "type": "category_tab",
          "settings": {
            "label": "Television"
          }
        }
      ]
    }
  ]
}
{% endschema %}

