{%- comment -%}
  Header Group Section
  Contains the announcement bar, main header navigation, and category navigation
{%- endcomment -%}

{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when '@app' -%}
      {% render block %}
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "Header Group",
  "type": "header",
  "sections": {
    "announcement-bar": {
      "type": "announcement-bar"
    },
    "header": {
      "type": "header"
    },
    "category-nav": {
      "type": "category-nav"
    }
  },
  "order": ["announcement-bar", "header", "category-nav"]
}
{% endschema %}
