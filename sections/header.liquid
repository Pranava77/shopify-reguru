  color: var(--color-navy);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: color var(--transition-fast), background-color var(--transition-fast);
  height: 100%;
}

.mega-menu__link:hover,
.mega-menu__item.is-active .mega-menu__link {
  color: var(--color-green);
}

.mega-menu__link-text {
  position: relative;
}

.mega-menu__link-text::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 0;
  height: 2px;
  background-color: var(--color-green);
  transition: width var(--transition-base);
}

.mega-menu__link:hover .mega-menu__link-text::after,
.mega-menu__item.is-active .mega-menu__link-text::after {
  width: 100%;
}

.mega-menu__arrow {
  transition: transform var(--transition-fast);
}

.mega-menu__item.is-active .mega-menu__arrow,
.mega-menu__item:hover .mega-menu__arrow {
  transform: rotate(180deg);
}

/* Badge */
