<header class="header{% if section.settings.sticky_header %} header--sticky{% endif %}" id="Header">
  <div class="header__container">
    <div class="header__logo">
      {%- if settings.logo != blank -%}
        <a href="{{ routes.root_url }}" class="header__logo-link">
          <img
            src="{{ settings.logo | image_url: width: settings.logo_width }}"
            alt="{{ shop.name }}"
            width="{{ settings.logo_width }}"
            height="auto"
            loading="eager"
            class="header__logo-image"
          >
        </a>
      {%- else -%}
        <a href="{{ routes.root_url }}" class="header__logo-text">
          <span class="header__logo-re">RE</span><span class="header__logo-guru">GURU</span>
        </a>
      {%- endif -%}
    </div>

    <div class="header__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
        <input
          type="search"
          name="q"
          placeholder="{{ 'general.search.placeholder' | t }}"
          class="search-form__input"
          aria-label="{{ 'general.search.placeholder' | t }}"
        >
        <button type="submit" class="search-form__button">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM19 19l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </form>
    </div>

    <div class="header__actions">
      <button type="button" class="header__cart-toggle" aria-label="{{ 'cart.general.title' | t }}" data-cart-toggle>
        <svg class="header__cart-icon" width="42" height="43" viewBox="0 0 42 43" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="42" height="43" rx="4" fill="white"/>
          <path d="M14 16H28L26.5 25H15.5L14 16Z" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="16.5" cy="28.5" r="1.5" fill="black"/>
          <circle cx="25.5" cy="28.5" r="1.5" fill="black"/>
          <rect x="1" y="1" width="40" height="41" rx="3" stroke="black" stroke-width="0.5" stroke-dasharray="2 2"/>
        </svg>
        <span class="header__cart-count" data-cart-count>{{ cart.item_count }}</span>
      </button>

      {%- if section.settings.show_location -%}
        <div class="header__location">
          <span class="header__location-text">{{ section.settings.location }}</span>
        </div>
      {%- endif -%}

      <div class="header__account">
        {%- if customer -%}
          <a href="{{ routes.account_url }}" class="header__login-btn">
            {{ 'customer.account.title' | t }}
          </a>
        {%- else -%}
          <a href="{{ routes.account_login_url }}" class="header__login-btn">
            login
          </a>
        {%- endif -%}
      </div>

      <button type="button" class="header__mobile-toggle" aria-label="{{ 'general.accessibility.menu' | t }}" data-mobile-toggle>
        <span class="header__mobile-toggle-icon"></span>
      </button>
    </div>
  </div>
</header>

{% stylesheet %}
  .header {
    background-color: var(--color-white);
    box-shadow: 4px 4px 3.9px 0px var(--color-primary);
    position: relative;
    z-index: var(--z-sticky);
  }

  .header--sticky {
    position: sticky;
    top: 0;
    transition: transform var(--transition-speed) var(--transition-timing);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    padding: 19px 71px;
    max-width: var(--container-max-width);
    margin: 0 auto;
    min-height: 80px;
  }

  .header__logo {
    flex-shrink: 0;
  }

  .header__logo-link {
    display: block;
    line-height: 0;
  }

  .header__logo-text {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .header__logo-re {
    color: var(--color-primary);
  }

  .header__logo-guru {
    color: var(--color-accent);
  }

  .header__logo-image {
    height: 41px;
    width: auto;
  }

  .header__search {
    flex: 1;
    max-width: 765px;
  }

  .search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-form__input {
    width: 100%;
    height: 41px;
    padding: 0 3rem 0 1rem;
    border: 1px solid var(--color-black);
    border-radius: 9px;
    font-size: 0.875rem;
    font-family: var(--font-body);
    background: var(--color-white);
    box-shadow: 2px 2px 0px 0px var(--color-black);
  }

  .search-form__input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .search-form__input::placeholder {
    color: var(--color-text-light);
  }

  .search-form__button {
    position: absolute;
    right: 0.75rem;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-text-light);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-form__button:hover {
    color: var(--color-primary);
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .header__cart-toggle {
    position: relative;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header__cart-icon {
    width: 42px;
    height: 43px;
  }

  .header__cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    background-color: var(--color-accent);
    color: var(--color-black);
    font-size: 0.625rem;
    font-weight: var(--font-weight-bold);
    padding: 0.125rem 0.375rem;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .header__location {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .header__location-text {
    font-family: var(--font-mono);
    font-size: 16px;
    font-weight: var(--font-weight-bold);
    color: var(--color-black);
  }

  .header__login-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 89px;
    height: 32px;
    padding: 8px 25px;
    background-color: var(--color-primary);
    color: var(--color-white);
    font-family: var(--font-mono);
    font-size: 12px;
    font-weight: var(--font-weight-bold);
    text-decoration: none;
    box-shadow: 2px 2px 0px 0px var(--color-black);
    transition: all var(--transition-fast);
  }

  .header__login-btn:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0px 0px var(--color-black);
  }

  .header__mobile-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  .header__mobile-toggle-icon {
    display: block;
    width: 24px;
    height: 2px;
    background-color: var(--color-text);
    position: relative;
  }

  .header__mobile-toggle-icon::before,
  .header__mobile-toggle-icon::after {
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-text);
  }

  .header__mobile-toggle-icon::before {
    top: -8px;
  }

  .header__mobile-toggle-icon::after {
    bottom: -8px;
  }

  @media screen and (max-width: 1024px) {
    .header__container {
      padding: 15px 30px;
      gap: 20px;
    }

    .header__search {
      max-width: 400px;
    }
  }

  @media screen and (max-width: 768px) {
    .header__container {
      padding: 12px 16px;
    }

    .header__search {
      display: none;
    }

    .header__location {
      display: none;
    }

    .header__mobile-toggle {
      display: block;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Enable Sticky Header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show Location Selector",
      "default": true
    },
    {
      "type": "text",
      "id": "location",
      "label": "Store Location",
      "default": "Bangalore"
    }
  ]
}
{% endschema %}
