{%- liquid
  assign logo = section.settings.logo
  assign show_search = section.settings.show_search
  assign show_location = section.settings.show_location
  assign location_text = section.settings.location_text | default: 'Bengaluru'
-%}

<header class="header">
  <div class="header__inner">
    <div class="header__content">
      <!-- Logo -->
      <a href="{{ routes.root_url }}" class="header__logo">
        {%- if logo != blank -%}
          <img 
            src="{{ logo | image_url: width: 140 }}" 
            alt="{{ shop.name }}"
            width="140"
            height="41"
            loading="eager"
          >
        {%- else -%}
          <span class="header__logo-text">{{ shop.name }}</span>
        {%- endif -%}
      </a>

      <!-- Search Bar -->
      {%- if show_search -%}
        <form action="{{ routes.search_url }}" method="get" class="header__search">
          <input 
            type="search" 
            name="q" 
            class="header__search-input"
            placeholder="{{ 'general.search.placeholder' | t }}"
            aria-label="{{ 'general.search.placeholder' | t }}"
          >
          <button type="submit" class="header__search-btn" aria-label="{{ 'general.search.submit' | t }}">
            <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="9" cy="9" r="7" stroke="currentColor" stroke-width="2"/>
              <path d="M14 14L19 19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </form>
      {%- endif -%}

      <!-- Cart Icon -->
      <a href="{{ routes.cart_url }}" class="header__cart">
        <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 12H32L29 24H13L10 12Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <circle cx="15" cy="30" r="2" fill="currentColor"/>
          <circle cx="27" cy="30" r="2" fill="currentColor"/>
          <path d="M5 6H10L13 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>

      <!-- Location -->
      {%- if show_location -%}
        <div class="header__location">
          <span class="header__location-text">{{ location_text }}</span>
          <svg class="header__location-arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      {%- endif -%}

      <!-- Login Button -->
      <a href="{{ routes.account_login_url }}" class="header__login btn btn--primary">
        {{ 'customer.login.sign_in' | t | default: 'login' }}
      </a>
    </div>
  </div>
</header>

<!-- Category Navigation -->
<nav class="category-nav">
  <div class="category-nav__inner">
    <ul class="category-nav__list">
      {%- for link in section.settings.menu.links -%}
        <li class="category-nav__item">
          <a href="{{ link.url }}" class="category-nav__link">
            <svg class="category-nav__arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>{{ link.title }}</span>
          </a>
          {%- if link.links.size > 0 -%}
            <ul class="category-nav__dropdown">
              {%- for child_link in link.links -%}
                <li>
                  <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </li>
      {%- endfor -%}

      {%- if section.settings.menu == blank -%}
        {%- assign category_items = 'smart speaker,ear buds,Tablet,Laptop,Phone,Earbuds' | split: ',' -%}
        {%- for item in category_items -%}
          <li class="category-nav__item">
            <a href="{{ routes.collections_url }}/{{ item | handleize }}" class="category-nav__link">
              <svg class="category-nav__arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{{ item }}</span>
            </a>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</nav>

{% stylesheet %}
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  background-color: var(--color-white);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.header__inner {
  width: 100%;
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.header__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 54px;
  height: 76px;
}

.header__logo {
  flex-shrink: 0;
  width: 140px;
  height: 41px;
}

.header__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.header__logo-text {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 24px;
  color: var(--color-navy);
}

.header__search {
  position: relative;
  flex: 1;
  max-width: 688px;
}

.header__search-input {
  width: 100%;
  height: 41px;
  padding: 0 50px 0 20px;
  font-family: var(--font-body);
  font-size: 14px;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-pill);
  box-shadow: var(--shadow-sm);
}

.header__search-input:focus {
  outline: none;
  box-shadow: var(--shadow-md);
}

.header__search-btn {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  padding: 0;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--color-black);
}

.header__cart {
  position: relative;
  color: var(--color-black);
}

.header__cart-count {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-mono);
  font-size: 10px;
  font-weight: 700;
  color: var(--color-white);
  background-color: var(--color-green);
  border-radius: 50%;
}

.header__location {
  display: flex;
  align-items: center;
  gap: 4px;
  cursor: pointer;
}

.header__location-text {
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-black);
}

.header__location-arrow {
  width: 13px;
  height: 7px;
}

.header__login {
  height: 32px;
  min-width: 89px;
}

/* Category Navigation */
.category-nav {
  position: sticky;
  top: 76px;
  z-index: 99;
  width: 100%;
  background-color: var(--color-white);
  box-shadow: 4px 4px 3.9px 0px var(--color-navy);
}

.category-nav__inner {
  width: 100%;
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.category-nav__list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 0 114px;
  padding: 20px 0;
}

.category-nav__item {
  position: relative;
}

.category-nav__link {
  display: flex;
  align-items: center;
  gap: 10px;
  font-family: var(--font-heading);
  font-weight: 500;
  font-size: 16px;
  color: var(--color-navy);
  transition: color var(--transition-fast);
}

.category-nav__link:hover {
  color: var(--color-blue);
}

.category-nav__arrow {
  width: 13px;
  height: 7px;
  transition: transform var(--transition-fast);
}

.category-nav__item:hover .category-nav__arrow {
  transform: rotate(180deg);
}

.category-nav__dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  min-width: 180px;
  padding: 12px 0;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-sm);
  box-shadow: var(--shadow-md);
  opacity: 0;
  visibility: hidden;
  transform: translateY(10px);
  transition: all var(--transition-fast);
}

.category-nav__dropdown.is-visible,
.category-nav__item:hover .category-nav__dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.category-nav__dropdown li a {
  display: block;
  padding: 8px 16px;
  font-family: var(--font-body);
  font-size: 14px;
  color: var(--color-black);
  transition: background-color var(--transition-fast);
}

.category-nav__dropdown li a:hover {
  background-color: var(--color-light-blue);
}

@media screen and (max-width: 992px) {
  .header__content {
    gap: 20px;
    flex-wrap: wrap;
    height: auto;
    padding: 16px 0;
  }

  .header__search {
    order: 10;
    flex: 0 0 100%;
    max-width: 100%;
  }

  .category-nav__list {
    gap: 16px 40px;
  }
}

@media screen and (max-width: 768px) {
  .header__location {
    display: none;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Category Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show Location",
      "default": true
    },
    {
      "type": "text",
      "id": "location_text",
      "label": "Location Text",
      "default": "Bengaluru"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

