/* Menu List */
.mega-menu__list {
  display: flex;
  align-items: center;
  gap: 8px;
  height: 100%;
}

.mega-menu__item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.mega-menu__link {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
