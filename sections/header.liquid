{%- liquid
  assign logo = section.settings.logo
  assign show_search = section.settings.show_search
  assign show_location = section.settings.show_location
  assign location_text = section.settings.location_text | default: 'Bengaluru'
  assign icon_type = section.settings.header_icon_type
  assign custom_icon = section.settings.header_custom_icon
  assign icon_color_primary = section.settings.header_icon_color_primary
  assign icon_color_accent = section.settings.header_icon_color_accent
  assign header_bg_image = section.settings.background_image
  assign enable_sticky = section.settings.enable_sticky
  assign menu_style = section.settings.menu_style
  assign promo_position = section.settings.promo_position
  assign menu_bg_image = section.settings.menu_background_image
-%}

<header class="header"{% if header_bg_image != blank %} style="background-image: url('{{ header_bg_image | image_url: width: 1920 }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"{% endif %}>
  <div class="header__inner">
    <div class="header__content">
      <!-- Logo -->
      <a href="{{ routes.root_url }}" class="header__logo">
        {%- if logo != blank -%}
          <img 
            src="{{ logo | image_url: width: 140 }}" 
            alt="{{ shop.name }}"
            width="140"
            height="41"
            loading="eager"
          >
        {%- else -%}
          <div class="header__logo-placeholder">
            <svg width="140" height="41" viewBox="0 0 140 41" fill="none" xmlns="http://www.w3.org/2000/svg">
              <text x="0" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">R</text>
              <text x="22" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#28D98E">3</text>
              <text x="40" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">GURU</text>
              <text x="0" y="40" font-family="Overpass, sans-serif" font-size="6" fill="#1E1A5C">Save Money, Save Planet</text>
            </svg>
          </div>
        {%- endif -%}
      </a>

      <!-- Search Bar -->
      {%- if show_search -%}
        <form action="{{ routes.search_url }}" method="get" class="header__search">
          <input 
            type="search" 
            name="q" 
            class="header__search-input"
            placeholder="{{ 'general.search.placeholder' | t }}"
            aria-label="{{ 'general.search.placeholder' | t }}"
          >
          <button type="submit" class="header__search-btn" aria-label="{{ 'general.search.submit' | t }}">
            <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="9.5" cy="9.5" r="7.5" stroke="currentColor" stroke-width="2"/>
              <path d="M15 15L20 20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </form>
      {%- endif -%}

      <!-- Cart/Franchise Icon -->
      {%- liquid
        if icon_type == 'cart'
          assign icon_url = routes.cart_url
          assign icon_aria_label = 'Cart'
        else
          assign icon_url = '/pages/franchise'
          if section.settings.franchise_page != blank
            assign icon_url = section.settings.franchise_page.url
          elsif section.settings.franchise_url != blank
            assign icon_url = section.settings.franchise_url
          elsif pages['franchise'] != blank
            assign icon_url = pages['franchise'].url
          elsif pages['Franchise'] != blank
            assign icon_url = pages['Franchise'].url
          endif
          assign icon_aria_label = 'Franchise'
        endif
      -%}
      <a href="{{ icon_url }}" class="header__cart" aria-label="{{ icon_aria_label }}">
        {%- if custom_icon != blank -%}
          <img 
            src="{{ custom_icon | image_url: width: 74 }}" 
            alt="Franchise"
            width="37"
            height="38"
            loading="eager"
            class="header__cart-custom-icon"
          >
        {%- elsif icon_type == 'cart' -%}
          <!-- Shopping Cart Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M5 5H8L11 25H29L33 10H9" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="13" cy="32" r="3" fill="{{ icon_color_accent }}"/>
            <circle cx="27" cy="32" r="3" fill="{{ icon_color_accent }}"/>
          </svg>
          <span class="header__cart-count" data-cart-count>{{ cart.item_count }}</span>
        {%- elsif icon_type == 'store' -%}
          <!-- Store/Shop Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M4 14L7 4H30L33 14" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M4 14V34H33V14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M4 14C4 16.2091 5.79086 18 8 18C10.2091 18 12 16.2091 12 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M12 14C12 16.2091 13.7909 18 16 18C18.2091 18 20 16.2091 20 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M20 14C20 16.2091 21.7909 18 24 18C26.2091 18 28 16.2091 28 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M28 14C28 16.2091 29.7909 18 32 18C34.2091 18 33 16.2091 33 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <rect x="14" y="22" width="9" height="12" fill="{{ icon_color_accent }}"/>
          </svg>
        {%- elsif icon_type == 'heart' -%}
          <!-- Heart/Wishlist Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M18.5 33L16.19 30.885C8.14 23.59 3 18.945 3 13.25C3 8.605 6.708 5 11.45 5C14.09 5 16.624 6.21 18.5 8.13C20.376 6.21 22.91 5 25.55 5C30.292 5 34 8.605 34 13.25C34 18.945 28.86 23.59 20.81 30.885L18.5 33Z" stroke="{{ icon_color_primary }}" stroke-width="2" fill="{{ icon_color_accent }}" fill-opacity="0.3"/>
          </svg>
        {%- elsif icon_type == 'user' -%}
          <!-- User/Profile Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <circle cx="18.5" cy="12" r="7" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M5 35C5 28.373 10.373 23 18.5 23C26.627 23 32 28.373 32 35" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round"/>
            <circle cx="18.5" cy="12" r="4" fill="{{ icon_color_accent }}" fill-opacity="0.5"/>
          </svg>
        {%- else -%}
          <!-- Default Bag Icon (original) -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M6 14H31V32H6V14Z" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M10 14V10C10 6.13401 13.134 3 17 3H20C23.866 3 27 6.13401 27 10V14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <rect x="12" y="20" width="13" height="3" fill="{{ icon_color_accent }}"/>
            <rect x="12" y="25" width="13" height="3" fill="{{ icon_color_accent }}"/>
            <rect x="16" y="18" width="5" height="12" fill="{{ icon_color_primary }}"/>
          </svg>
        {%- endif -%}
      </a>

      <!-- Location Selector -->
      {%- if show_location -%}
        <div class="header__location">
          <span class="header__location-text">{{ location_text }}</span>
          <svg class="header__location-arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      {%- endif -%}

      {%- if shop.customer_accounts_enabled -%}
        {%- if customer -%}
          <a href="{{ routes.account_url }}" class="header__login" rel="nofollow">
            {{ 'customer.account.title' | t | default: 'Account' }}
          </a>
        {%- else -%}
          <a href="{{ routes.account_login_url }}" class="header__login" rel="nofollow">
            {{ 'customer.login.sign_in' | t | default: 'Login' }}
          </a>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
</header>

<!-- Mega Menu Navigation -->
<nav 
  class="mega-menu{% if enable_sticky %} mega-menu--sticky{% endif %} mega-menu--{{ menu_style }}"
  role="navigation"
  aria-label="{{ 'general.accessibility.main_navigation' | t }}"
  data-mega-menu
  {% if menu_bg_image != blank %} style="background-image: url('{{ menu_bg_image | image_url: width: 1920 }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"{% endif %}
>
  <div class="mega-menu__inner">
    <ul class="mega-menu__list">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu_item' -%}
            {%- liquid
              assign has_dropdown = block.settings.enable_mega_dropdown
              assign dropdown_columns = block.settings.dropdown_columns
              assign featured_image = block.settings.featured_image
              assign featured_title = block.settings.featured_title
              assign featured_link = block.settings.featured_link
              assign featured_link_text = block.settings.featured_link_text
              assign links_1 = block.settings.menu_1
              assign links_2 = block.settings.menu_2
              assign links_3 = block.settings.menu_3
              assign links_4 = block.settings.menu_4
              assign column_1_title = block.settings.column_1_title
              assign column_2_title = block.settings.column_2_title
              assign column_3_title = block.settings.column_3_title
              assign column_4_title = block.settings.column_4_title
            -%}
            
            <li 
              class="mega-menu__item{% if has_dropdown %} has-dropdown{% endif %}"
              {{ block.shopify_attributes }}
              {% if has_dropdown %}data-mega-dropdown{% endif %}
            >
              <a 
                href="{{ block.settings.link }}" 
                class="mega-menu__link"
                {% if has_dropdown %}
                  aria-haspopup="true"
                  aria-expanded="false"
                {% endif %}
              >
                <span class="mega-menu__link-text">{{ block.settings.title }}</span>
                {%- if has_dropdown -%}
                  <svg class="mega-menu__arrow" width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                {%- endif -%}
              </a>
              
              {%- if has_dropdown -%}
                <div class="mega-menu__dropdown mega-menu__dropdown--{{ dropdown_columns }}-col" data-dropdown-panel>
                  <div class="mega-menu__dropdown-inner">
                    {%- if promo_position == 'left' and featured_image != blank -%}
                      <div class="mega-menu__promo mega-menu__promo--left">
                        <a href="{{ featured_link }}" class="mega-menu__promo-link">
                          <div class="mega-menu__promo-image-wrapper">
                            <img 
                              src="{{ featured_image | image_url: width: 400 }}"
                              alt="{{ featured_title | escape }}"
                              width="400"
                              height="300"
                              loading="lazy"
                              class="mega-menu__promo-image"
                            >
                            <div class="mega-menu__promo-overlay"></div>
                          </div>
                          <div class="mega-menu__promo-content">
                            {%- if featured_title != blank -%}
                              <h4 class="mega-menu__promo-title">{{ featured_title }}</h4>
                            {%- endif -%}
                            {%- if featured_link_text != blank -%}
                              <span class="mega-menu__promo-cta">
                                {{ featured_link_text }}
                                <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                                  <path d="M1 6H11M11 6L6 1M11 6L6 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                              </span>
                            {%- endif -%}
                          </div>
                        </a>
                      </div>
                    {%- endif -%}
                    
                    <div class="mega-menu__columns">
                      {%- if links_1 != blank -%}
                        <div class="mega-menu__column">
                          {%- if column_1_title != blank -%}
                            <h5 class="mega-menu__column-title">{{ column_1_title }}</h5>
                          {%- endif -%}
                          <ul class="mega-menu__sublist">
                            {%- for link in links_1.links -%}
                              <li class="mega-menu__subitem">
                                <a href="{{ link.url }}" class="mega-menu__sublink">
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}
                      
                      {%- if links_2 != blank -%}
                        <div class="mega-menu__column">
                          {%- if column_2_title != blank -%}
                            <h5 class="mega-menu__column-title">{{ column_2_title }}</h5>
                          {%- endif -%}
                          <ul class="mega-menu__sublist">
                            {%- for link in links_2.links -%}
                              <li class="mega-menu__subitem">
                                <a href="{{ link.url }}" class="mega-menu__sublink">
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}
                      
                      {%- if links_3 != blank -%}
                        <div class="mega-menu__column">
                          {%- if column_3_title != blank -%}
                            <h5 class="mega-menu__column-title">{{ column_3_title }}</h5>
                          {%- endif -%}
                          <ul class="mega-menu__sublist">
                            {%- for link in links_3.links -%}
                              <li class="mega-menu__subitem">
                                <a href="{{ link.url }}" class="mega-menu__sublink">
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}
                      
                      {%- if links_4 != blank -%}
                        <div class="mega-menu__column">
                          {%- if column_4_title != blank -%}
                            <h5 class="mega-menu__column-title">{{ column_4_title }}</h5>
                          {%- endif -%}
                          <ul class="mega-menu__sublist">
                            {%- for link in links_4.links -%}
                              <li class="mega-menu__subitem">
                                <a href="{{ link.url }}" class="mega-menu__sublink">
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      {%- endif -%}
                    </div>
                    
                    {%- if promo_position == 'right' and featured_image != blank -%}
                      <div class="mega-menu__promo mega-menu__promo--right">
                        <a href="{{ featured_link }}" class="mega-menu__promo-link">
                          <div class="mega-menu__promo-image-wrapper">
                            <img 
                              src="{{ featured_image | image_url: width: 400 }}"
                              alt="{{ featured_title | escape }}"
                              width="400"
                              height="300"
                              loading="lazy"
                              class="mega-menu__promo-image"
                            >
                            <div class="mega-menu__promo-overlay"></div>
                          </div>
                          <div class="mega-menu__promo-content">
                            {%- if featured_title != blank -%}
                              <h4 class="mega-menu__promo-title">{{ featured_title }}</h4>
                            {%- endif -%}
                            {%- if featured_link_text != blank -%}
                              <span class="mega-menu__promo-cta">
                                {{ featured_link_text }}
                                <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                                  <path d="M1 6H11M11 6L6 1M11 6L6 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                              </span>
                            {%- endif -%}
                          </div>
                        </a>
                      </div>
                    {%- endif -%}
                  </div>
                  
                  {%- comment -%} Bottom promo banner {%- endcomment -%}
                  {%- if block.settings.show_promo_banner -%}
                    <div class="mega-menu__promo-banner">
                      <div class="mega-menu__promo-banner-inner">
                        {%- if block.settings.promo_badge != blank -%}
                          <span class="mega-menu__promo-badge">{{ block.settings.promo_badge }}</span>
                        {%- endif -%}
                        <span class="mega-menu__promo-text">{{ block.settings.promo_text }}</span>
                        {%- if block.settings.promo_link != blank -%}
                          <a href="{{ block.settings.promo_link }}" class="mega-menu__promo-link-text">
                            {{ block.settings.promo_link_text | default: 'Shop Now' }}
                            <svg width="10" height="10" viewBox="0 0 10 10" fill="none">
                              <path d="M1 5H9M9 5L5 1M9 5L5 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                          </a>
                        {%- endif -%}
                      </div>
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </li>
            
          {%- when 'simple_link' -%}
            <li class="mega-menu__item" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link }}" class="mega-menu__link">
                <span class="mega-menu__link-text">{{ block.settings.title }}</span>
                {%- if block.settings.badge != blank -%}
                  <span class="mega-menu__badge mega-menu__badge--{{ block.settings.badge_style }}">
                    {{ block.settings.badge }}
                  </span>
                {%- endif -%}
              </a>
            </li>
            
          {%- when 'separator' -%}
            <li class="mega-menu__separator" aria-hidden="true" {{ block.shopify_attributes }}></li>
            
        {%- endcase -%}
      {%- endfor -%}
    </ul>
    
    {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
    <button 
      type="button" 
      class="mega-menu__mobile-toggle" 
      aria-label="{{ 'general.accessibility.toggle_menu' | t }}"
      data-mobile-menu-toggle
    >
      <span class="mega-menu__hamburger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>
  </div>
  
  {%- comment -%} Mobile Menu Drawer {%- endcomment -%}
  <div class="mega-menu__mobile-drawer" data-mobile-drawer>
    <div class="mega-menu__mobile-header">
      <span class="mega-menu__mobile-title">{{ 'general.navigation.menu' | t | default: 'Menu' }}</span>
      <button type="button" class="mega-menu__mobile-close" data-mobile-menu-close aria-label="{{ 'general.accessibility.close_menu' | t }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    <div class="mega-menu__mobile-content">
      <ul class="mega-menu__mobile-list">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'menu_item' -%}
              {%- liquid
                assign has_dropdown = block.settings.enable_mega_dropdown
                assign links_1 = block.settings.menu_1
                assign links_2 = block.settings.menu_2
                assign links_3 = block.settings.menu_3
                assign links_4 = block.settings.menu_4
              -%}
              
              <li class="mega-menu__mobile-item{% if has_dropdown %} has-children{% endif %}">
                <div class="mega-menu__mobile-item-header">
                  <a href="{{ block.settings.link }}" class="mega-menu__mobile-link">
                    {{ block.settings.title }}
                  </a>
                  {%- if has_dropdown -%}
                    <button type="button" class="mega-menu__mobile-expand" data-mobile-expand aria-label="{{ 'general.accessibility.expand_submenu' | t }}">
                      <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                        <path d="M6 2V10M2 6H10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                      </svg>
                    </button>
                  {%- endif -%}
                </div>
                
                {%- if has_dropdown -%}
                  <div class="mega-menu__mobile-submenu" data-mobile-submenu>
                    {%- if links_1 != blank -%}
                      {%- if block.settings.column_1_title != blank -%}
                        <span class="mega-menu__mobile-category">{{ block.settings.column_1_title }}</span>
                      {%- endif -%}
                      <ul class="mega-menu__mobile-sublist">
                        {%- for link in links_1.links -%}
                          <li><a href="{{ link.url }}" class="mega-menu__mobile-sublink">{{ link.title }}</a></li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                    
                    {%- if links_2 != blank -%}
                      {%- if block.settings.column_2_title != blank -%}
                        <span class="mega-menu__mobile-category">{{ block.settings.column_2_title }}</span>
                      {%- endif -%}
                      <ul class="mega-menu__mobile-sublist">
                        {%- for link in links_2.links -%}
                          <li><a href="{{ link.url }}" class="mega-menu__mobile-sublink">{{ link.title }}</a></li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                    
                    {%- if links_3 != blank -%}
                      {%- if block.settings.column_3_title != blank -%}
                        <span class="mega-menu__mobile-category">{{ block.settings.column_3_title }}</span>
                      {%- endif -%}
                      <ul class="mega-menu__mobile-sublist">
                        {%- for link in links_3.links -%}
                          <li><a href="{{ link.url }}" class="mega-menu__mobile-sublink">{{ link.title }}</a></li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                    
                    {%- if links_4 != blank -%}
                      {%- if block.settings.column_4_title != blank -%}
                        <span class="mega-menu__mobile-category">{{ block.settings.column_4_title }}</span>
                      {%- endif -%}
                      <ul class="mega-menu__mobile-sublist">
                        {%- for link in links_4.links -%}
                          <li><a href="{{ link.url }}" class="mega-menu__mobile-sublink">{{ link.title }}</a></li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </li>
              
            {%- when 'simple_link' -%}
              <li class="mega-menu__mobile-item">
                <a href="{{ block.settings.link }}" class="mega-menu__mobile-link">
                  {{ block.settings.title }}
                  {%- if block.settings.badge != blank -%}
                    <span class="mega-menu__badge mega-menu__badge--{{ block.settings.badge_style }}">
                      {{ block.settings.badge }}
                    </span>
                  {%- endif -%}
                </a>
              </li>
              
          {%- endcase -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>
  
  {%- comment -%} Mobile Overlay {%- endcomment -%}
  <div class="mega-menu__overlay" data-mobile-overlay></div>
</nav>

{% stylesheet %}
/* ==========================================================================
   Header Styles
   ========================================================================== */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 76px;
  background-color: var(--color-white);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.header__inner {
  width: 100%;
  max-width: var(--container-max);
  height: 100%;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.header__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 69px;
  height: 100%;
}

.header__logo {
  flex-shrink: 0;
  width: 140px;
  height: 41px;
}

.header__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

