{%- liquid
  assign logo = section.settings.logo
  assign show_search = section.settings.show_search
  assign show_location = section.settings.show_location
  assign location_text = section.settings.location_text | default: 'Bengaluru'
  assign icon_type = section.settings.header_icon_type
  assign custom_icon = section.settings.header_custom_icon
  assign icon_color_primary = section.settings.header_icon_color_primary
  assign icon_color_accent = section.settings.header_icon_color_accent
  assign bg_image = section.settings.background_image
  assign cart_type = settings.cart_type | default: 'drawer'
  assign mobile_menu_custom_icon = section.settings.mobile_menu_custom_icon
-%}

<header class="header" data-cart-type="{{ cart_type }}"{% if bg_image != blank %} style="background-image: url('{{ bg_image | image_url: width: 1920 }}'); background-size: cover; background-position: center; background-repeat: no-repeat;"{% endif %}>
  {%- comment -%} Desktop Header {%- endcomment -%}
  <div class="header__inner header__desktop">
    <div class="header__content">
      <!-- Logo -->
      <a href="{{ routes.root_url }}" class="header__logo">
        {%- if logo != blank -%}
          <img 
            src="{{ logo | image_url: width: 140 }}" 
            alt="{{ shop.name }}"
            width="140"
            height="41"
            loading="eager"
          >
        {%- else -%}
          <div class="header__logo-placeholder">
            <svg width="140" height="41" viewBox="0 0 140 41" fill="none" xmlns="http://www.w3.org/2000/svg">
              <text x="0" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">R</text>
              <text x="22" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#28D98E">3</text>
              <text x="40" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">GURU</text>
              <text x="0" y="40" font-family="Overpass, sans-serif" font-size="6" fill="#1E1A5C">Save Money, Save Planet</text>
            </svg>
          </div>
        {%- endif -%}
      </a>

      <!-- Search Bar -->
      {%- if show_search -%}
        <div class="header__search-wrapper">
          <form action="{{ routes.search_url }}" method="get" class="header__search" data-search-form>
            <input 
              type="search" 
              name="q" 
              class="header__search-input"
              placeholder="{{ 'general.search.placeholder' | t }}"
              aria-label="{{ 'general.search.placeholder' | t }}"
              autocomplete="off"
              data-search-input
            >
            <button type="submit" class="header__search-btn" aria-label="{{ 'general.search.submit' | t }}">
              <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="9.5" cy="9.5" r="7.5" stroke="currentColor" stroke-width="2"/>
                <path d="M15 15L20 20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </button>
          </form>
          <div class="header__search-results" data-search-results aria-live="polite" aria-atomic="true">
            <div class="header__search-results-content" data-search-results-content></div>
          </div>
        </div>
      {%- endif -%}

      <!-- Cart/Franchise Icon -->
      {%- liquid
        if icon_type == 'cart'
          assign icon_url = routes.cart_url
          assign icon_aria_label = 'Cart'
        else
          assign icon_url = '/pages/franchise'
          if section.settings.franchise_page != blank
            assign icon_url = section.settings.franchise_page.url
          elsif section.settings.franchise_url != blank
            assign icon_url = section.settings.franchise_url
          elsif pages['franchise'] != blank
            assign icon_url = pages['franchise'].url
          elsif pages['Franchise'] != blank
            assign icon_url = pages['Franchise'].url
          endif
          assign icon_aria_label = 'Franchise'
        endif
      -%}
      <a href="{{ icon_url }}" class="header__cart" aria-label="{{ icon_aria_label }}"{% if icon_type == 'cart' and cart_type == 'drawer' %} data-cart-drawer-trigger{% endif %}>
        {%- if custom_icon != blank -%}
          <img 
            src="{{ custom_icon | image_url: width: 74 }}" 
            alt="Franchise"
            width="37"
            height="38"
            loading="eager"
            class="header__cart-custom-icon"
          >
        {%- elsif icon_type == 'cart' -%}
          <!-- Shopping Cart Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M5 5H8L11 25H29L33 10H9" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="13" cy="32" r="3" fill="{{ icon_color_accent }}"/>
            <circle cx="27" cy="32" r="3" fill="{{ icon_color_accent }}"/>
          </svg>
          <span class="header__cart-count" data-cart-count>{{ cart.item_count }}</span>
        {%- elsif icon_type == 'store' -%}
          <!-- Store/Shop Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M4 14L7 4H30L33 14" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M4 14V34H33V14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M4 14C4 16.2091 5.79086 18 8 18C10.2091 18 12 16.2091 12 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M12 14C12 16.2091 13.7909 18 16 18C18.2091 18 20 16.2091 20 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M20 14C20 16.2091 21.7909 18 24 18C26.2091 18 28 16.2091 28 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M28 14C28 16.2091 29.7909 18 32 18C34.2091 18 33 16.2091 33 14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <rect x="14" y="22" width="9" height="12" fill="{{ icon_color_accent }}"/>
          </svg>
        {%- elsif icon_type == 'heart' -%}
          <!-- Heart/Wishlist Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M18.5 33L16.19 30.885C8.14 23.59 3 18.945 3 13.25C3 8.605 6.708 5 11.45 5C14.09 5 16.624 6.21 18.5 8.13C20.376 6.21 22.91 5 25.55 5C30.292 5 34 8.605 34 13.25C34 18.945 28.86 23.59 20.81 30.885L18.5 33Z" stroke="{{ icon_color_primary }}" stroke-width="2" fill="{{ icon_color_accent }}" fill-opacity="0.3"/>
          </svg>
        {%- elsif icon_type == 'user' -%}
          <!-- User/Profile Icon -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <circle cx="18.5" cy="12" r="7" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M5 35C5 28.373 10.373 23 18.5 23C26.627 23 32 28.373 32 35" stroke="{{ icon_color_primary }}" stroke-width="2" stroke-linecap="round"/>
            <circle cx="18.5" cy="12" r="4" fill="{{ icon_color_accent }}" fill-opacity="0.5"/>
          </svg>
        {%- else -%}
          <!-- Default Bag Icon (original) -->
          <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__cart-svg">
            <path d="M6 14H31V32H6V14Z" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <path d="M10 14V10C10 6.13401 13.134 3 17 3H20C23.866 3 27 6.13401 27 10V14" stroke="{{ icon_color_primary }}" stroke-width="2"/>
            <rect x="12" y="20" width="13" height="3" fill="{{ icon_color_accent }}"/>
            <rect x="12" y="25" width="13" height="3" fill="{{ icon_color_accent }}"/>
            <rect x="16" y="18" width="5" height="12" fill="{{ icon_color_primary }}"/>
          </svg>
        {%- endif -%}
      </a>

      <!-- Location Selector -->
      {%- if show_location -%}
        <div class="header__location">
          <span class="header__location-text">{{ location_text }}</span>
          <svg class="header__location-arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      {%- endif -%}

      {%- if shop.customer_accounts_enabled -%}
        {%- if customer -%}
          <a href="{{ routes.account_url }}" class="header__login" rel="nofollow">
            {{ 'customer.account.title' | t | default: 'Account' }}
          </a>
        {%- else -%}
          <a href="{{ routes.account_login_url }}" class="header__login" rel="nofollow">
            {{ 'customer.login.sign_in' | t | default: 'Login' }}
          </a>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Mobile Header (Figma Design) {%- endcomment -%}
  <div class="header__mobile">
    <div class="header__mobile-top">
      {%- comment -%} Left: Categories/Navigation Icon - Links to Franchise Page {%- endcomment -%}
      {%- liquid
        assign franchise_url = '/pages/franchise'
        if section.settings.franchise_page != blank
          assign franchise_url = section.settings.franchise_page.url
        elsif section.settings.franchise_url != blank
          assign franchise_url = section.settings.franchise_url
        elsif pages['franchise'] != blank
          assign franchise_url = pages['franchise'].url
        elsif pages['Franchise'] != blank
          assign franchise_url = pages['Franchise'].url
        endif
      -%}
      <a 
        href="{{ franchise_url }}" 
        class="header__mobile-menu-btn" 
        aria-label="{{ 'general.navigation.menu' | t | default: 'Franchise' }}"
      >
        {%- if mobile_menu_custom_icon != blank -%}
          <img 
            src="{{ mobile_menu_custom_icon | image_url: width: 48 }}" 
            alt="{{ 'general.navigation.menu' | t | default: 'Franchise' }}"
            width="24"
            height="24"
            loading="eager"
            class="header__mobile-menu-custom-icon"
          >
        {%- else -%}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="header__mobile-menu-svg">
            {%- comment -%} Hierarchical/building icon - two small buildings at bottom, one larger at top {%- endcomment -%}
            {%- comment -%} Bottom left building {%- endcomment -%}
            <rect x="4" y="16" width="6" height="6" fill="var(--color-green)" stroke="var(--color-green)" stroke-width="1.5"/>
            <line x1="5" y1="18" x2="9" y2="18" stroke="var(--color-navy)" stroke-width="1"/>
            <line x1="5" y1="20" x2="9" y2="20" stroke="var(--color-navy)" stroke-width="1"/>
            {%- comment -%} Bottom right building {%- endcomment -%}
            <rect x="14" y="16" width="6" height="6" fill="var(--color-green)" stroke="var(--color-green)" stroke-width="1.5"/>
            <line x1="15" y1="18" x2="19" y2="18" stroke="var(--color-navy)" stroke-width="1"/>
            <line x1="15" y1="20" x2="19" y2="20" stroke="var(--color-navy)" stroke-width="1"/>
            {%- comment -%} Top building (larger) {%- endcomment -%}
            <rect x="7" y="8" width="10" height="8" fill="var(--color-green)" stroke="var(--color-green)" stroke-width="1.5"/>
            <line x1="8" y1="10" x2="16" y2="10" stroke="var(--color-navy)" stroke-width="1"/>
            <line x1="8" y1="12" x2="16" y2="12" stroke="var(--color-navy)" stroke-width="1"/>
            <line x1="8" y1="14" x2="16" y2="14" stroke="var(--color-navy)" stroke-width="1"/>
            {%- comment -%} Connecting lines from bottom buildings to top building {%- endcomment -%}
            <line x1="7" y1="16" x2="7" y2="8" stroke="var(--color-green)" stroke-width="1.5" stroke-linecap="round"/>
            <line x1="17" y1="16" x2="17" y2="8" stroke="var(--color-green)" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        {%- endif -%}
      </a>

      {%- comment -%} Center: Logo {%- endcomment -%}
      <a href="{{ routes.root_url }}" class="header__mobile-logo">
        {%- if logo != blank -%}
          <img 
            src="{{ logo | image_url: width: 140 }}" 
            alt="{{ shop.name }}"
            width="140"
            height="41"
            loading="eager"
          >
        {%- else -%}
          <div class="header__mobile-logo-placeholder">
            <svg width="120" height="36" viewBox="0 0 120 36" fill="none" xmlns="http://www.w3.org/2000/svg">
              <text x="0" y="26" font-family="Syne, sans-serif" font-size="24" font-weight="700" fill="var(--color-navy)">R</text>
              <path d="M18 6C18 6 20 2 24 2C28 2 30 6 30 6C30 6 28 10 24 10C20 10 18 6 18 6Z" fill="var(--color-green)"/>
              <path d="M18 6C18 6 20 2 24 2C28 2 30 6C30 6 28 10 24 10C20 10 18 6 18 6Z" stroke="var(--color-green)" stroke-width="1.5" fill="none"/>
              <text x="34" y="26" font-family="Syne, sans-serif" font-size="24" font-weight="700" fill="var(--color-navy)">GURU</text>
              <text x="0" y="34" font-family="Overpass, sans-serif" font-size="5" fill="var(--color-green)">Save Money, Save Planet</text>
            </svg>
          </div>
        {%- endif -%}
      </a>

      {%- comment -%} Right: User Profile Icon {%- endcomment -%}
      {%- if shop.customer_accounts_enabled -%}
        {%- if customer -%}
          <a href="{{ routes.account_url }}" class="header__mobile-user" aria-label="{{ 'customer.account.title' | t | default: 'Account' }}" rel="nofollow">
        {%- else -%}
          <a href="{{ routes.account_login_url }}" class="header__mobile-user" aria-label="{{ 'customer.login.sign_in' | t | default: 'Login' }}" rel="nofollow">
        {%- endif -%}
      {%- else -%}
        <button type="button" class="header__mobile-user" aria-label="Account" disabled>
      {%- endif -%}
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="12" cy="8" r="5" stroke="var(--color-navy)" stroke-width="2" fill="none"/>
          <path d="M4 20C4 15.5817 7.58172 12 12 12C16.4183 12 20 15.5817 20 20" stroke="var(--color-navy)" stroke-width="2" stroke-linecap="round"/>
        </svg>
      {%- if shop.customer_accounts_enabled -%}
        </a>
      {%- else -%}
        </button>
      {%- endif -%}
    </div>

    {%- comment -%} Bottom: Search Bar {%- endcomment -%}
    {%- if show_search -%}
      <div class="header__mobile-search-wrapper">
        <form action="{{ routes.search_url }}" method="get" class="header__mobile-search" data-search-form>
          <input 
            type="search" 
            name="q" 
            class="header__mobile-search-input"
            placeholder="{{ 'general.search.placeholder' | t }}"
            aria-label="{{ 'general.search.placeholder' | t }}"
            autocomplete="off"
            data-search-input
          >
          <button type="submit" class="header__mobile-search-btn" aria-label="{{ 'general.search.submit' | t }}">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="9" cy="9" r="7" stroke="var(--color-green)" stroke-width="2" fill="none"/>
              <path d="M14 14L18 18" stroke="var(--color-green)" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </form>
        <div class="header__mobile-search-results" data-search-results aria-live="polite" aria-atomic="true">
          <div class="header__mobile-search-results-content" data-search-results-content></div>
        </div>
      </div>
    {%- endif -%}
  </div>
</header>

{%- comment -%} Connect header mobile menu button to mega-menu drawer {%- endcomment -%}
{%- comment -%} Note: Mobile menu button now links to franchise page, so menu toggle functionality removed {%- endcomment -%}
<script>
  (function() {
    const megaMenu = document.querySelector('[data-mega-menu]');
    if (!megaMenu) return;

    const mobileDrawer = megaMenu.querySelector('[data-mobile-drawer]');
    const mobileToggle = megaMenu.querySelector('[data-mobile-menu-toggle]');
    const mobileClose = megaMenu.querySelector('[data-mobile-menu-close]');
    const overlay = megaMenu.querySelector('[data-mobile-overlay]');

    const closeMobileMenu = () => {
      if (mobileToggle) mobileToggle.classList.remove('is-active');
      if (mobileDrawer) mobileDrawer.classList.remove('is-open');
      if (overlay) overlay.classList.remove('is-active');
      document.body.style.overflow = '';
    };

    // Listen for close events from the drawer
    if (mobileClose) {
      mobileClose.addEventListener('click', closeMobileMenu);
    }
    if (overlay) {
      overlay.addEventListener('click', closeMobileMenu);
    }
  })();
</script>

{% stylesheet %}
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 76px;
  background-color: var(--color-white);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.header__inner {
  width: 100%;
  max-width: var(--container-max);
  height: 100%;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.header__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 69px;
  height: 100%;
}

.header__logo {
  flex-shrink: 0;
  width: 140px;
  height: 41px;
}

.header__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.header__logo-placeholder {
  width: 100%;
  height: 100%;
}

.header__logo-placeholder svg {
  width: 100%;
  height: 100%;
}

.header__search-wrapper {
  position: relative;
  flex-shrink: 0;
  width: 688px;
}

.header__search {
  position: relative;
  width: 100%;
}

.header__search-input {
  width: 100%;
  height: 41px;
  padding: 0 50px 0 20px;
  font-family: var(--font-body);
  font-size: 14px;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 6px;
  box-shadow: 2px 2px 0px 0px var(--color-black);
  transition: box-shadow var(--transition-fast);
}

.header__search-input:focus {
  outline: none;
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.header__search-input::placeholder {
  color: var(--color-text-secondary);
}

.header__search-btn {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  padding: 0;
  width: 21px;
  height: 21px;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--color-black);
  transition: color var(--transition-fast);
}

.header__search-btn:hover {
  color: var(--color-navy);
}

.header__search-btn svg {
  width: 100%;
  height: 100%;
}

.header__search-results {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  right: 0;
  max-height: 500px;
  overflow-y: auto;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 6px;
  box-shadow: 3px 3px 0px 0px var(--color-black);
  z-index: 1000;
  display: none;
}

.header__search-results.is-visible {
  display: block;
}

.header__search-results-content {
  padding: 12px 0;
}

.header__search-results-group {
  margin-bottom: 16px;
}

.header__search-results-group:last-child {
  margin-bottom: 0;
}

.header__search-results-title {
  padding: 8px 20px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.header__search-results-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.header__search-result-item {
  margin: 0;
  padding: 0;
}

.header__search-result-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 20px;
  text-decoration: none;
  color: var(--color-black);
  transition: background-color var(--transition-fast);
  cursor: pointer;
}

.header__search-result-link:hover,
.header__search-result-link.is-focused {
  background-color: rgba(0, 0, 0, 0.05);
}

.header__search-result-image {
  flex-shrink: 0;
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 4px;
  border: 1px solid var(--color-black);
}

.header__search-result-info {
  flex: 1;
  min-width: 0;
}

.header__search-result-title {
  font-family: var(--font-body);
  font-size: 14px;
  font-weight: 600;
  color: var(--color-black);
  margin: 0 0 4px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header__search-result-price {
  font-family: var(--font-mono);
  font-size: 12px;
  font-weight: 700;
  color: var(--color-navy);
}

.header__search-result-type {
  font-family: var(--font-mono);
  font-size: 10px;
  color: var(--color-text-secondary);
  text-transform: uppercase;
}

.header__search-no-results {
  padding: 20px;
  text-align: center;
  font-family: var(--font-body);
  font-size: 14px;
  color: var(--color-text-secondary);
}

.header__search-loading {
  padding: 20px;
  text-align: center;
  font-family: var(--font-body);
  font-size: 14px;
  color: var(--color-text-secondary);
}

.header__search-results-footer {
  padding: 12px 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.header__search-view-all {
  display: block;
  text-align: center;
  padding: 10px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-white);
  background-color: var(--color-navy);
  border-radius: 4px;
  text-decoration: none;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.header__search-view-all:hover {
  transform: translate(-1px, -1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.header__search-result-title mark {
  background-color: var(--color-green);
  color: var(--color-black);
  font-weight: 700;
  padding: 0 2px;
}

.header__cart {
  position: relative;
  flex-shrink: 0;
  width: 37px;
  height: 38px;
  color: var(--color-navy);
  transition: transform var(--transition-fast);
}

.header__cart:hover {
  transform: scale(1.05);
}

.header__cart svg,
.header__cart-svg {
  width: 100%;
  height: 100%;
}

.header__cart-custom-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.header__cart-count {
  position: absolute;
  top: -5px;
  right: -5px;
  min-width: 18px;
  height: 18px;
  padding: 0 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-mono);
  font-size: 10px;
  font-weight: 700;
  color: var(--color-white);
  background-color: var(--color-green);
  border-radius: 50%;
}

.header__location {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  flex-shrink: 0;
  width: 90px;
  cursor: pointer;
  transition: opacity var(--transition-fast);
}

.header__location:hover {
  opacity: 0.7;
}

.header__location-text {
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-black);
}

.header__location-arrow {
  width: 13px;
  height: 7px;
  transition: transform var(--transition-fast);
}

.header__location:hover .header__location-arrow {
  transform: translateY(2px);
}

.header__login {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 89px;
  height: 32px;
  padding: 8px 25px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-white);
  background-color: var(--color-navy);
  border-radius: 6px;
  box-shadow: 2px 2px 0px 0px var(--color-black);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.header__login:hover {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.header__login:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

/* ==========================================================================
   Mobile Header (Figma Design)
   ========================================================================== */
.header__mobile {
  display: none;
}

.header__mobile-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background-color: #F5F5F5;
  gap: 12px;
}

.header__mobile-menu-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  padding: 0;
  background: none;
  border: none;
  cursor: pointer;
  flex-shrink: 0;
  text-decoration: none;
  transition: transform var(--transition-fast);
}

.header__mobile-menu-btn:active {
  transform: scale(0.95);
}

.header__mobile-menu-btn svg,
.header__mobile-menu-svg {
  width: 100%;
  height: 100%;
}

.header__mobile-menu-custom-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.header__mobile-logo {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  min-width: 0;
}

.header__mobile-logo img {
  max-width: 100%;
  height: auto;
  max-height: 32px;
  object-fit: contain;
}

.header__mobile-logo-placeholder {
  width: 100%;
  max-width: 120px;
  height: auto;
}

.header__mobile-logo-placeholder svg {
  width: 100%;
  height: auto;
}

.header__mobile-user {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  padding: 0;
  background: none;
  border: none;
  cursor: pointer;
  flex-shrink: 0;
  text-decoration: none;
  transition: transform var(--transition-fast);
}

.header__mobile-user:active {
  transform: scale(0.95);
}

.header__mobile-user:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.header__mobile-user svg {
  width: 100%;
  height: 100%;
}

.header__mobile-search-wrapper {
  position: relative;
  padding: 12px 16px;
  background-color: #F5F5F5;
}

.header__mobile-search {
  position: relative;
  width: 100%;
}

.header__mobile-search-input {
  width: 100%;
  height: 44px;
  padding: 0 50px 0 20px;
  font-family: var(--font-body);
  font-size: 14px;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: var(--radius-pill);
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  transition: box-shadow var(--transition-fast);
}

.header__mobile-search-input:focus {
  outline: none;
  box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.15);
}

.header__mobile-search-input::placeholder {
  color: var(--color-text-secondary);
}

.header__mobile-search-btn {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  padding: 0;
  width: 24px;
  height: 24px;
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform var(--transition-fast);
}

.header__mobile-search-btn:active {
  transform: translateY(-50%) scale(0.95);
}

.header__mobile-search-btn svg {
  width: 100%;
  height: 100%;
}

.header__mobile-search-results {
  position: absolute;
  top: calc(100% + 8px);
  left: 16px;
  right: 16px;
  max-height: 400px;
  overflow-y: auto;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 6px;
  box-shadow: 3px 3px 0px 0px var(--color-black);
  z-index: 1000;
  display: none;
}

.header__mobile-search-results.is-visible {
  display: block;
}

.header__mobile-search-results-content {
  padding: 12px 0;
}

/* Mobile search results use same classes as desktop for JavaScript compatibility */
.header__mobile-search-results .header__search-results-group {
  margin-bottom: 16px;
}

.header__mobile-search-results .header__search-results-group:last-child {
  margin-bottom: 0;
}

.header__mobile-search-results .header__search-results-title {
  padding: 8px 20px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.header__mobile-search-results .header__search-results-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.header__mobile-search-results .header__search-result-item {
  margin: 0;
  padding: 0;
}

.header__mobile-search-results .header__search-result-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 20px;
  text-decoration: none;
  color: var(--color-black);
  transition: background-color var(--transition-fast);
  cursor: pointer;
}

.header__mobile-search-results .header__search-result-link:hover,
.header__mobile-search-results .header__search-result-link.is-focused {
  background-color: rgba(0, 0, 0, 0.05);
}

.header__mobile-search-results .header__search-result-image {
  flex-shrink: 0;
  width: 50px;
  height: 50px;
  object-fit: cover;
  border-radius: 4px;
  border: 1px solid var(--color-black);
}

.header__mobile-search-results .header__search-result-info {
  flex: 1;
  min-width: 0;
}

.header__mobile-search-results .header__search-result-title {
  font-family: var(--font-body);
  font-size: 14px;
  font-weight: 600;
  color: var(--color-black);
  margin: 0 0 4px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header__mobile-search-results .header__search-result-price {
  font-family: var(--font-mono);
  font-size: 12px;
  font-weight: 700;
  color: var(--color-navy);
}

.header__mobile-search-results .header__search-result-type {
  font-family: var(--font-mono);
  font-size: 10px;
  color: var(--color-text-secondary);
  text-transform: uppercase;
}

.header__mobile-search-results .header__search-no-results {
  padding: 20px;
  text-align: center;
  font-family: var(--font-body);
  font-size: 14px;
  color: var(--color-text-secondary);
}

.header__mobile-search-results .header__search-loading {
  padding: 20px;
  text-align: center;
  font-family: var(--font-body);
  font-size: 14px;
  color: var(--color-text-secondary);
}

.header__mobile-search-results .header__search-results-footer {
  padding: 12px 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.header__mobile-search-results .header__search-view-all {
  display: block;
  text-align: center;
  padding: 10px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-white);
  background-color: var(--color-navy);
  border-radius: 4px;
  text-decoration: none;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.header__mobile-search-results .header__search-view-all:active {
  transform: translate(-1px, -1px);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.header__mobile-search-results .header__search-result-title mark {
  background-color: var(--color-green);
  color: var(--color-black);
  font-weight: 700;
  padding: 0 2px;
}

/* ==========================================================================
   Responsive Styles
   ========================================================================== */
@media screen and (max-width: 1200px) {
  .header__content {
    gap: 30px;
  }

  .header__search-wrapper {
    width: 400px;
  }
}

@media screen and (max-width: 992px) {
  /* Hide desktop header on mobile */
  .header__desktop {
    display: none;
  }

  /* Show mobile header on mobile */
  .header__mobile {
    display: block;
  }

  .header {
    height: auto;
    padding: 0;
    background-color: #F5F5F5;
  }
}

@media screen and (min-width: 993px) {
  /* Hide mobile header on desktop */
  .header__mobile {
    display: none;
  }
}

@media screen and (max-width: 576px) {
  .header__mobile-top {
    padding: 10px 12px;
  }

  .header__mobile-search-wrapper {
    padding: 10px 12px;
  }

  .header__mobile-search-input {
    height: 40px;
    font-size: 13px;
  }
}
{% endstylesheet %}

