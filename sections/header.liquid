{%- liquid
  assign logo = section.settings.logo
  assign show_search = section.settings.show_search
  assign show_location = section.settings.show_location
  assign location_text = section.settings.location_text | default: 'Bengaluru'
-%}

<header class="header">
  <div class="header__inner">
    <div class="header__content">
      <!-- Logo -->
      <a href="{{ routes.root_url }}" class="header__logo">
        {%- if logo != blank -%}
          <img 
            src="{{ logo | image_url: width: 140 }}" 
            alt="{{ shop.name }}"
            width="140"
            height="41"
            loading="eager"
          >
        {%- else -%}
          <div class="header__logo-placeholder">
            <svg width="140" height="41" viewBox="0 0 140 41" fill="none" xmlns="http://www.w3.org/2000/svg">
              <text x="0" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">R</text>
              <text x="22" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#28D98E">3</text>
              <text x="40" y="30" font-family="Syne, sans-serif" font-size="28" font-weight="700" fill="#1E1A5C">GURU</text>
              <text x="0" y="40" font-family="Overpass, sans-serif" font-size="6" fill="#1E1A5C">Save Money, Save Planet</text>
            </svg>
          </div>
        {%- endif -%}
      </a>

      <!-- Search Bar -->
      {%- if show_search -%}
        <form action="{{ routes.search_url }}" method="get" class="header__search">
          <input 
            type="search" 
            name="q" 
            class="header__search-input"
            placeholder="{{ 'general.search.placeholder' | t }}"
            aria-label="{{ 'general.search.placeholder' | t }}"
          >
          <button type="submit" class="header__search-btn" aria-label="{{ 'general.search.submit' | t }}">
            <svg width="21" height="21" viewBox="0 0 21 21" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="9.5" cy="9.5" r="7.5" stroke="currentColor" stroke-width="2"/>
              <path d="M15 15L20 20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </form>
      {%- endif -%}

      <!-- Store/Cart Icon -->
      <a href="{{ routes.cart_url }}" class="header__cart" aria-label="{{ 'general.cart.title' | t }}">
        <svg width="37" height="38" viewBox="0 0 37 38" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 14H31V32H6V14Z" stroke="#1E1A5C" stroke-width="2"/>
          <path d="M10 14V10C10 6.13401 13.134 3 17 3H20C23.866 3 27 6.13401 27 10V14" stroke="#1E1A5C" stroke-width="2"/>
          <rect x="12" y="20" width="13" height="3" fill="#28D98E"/>
          <rect x="12" y="25" width="13" height="3" fill="#28D98E"/>
          <rect x="16" y="18" width="5" height="12" fill="#1E1A5C"/>
        </svg>
        {%- if cart.item_count > 0 -%}
          <span class="header__cart-count">{{ cart.item_count }}</span>
        {%- endif -%}
      </a>

      <!-- Location Selector -->
      {%- if show_location -%}
        <div class="header__location">
          <span class="header__location-text">{{ location_text }}</span>
          <svg class="header__location-arrow" width="13" height="7" viewBox="0 0 13 7" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L6.5 6L12 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      {%- endif -%}

      <!-- Login Button -->
      <a href="{{ routes.account_login_url }}" class="header__login">
        {{ 'customer.login.sign_in' | t | default: 'login' }}
      </a>
    </div>
  </div>
</header>

{% stylesheet %}
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 76px;
  background-color: var(--color-white);
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.header__inner {
  width: 100%;
  max-width: var(--container-max);
  height: 100%;
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.header__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 69px;
  height: 100%;
}

.header__logo {
  flex-shrink: 0;
  width: 140px;
  height: 41px;
}

.header__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.header__logo-placeholder {
  width: 100%;
  height: 100%;
}

.header__logo-placeholder svg {
  width: 100%;
  height: 100%;
}

.header__search {
  position: relative;
  flex-shrink: 0;
  width: 688px;
}

.header__search-input {
  width: 100%;
  height: 41px;
  padding: 0 50px 0 20px;
  font-family: var(--font-body);
  font-size: 14px;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 30px;
  box-shadow: 2px 2px 0px 0px var(--color-black);
  transition: box-shadow var(--transition-fast);
}

.header__search-input:focus {
  outline: none;
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.header__search-input::placeholder {
  color: var(--color-text-secondary);
}

.header__search-btn {
  position: absolute;
  right: 15px;
  top: 50%;
  transform: translateY(-50%);
  padding: 0;
  width: 21px;
  height: 21px;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--color-black);
  transition: color var(--transition-fast);
}

.header__search-btn:hover {
  color: var(--color-navy);
}

.header__search-btn svg {
  width: 100%;
  height: 100%;
}

.header__cart {
  position: relative;
  flex-shrink: 0;
  width: 37px;
  height: 38px;
  color: var(--color-navy);
  transition: transform var(--transition-fast);
}

.header__cart:hover {
  transform: scale(1.05);
}

.header__cart svg {
  width: 100%;
  height: 100%;
}

.header__cart-count {
  position: absolute;
  top: -5px;
  right: -5px;
  min-width: 18px;
  height: 18px;
  padding: 0 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-mono);
  font-size: 10px;
  font-weight: 700;
  color: var(--color-white);
  background-color: var(--color-green);
  border-radius: 50%;
}

.header__location {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4px;
  flex-shrink: 0;
  width: 90px;
  cursor: pointer;
  transition: opacity var(--transition-fast);
}

.header__location:hover {
  opacity: 0.7;
}

.header__location-text {
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-black);
}

.header__location-arrow {
  width: 13px;
  height: 7px;
  transition: transform var(--transition-fast);
}

.header__location:hover .header__location-arrow {
  transform: translateY(2px);
}

.header__login {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 89px;
  height: 32px;
  padding: 8px 25px;
  font-family: var(--font-mono);
  font-weight: 700;
  font-size: 12px;
  color: var(--color-white);
  background-color: var(--color-navy);
  box-shadow: 2px 2px 0px 0px var(--color-black);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
}

.header__login:hover {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.header__login:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

/* Responsive Styles */
@media screen and (max-width: 1200px) {
  .header__content {
    gap: 30px;
  }

  .header__search {
    width: 400px;
  }
}

@media screen and (max-width: 992px) {
  .header {
    height: auto;
    padding: 16px 0;
  }

  .header__content {
    flex-wrap: wrap;
    gap: 16px;
  }

  .header__search {
    order: 10;
    width: 100%;
    max-width: 100%;
  }

  .header__location {
    display: none;
  }
}

@media screen and (max-width: 576px) {
  .header__content {
    justify-content: space-between;
    gap: 12px;
  }

  .header__logo {
    width: 100px;
    height: auto;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show Location",
      "default": true
    },
    {
      "type": "text",
      "id": "location_text",
      "label": "Location Text",
      "default": "Bengaluru"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

