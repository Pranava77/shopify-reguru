  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Best Deal Online on smart watches"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SMART WEARABLE."
    },
    {
      "type": "text",
      "id": "discount_text",
      "label": "Discount Text",
      "default": "UP to 80% OFF"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Checkout product"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#212844"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Container Background"
    },
    {
      "type": "image_picker",
      "id": "container_background_image",
      "label": "Container Background Image",
      "info": "Background image for the hero banner container. The background color will show as an overlay for better text readability."
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
