{%- liquid
  assign cta_text = section.settings.cta_text | default: 'Checkout product'
  assign cta_link = section.settings.cta_link | default: routes.collections_url
  assign bg_color = section.settings.background_color | default: '#212844'
  assign bg_image = section.settings.background_image
  assign bg_overlay_color = section.settings.background_overlay_color | default: '#000000'
  assign bg_overlay_opacity = section.settings.background_overlay_opacity | default: 0 | divided_by: 100.0
  assign bg_position = section.settings.background_image_position | default: 'center'
  assign bg_size = section.settings.background_image_size | default: 'cover'
  assign slide_interval = section.settings.slide_interval | default: 2000
-%}

<section 
  class="hero-banner{% if bg_image != blank %} hero-banner--has-bg-image{% endif %}" 
  style="
    --hero-bg: {{ bg_color }};
    {%- if bg_image != blank -%}
      --bg-image: url('{{ bg_image | image_url: width: 1920 }}');
      --bg-position: {{ bg_position }};
      --bg-size: {{ bg_size }};
    {%- endif -%}
    --bg-overlay-color: {{ bg_overlay_color }};
    --bg-overlay-opacity: {{ bg_overlay_opacity }};
  "
  data-hero-slider
  data-slide-interval="{{ slide_interval }}"
>
  {%- if bg_image != blank and bg_overlay_opacity > 0 -%}
    <div class="hero-banner__overlay"></div>
  {%- endif -%}
  <div class="hero-banner__container">
    {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}
        {%- assign slide_heading = block.settings.heading | default: 'SMART WEARABLE.' -%}
        {%- assign slide_subheading = block.settings.subheading | default: 'Best Deal Online on smart watches' -%}
        {%- assign slide_discount = block.settings.discount_text | default: 'UP to 80% OFF' -%}
        {%- assign slide_image = block.settings.image -%}
        {%- assign slide_link = block.settings.cta_link | default: cta_link -%}
        
        <div class="hero-banner__slide{% if forloop.first %} hero-banner__slide--active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
          <div class="hero-banner__content">
            <p class="hero-banner__subheading">{{ slide_subheading }}</p>
            <h1 class="hero-banner__heading">{{ slide_heading }}</h1>
            <p class="hero-banner__discount">{{ slide_discount }}</p>
            <a href="{{ slide_link }}" class="hero-banner__cta">
              {{ cta_text }}
            </a>
          </div>
          <div class="hero-banner__image">
            {%- if slide_image != blank -%}
              <img 
                src="{{ slide_image | image_url: width: 600 }}"
                alt="{{ slide_image.alt | default: slide_heading }}"
                width="600"
                height="400"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              >
            {%- else -%}
              <div class="hero-banner__placeholder">
                <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <rect width="200" height="200" fill="#2A3050"/>
                  <rect x="60" y="30" width="80" height="100" rx="10" fill="#1BDE8F"/>
                  <rect x="70" y="40" width="60" height="60" rx="5" fill="#212844"/>
                  <circle cx="100" cy="70" r="20" stroke="#28D98E" stroke-width="3"/>
                  <rect x="65" y="140" width="70" height="20" rx="5" fill="#28D98E"/>
                  <circle cx="100" cy="180" r="10" fill="#5294FF"/>
                </svg>
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
      
      {%- if section.blocks.size > 1 -%}
        <div class="hero-banner__indicators">
          {%- for block in section.blocks -%}
            <button 
              class="hero-banner__indicator{% if forloop.first %} hero-banner__indicator--active{% endif %}" 
              data-slide-indicator="{{ forloop.index0 }}"
              aria-label="Go to slide {{ forloop.index }}"
            ></button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    {%- else -%}
      {%- comment -%} Fallback when no blocks exist - use section settings {%- endcomment -%}
      {%- assign heading = section.settings.heading | default: 'SMART WEARABLE.' -%}
      {%- assign subheading = section.settings.subheading | default: 'Best Deal Online on smart watches' -%}
      {%- assign discount_text = section.settings.discount_text | default: 'UP to 80% OFF' -%}
      {%- assign image = section.settings.image -%}
      
      <div class="hero-banner__slide hero-banner__slide--active" data-slide-index="0">
        <div class="hero-banner__content">
          <p class="hero-banner__subheading">{{ subheading }}</p>
          <h1 class="hero-banner__heading">{{ heading }}</h1>
          <p class="hero-banner__discount">{{ discount_text }}</p>
          <a href="{{ cta_link }}" class="hero-banner__cta">
            {{ cta_text }}
          </a>
        </div>
        <div class="hero-banner__image">
          {%- if image != blank -%}
            <img 
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | default: heading }}"
              width="600"
              height="400"
              loading="eager"
            >
          {%- else -%}
            <div class="hero-banner__placeholder">
              <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="200" height="200" fill="#2A3050"/>
                <rect x="60" y="30" width="80" height="100" rx="10" fill="#1BDE8F"/>
                <rect x="70" y="40" width="60" height="60" rx="5" fill="#212844"/>
                <circle cx="100" cy="70" r="20" stroke="#28D98E" stroke-width="3"/>
                <rect x="65" y="140" width="70" height="20" rx="5" fill="#28D98E"/>
                <circle cx="100" cy="180" r="10" fill="#5294FF"/>
              </svg>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% stylesheet %}
.hero-banner {
  position: relative;
  width: 100%;
  max-width: var(--container-max);
  margin: 24px auto;
  padding: 0 var(--container-padding);
}

.hero-banner--has-bg-image {
  background-image: var(--bg-image);
  background-position: var(--bg-position);
  background-size: var(--bg-size);
  background-repeat: no-repeat;
}

.hero-banner__overlay {
  position: absolute;
  inset: 0;
  background-color: var(--bg-overlay-color);
  opacity: var(--bg-overlay-opacity);
  z-index: 1;
  pointer-events: none;
  border-radius: var(--radius-lg);
}

.hero-banner__container {
  position: relative;
  z-index: 2;
  min-height: 420px;
  padding: 50px 70px;
  background-color: var(--hero-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.hero-banner__slide {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 50px 70px;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.6s ease-in-out, visibility 0.6s ease-in-out;
}

.hero-banner__slide--active {
  position: relative;
  opacity: 1;
  visibility: visible;
}

.hero-banner__content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  gap: 24px;
  max-width: 574px;
  color: var(--color-white);
}

.hero-banner__slide--active .hero-banner__content {
  animation: slideContentIn 0.6s ease-out;
}

.hero-banner__slide--active .hero-banner__image {
  animation: slideImageIn 0.6s ease-out;
}

@keyframes slideContentIn {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideImageIn {
  from {
    opacity: 0;
    transform: translateY(-50%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(-50%) scale(1);
  }
}

.hero-banner__subheading {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 30px;
  line-height: 1;
  margin: 0;
}

.hero-banner__heading {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 63px;
  line-height: 1;
  color: var(--color-white);
  margin: 0;
}

.hero-banner__discount {
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 30px;
  line-height: 1;
  margin: 0;
}

.hero-banner__cta {
  display: inline-block;
  font-family: var(--font-heading);
  font-weight: 400;
  font-size: 18px;
  color: var(--color-white);
  text-decoration: none;
  transition: color var(--transition-fast);
}

.hero-banner__cta:hover {
  color: var(--color-green);
}

.hero-banner__image {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 45%;
  max-width: 480px;
  z-index: 1;
}

.hero-banner__image img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

.hero-banner__placeholder {
  width: 100%;
  aspect-ratio: 1;
}

.hero-banner__placeholder svg {
  width: 100%;
  height: 100%;
}

.hero-banner__indicators {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 10px;
  z-index: 10;
}

.hero-banner__indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.5);
  background: transparent;
  cursor: pointer;
  padding: 0;
  transition: all 0.3s ease;
}

.hero-banner__indicator:hover {
  border-color: var(--color-white);
}

.hero-banner__indicator--active {
  background: var(--color-green, #28D98E);
  border-color: var(--color-green, #28D98E);
}

@media screen and (max-width: 992px) {
  .hero-banner__container {
    padding: 40px 30px;
  }

  .hero-banner__slide {
    flex-direction: column;
    text-align: center;
    padding: 40px 30px;
  }

  .hero-banner__content {
    align-items: center;
  }

  .hero-banner__heading {
    font-size: 42px;
  }

  .hero-banner__subheading,
  .hero-banner__discount {
    font-size: 22px;
  }

  .hero-banner__image {
    position: relative;
    right: auto;
    top: auto;
    transform: none;
    width: 60%;
    margin-top: 30px;
  }

  .hero-banner__slide--active .hero-banner__image {
    animation: slideImageInMobile 0.6s ease-out;
  }

  @keyframes slideImageInMobile {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .hero-banner__indicators {
    bottom: 15px;
  }
}

@media screen and (max-width: 576px) {
  .hero-banner__heading {
    font-size: 32px;
  }

  .hero-banner__subheading,
  .hero-banner__discount {
    font-size: 18px;
  }
}
{% endstylesheet %}

{% javascript %}
(function() {
  const heroSlider = document.querySelector('[data-hero-slider]');
  if (!heroSlider) return;

  const slides = heroSlider.querySelectorAll('[data-slide-index]');
  const indicators = heroSlider.querySelectorAll('[data-slide-indicator]');
  const interval = parseInt(heroSlider.dataset.slideInterval) || 2000;
  
  if (slides.length <= 1) return;

  let currentIndex = 0;
  let autoPlayTimer = null;

  function goToSlide(index) {
    // Remove active class from current slide and indicator
    slides[currentIndex].classList.remove('hero-banner__slide--active');
    if (indicators[currentIndex]) {
      indicators[currentIndex].classList.remove('hero-banner__indicator--active');
    }

    // Update current index
    currentIndex = index;
    if (currentIndex >= slides.length) currentIndex = 0;
    if (currentIndex < 0) currentIndex = slides.length - 1;

    // Add active class to new slide and indicator
    slides[currentIndex].classList.add('hero-banner__slide--active');
    if (indicators[currentIndex]) {
      indicators[currentIndex].classList.add('hero-banner__indicator--active');
    }
  }

  function nextSlide() {
    goToSlide(currentIndex + 1);
  }

  function startAutoPlay() {
    stopAutoPlay();
    autoPlayTimer = setInterval(nextSlide, interval);
  }

  function stopAutoPlay() {
    if (autoPlayTimer) {
      clearInterval(autoPlayTimer);
      autoPlayTimer = null;
    }
  }

  // Click handlers for indicators
  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => {
      goToSlide(index);
      startAutoPlay(); // Reset timer after manual navigation
    });
  });

  // Pause on hover
  heroSlider.addEventListener('mouseenter', stopAutoPlay);
  heroSlider.addEventListener('mouseleave', startAutoPlay);

  // Start auto-play
  startAutoPlay();

  // Pause when tab is not visible
  document.addEventListener('visibilitychange', () => {
    if (document.hidden) {
      stopAutoPlay();
    } else {
      startAutoPlay();
    }
  });
})();
{% endjavascript %}

