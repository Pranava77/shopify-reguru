{%- liquid
  assign cart_title = section.settings.cart_title | default: settings.cart_drawer_title | default: 'YOUR CART'
  assign empty_cart_title = section.settings.empty_cart_title | default: settings.cart_drawer_empty_title | default: 'Your cart is empty'
  assign empty_cart_text = section.settings.empty_cart_text | default: settings.cart_drawer_empty_text | default: 'Continue shopping to add items to your cart.'
  assign continue_shopping_text = section.settings.continue_shopping_text | default: settings.cart_drawer_continue_shopping_text | default: 'continue shopping'
  if section.settings.continue_shopping_url != blank
    assign continue_shopping_url = section.settings.continue_shopping_url
  elsif settings.cart_drawer_continue_shopping_url != blank
    assign continue_shopping_url = settings.cart_drawer_continue_shopping_url
  else
    assign continue_shopping_url = routes.all_products_collection_url
  endif
  assign buy_now_text = section.settings.buy_now_text | default: settings.cart_drawer_buy_now_text | default: 'Buy Now'
  assign promo_code_label = section.settings.promo_code_label | default: settings.cart_drawer_promo_code_label | default: 'PROMO CODE'
  assign promo_code_placeholder = section.settings.promo_code_placeholder | default: settings.cart_drawer_promo_code_placeholder | default: 'ENTER HERE'
  
  # Calculate total item-level discounts
  assign total_item_discounts = 0
  for item in cart.items
    if item.discount_allocated_amount > 0
      assign total_item_discounts = total_item_discounts | plus: item.discount_allocated_amount
    endif
  endfor
-%}

<div class="cart-drawer" data-cart-drawer aria-hidden="true" data-cart-drawer-wrapper role="dialog" aria-modal="true" aria-labelledby="cart-drawer-title">
  <div class="cart-drawer__overlay" data-cart-drawer-overlay></div>
  
  <div class="cart-drawer__panel" data-cart-drawer-panel>
    <div class="cart-drawer__header">
      <h2 class="cart-drawer__title" id="cart-drawer-title">{{ cart_title }}</h2>
      <button 
        type="button" 
        class="cart-drawer__close" 
        data-cart-drawer-close
        aria-label="Close cart"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 4L20 20M20 4L4 20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <div class="cart-drawer__content" data-cart-drawer-content>
      {%- if cart.item_count > 0 -%}
        <div class="cart-drawer__progress">
          <div class="cart-drawer__progress-bar">
            <span class="cart-drawer__progress-text" data-cart-item-count>{{ cart.item_count }} ITEMS SELECTED</span>
          </div>
        </div>

        <form action="{{ routes.cart_url }}" method="post" class="cart-drawer__form" data-cart-drawer-form>
          <div class="cart-drawer__items" data-cart-items>
            {%- for item in cart.items -%}
              <div class="cart-drawer__item" data-line-item="{{ item.key }}">
                <div class="cart-drawer__item-image">
                  {%- if item.image != blank -%}
                    <img 
                      src="{{ item.image | image_url: width: 120 }}" 
                      alt="{{ item.image.alt | default: item.title }}"
                      width="120"
                      height="120"
                      loading="lazy"
                    >
                  {%- else -%}
                    <div class="cart-drawer__item-placeholder">
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {%- endif -%}
                </div>
                
                <div class="cart-drawer__item-details">
                  <h3 class="cart-drawer__item-name">
                    <a href="{{ item.url }}">{{ item.product.title }}</a>
                  </h3>
                  {%- unless item.product.has_only_default_variant -%}
                    <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                  {%- endunless -%}
                  
                  <div class="cart-drawer__item-price" data-item-price>
                    {{ item.final_price | money }}
                  </div>
                  
                  <div class="cart-drawer__item-quantity">
                    <button 
                      type="button" 
                      class="cart-drawer__quantity-btn" 
                      data-decrease-quantity
                      data-key="{{ item.key }}"
                      aria-label="Decrease quantity"
                    >
                      <span>-</span>
                    </button>
                    <input 
                      type="number" 
                      name="updates[]" 
                      value="{{ item.quantity }}" 
                      min="0" 
                      max="999"
                      class="cart-drawer__quantity-input"
                      data-key="{{ item.key }}"
                      aria-label="Quantity for {{ item.product.title }}"
                    >
                    <button 
                      type="button" 
                      class="cart-drawer__quantity-btn" 
                      data-increase-quantity
                      data-key="{{ item.key }}"
                      aria-label="Increase quantity"
                    >
                      <span>+</span>
                    </button>
                  </div>
                </div>

                <div class="cart-drawer__item-total" data-item-total>
                  {{ item.final_line_price | money }}
                </div>

                <button 
                  type="button" 
                  class="cart-drawer__item-remove" 
                  data-remove-item
                  data-key="{{ item.key }}"
                  aria-label="Remove {{ item.product.title }}"
                >
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 4L12 12M12 4L4 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                  </svg>
                </button>
              </div>
            {%- endfor -%}
          </div>

          <div class="cart-drawer__summary">
            <div class="cart-drawer__summary-row">
              <span class="cart-drawer__summary-label">SUBTOTAL</span>
              <span class="cart-drawer__summary-value" data-cart-subtotal>{{ cart.items_subtotal_price | money }}</span>
            </div>

            <div class="cart-drawer__summary-row">
              <span class="cart-drawer__summary-label">TAXES</span>
              <span class="cart-drawer__summary-value" data-cart-taxes>
                {%- assign tax_amount = cart.total_price | minus: cart.items_subtotal_price -%}
                {%- if tax_amount > 0 -%}
                  {{ tax_amount | money }}
                {%- else -%}
                  {{ 0 | money }}
                {%- endif -%}
              </span>
            </div>

            {%- if total_item_discounts > 0 -%}
              <div class="cart-drawer__summary-row cart-drawer__summary-row--discount" data-item-discounts-row>
                <span class="cart-drawer__summary-label">Item Discounts</span>
                <span class="cart-drawer__summary-value" data-cart-item-discounts>-{{ total_item_discounts | money }}</span>
              </div>
            {%- endif -%}

            {%- if cart.cart_level_discount_applications.size > 0 -%}
              {%- for discount in cart.cart_level_discount_applications -%}
                <div class="cart-drawer__summary-row cart-drawer__summary-row--discount" data-cart-discount-row>
                  <span class="cart-drawer__summary-label">
                    Discount ({{ discount.title }})
                  </span>
                  <span class="cart-drawer__summary-value" data-cart-discount-amount>-{{ discount.total_allocated_amount | money }}</span>
                </div>
              {%- endfor -%}
            {%- endif -%}

            <div class="cart-drawer__summary-divider"></div>

            <div class="cart-drawer__summary-promo">
              <label for="cart-drawer-promo-code" class="cart-drawer__promo-label">{{ promo_code_label }}</label>
              <input 
                type="text" 
                id="cart-drawer-promo-code"
                class="cart-drawer__promo-input" 
                placeholder="{{ promo_code_placeholder }}"
                data-promo-code
                aria-label="{{ promo_code_label }}"
              >
            </div>

            <div class="cart-drawer__summary-row cart-drawer__summary-row--total">
              <span class="cart-drawer__summary-label">TOTAL</span>
              <span class="cart-drawer__summary-value cart-drawer__summary-value--total" data-cart-total>{{ cart.total_price | money }}</span>
            </div>

            <div class="cart-drawer__actions">
              <button type="submit" name="checkout" class="cart-drawer__btn cart-drawer__btn--primary">
                {{ buy_now_text }} â†’
              </button>
              <a href="{{ continue_shopping_url }}" class="cart-drawer__btn cart-drawer__btn--secondary" data-continue-shopping>
                {{ continue_shopping_text }}
              </a>
            </div>

            {%- if additional_checkout_buttons -%}
              <div class="cart-drawer__additional-checkout">
                {{ content_for_additional_checkout_buttons }}
              </div>
            {%- endif -%}
          </div>
        </form>
      {%- else -%}
        <div class="cart-drawer__empty">
          <h3 class="cart-drawer__empty-title">{{ empty_cart_title }}</h3>
          <p class="cart-drawer__empty-text">{{ empty_cart_text }}</p>
          <a href="{{ continue_shopping_url }}" class="cart-drawer__btn cart-drawer__btn--primary" data-continue-shopping>
            {{ continue_shopping_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
.cart-drawer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  pointer-events: none;
}

.cart-drawer.is-hidden {
  display: none;
}

.cart-drawer[aria-hidden="true"] {
  visibility: hidden;
}

.cart-drawer[aria-hidden="false"] {
  visibility: visible;
  pointer-events: auto;
}

.cart-drawer[aria-hidden="false"] .cart-drawer__panel {
  pointer-events: auto;
}

.cart-drawer__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity var(--transition-base);
  pointer-events: none;
}

.cart-drawer[aria-hidden="false"] .cart-drawer__overlay {
  opacity: 1;
  pointer-events: auto;
}

.cart-drawer__panel {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 480px;
  height: 100%;
  background-color: var(--color-white);
  box-shadow: -4px 0px 16px rgba(0, 0, 0, 0.1);
  transform: translateX(100%);
  transition: transform var(--transition-base);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  pointer-events: auto;
}

.cart-drawer[aria-hidden="false"] .cart-drawer__panel {
  transform: translateX(0);
}

.cart-drawer__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px;
  border-bottom: 1px solid var(--color-black);
  flex-shrink: 0;
}

.cart-drawer__title {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 24px;
  line-height: 1;
  color: var(--color-black);
  margin: 0;
  text-transform: uppercase;
}

.cart-drawer__close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  min-width: 40px;
  min-height: 40px;
  padding: 0;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 6px;
  color: var(--color-black);
  cursor: pointer;
  transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  box-shadow: 2px 2px 0px 0px var(--color-black);
}

.cart-drawer__close:hover {
  transform: translate(-1px, -1px);
  box-shadow: 3px 3px 0px 0px var(--color-black);
}

.cart-drawer__close:active {
  transform: translate(1px, 1px);
  box-shadow: 1px 1px 0px 0px var(--color-black);
}

.cart-drawer__close:focus {
  outline: 2px solid var(--color-black);
  outline-offset: 2px;
}

.cart-drawer__close svg {
  width: 20px;
  height: 20px;
}

.cart-drawer__content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 24px;
  display: flex;
  flex-direction: column;
  min-height: 0;
  -webkit-overflow-scrolling: touch;
}

.cart-drawer__progress {
  margin-bottom: 24px;
  flex-shrink: 0;
}

.cart-drawer__progress-bar {
  display: flex;
  align-items: center;
  height: 40px;
}

.cart-drawer__progress-bar::after {
  content: '';
  flex: 1;
  height: 2px;
  background-color: var(--color-dark-blue);
  margin-left: 0;
}

.cart-drawer__progress-text {
  display: inline-flex;
  align-items: center;
  height: 100%;
  padding: 0 16px;
  background-color: var(--color-dark-blue);
  border-radius: 6px 0 0 6px;
  font-family: var(--font-body);
  font-weight: 400;
  font-size: 14px;
  line-height: 1;
  color: var(--color-white);
  text-transform: uppercase;
  white-space: nowrap;
}

.cart-drawer__form {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  gap: 24px;
}

.cart-drawer__items {
  display: flex;
  flex-direction: column;
  gap: 16px;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-right: 4px;
  margin-right: -4px;
}

.cart-drawer__item {
  position: relative;
  display: grid;
  grid-template-columns: 100px 1fr auto;
  gap: 16px;
  padding: 16px;
  background-color: var(--color-white);
  border: 1px solid var(--color-black);
  border-radius: 6px;
  box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 0.5);
  align-items: start;
}

.cart-drawer__item-image {
  width: 100px;
  height: 100px;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: 6px;
  background-color: var(--color-gray, #f5f5f5);
  border: 1px solid var(--color-black);
}

.cart-drawer__item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-drawer__item-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-gray);
}

.cart-drawer__item-placeholder svg {
