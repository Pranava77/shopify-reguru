<footer class="footer">
  <div class="footer__container container">
    <div class="footer__grid">
      <div class="footer__column footer__column--brand">
        {%- if settings.logo != blank -%}
          <img
            src="{{ settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            width="200"
            height="auto"
            class="footer__logo"
          >
        {%- else -%}
          <h3 class="footer__brand">{{ shop.name }}</h3>
        {%- endif -%}
        
        {%- if settings.footer_address != blank -%}
          <p class="footer__address">
            {{ settings.footer_address }}
          </p>
        {%- endif -%}
        
        {%- if settings.social_facebook != blank or settings.social_instagram != blank -%}
          <div class="footer__social">
            {%- if settings.social_facebook != blank -%}
              <a href="{{ settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                </svg>
              </a>
            {%- endif -%}
            {%- if settings.social_instagram != blank -%}
              <a href="{{ settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              {%- endif -%}
              
              {%- if block.settings.menu != blank -%}
                <ul class="footer__links">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="footer__link-item">
                      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-footer-bg);
    color: var(--color-footer-text);
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--spacing-2xl);
  }

  .footer__column--brand {
    max-width: 350px;
  }

  .footer__logo {
    margin-bottom: var(--spacing-md);
  }

  .footer__brand {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    color: var(--color-footer-text);
  }

  .footer__address {
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-sm);
  }

  .footer__social-link {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--color-footer-text);
    transition: background-color var(--transition-speed);
  }

  .footer__social-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .footer__heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: var(--color-footer-text);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link-item {
    margin-bottom: var(--spacing-sm);
  }

  .footer__link {
    font-size: 0.875rem;
    color: var(--color-footer-text);
    text-decoration: none;
    opacity: 0.8;
    transition: opacity var(--transition-speed);
  }

  .footer__link:hover {
    opacity: 1;
  }

  @media screen and (max-width: 1024px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer__column--brand {
      grid-column: 1 / -1;
      max-width: 100%;
    }
  }

  @media screen and (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }
{% endstylesheet %}

{% schema %}
