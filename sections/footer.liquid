{%- liquid
  assign logo = section.settings.logo
  assign address = section.settings.address
  assign bg_color = section.settings.background_color | default: '#041C66'
  assign laptop_image = section.settings.laptop_image
  assign bg_image = section.settings.background_image
  assign bg_overlay_color = section.settings.background_overlay_color | default: '#000000'
  assign bg_overlay_opacity = section.settings.background_overlay_opacity | default: 0 | divided_by: 100.0
  assign bg_position = section.settings.background_image_position | default: 'center'
  assign bg_size = section.settings.background_image_size | default: 'cover'
-%}

<footer 
  class="footer-wrapper{% if bg_image != blank %} footer-wrapper--has-bg-image{% endif %}" 
  style="
    {%- if bg_image != blank -%}
      --bg-image: url('{{ bg_image | image_url: width: 1920 }}');
      --bg-position: {{ bg_position }};
      --bg-size: {{ bg_size }};
    {%- endif -%}
    --bg-overlay-color: {{ bg_overlay_color }};
    --bg-overlay-opacity: {{ bg_overlay_opacity }};
  "
>
  {%- if bg_image != blank and bg_overlay_opacity > 0 -%}
    <div class="footer-wrapper__overlay"></div>
  {%- endif -%}
  <!-- Laptop Illustration -->
  <div class="footer__laptop-illustration">
    {%- if laptop_image != blank -%}
      <img 
        src="{{ laptop_image | image_url: width: 240 }}"
        alt="Laptop illustration"
        width="200"
        height="200"
        loading="lazy"
        class="footer__laptop-img"
      >
    {%- else -%}
      <svg class="footer__laptop-img" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg">
        <!-- Laptop Base -->
        <rect x="15" y="75" width="90" height="6" rx="2" fill="#4A5568" stroke="#000" stroke-width="1.5"/>
        <!-- Laptop Screen Frame -->
        <rect x="22" y="28" width="76" height="50" rx="3" fill="#2D3748" stroke="#000" stroke-width="1.5"/>
        <!-- Laptop Screen -->
        <rect x="26" y="32" width="68" height="42" rx="1" fill="#E2E8F0"/>
        <!-- Screen Content - Lines -->
        <rect x="32" y="40" width="35" height="3" rx="1" fill="#A0AEC0"/>
        <rect x="32" y="48" width="45" height="3" rx="1" fill="#A0AEC0"/>
        <rect x="32" y="56" width="28" height="3" rx="1" fill="#A0AEC0"/>
        <!-- Checkmark Circle -->
        <circle cx="73" cy="54" r="14" fill="#28D98E" stroke="#000" stroke-width="1.5"/>
        <!-- Checkmark -->
        <path d="M66 54L71 59L81 49" stroke="#FFF" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
        <!-- Laptop Stand -->
        <path d="M50 81L45 95H75L70 81" fill="#4A5568" stroke="#000" stroke-width="1.5"/>
        <ellipse cx="60" cy="95" rx="18" ry="3" fill="#2D3748" stroke="#000" stroke-width="1"/>
      </svg>
    {%- endif -%}
  </div>

  <div class="footer" style="--footer-bg: {{ bg_color }};">
    <div class="footer__container">
    <div class="footer__grid">
      <!-- Logo & Contact Column -->
      <div class="footer__brand">
        <div class="footer__logo">
          {%- if logo != blank -%}
            <img 
              src="{{ logo | image_url: width: 292 }}"
              alt="{{ shop.name }}"
              width="292"
              height="82"
              loading="lazy"
            >
          {%- else -%}
            <div class="footer__logo-placeholder">
              <span class="footer__logo-text">{{ shop.name }}</span>
            </div>
          {%- endif -%}
        </div>

        <p class="footer__address">
          {%- if address != blank -%}
            {{ address }}
          {%- else -%}
            Address: 2nd floor central complex sv road near mantri mall seshadripuram bengaluru 560020
          {%- endif -%}
        </p>

        <div class="footer__social">
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="#3B5998"/>
                <path d="M21 15H23V12H21C19.34 12 18 13.34 18 15V17H16V20H18V28H21V20H23L24 17H21V15Z" fill="white"/>
              </svg>
            </a>
          {%- else -%}
            <a href="#" class="footer__social-link" aria-label="Facebook">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="#3B5998"/>
                <path d="M21 15H23V12H21C19.34 12 18 13.34 18 15V17H16V20H18V28H21V20H23L24 17H21V15Z" fill="white"/>
              </svg>
            </a>
          {%- endif -%}

          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="url(#instagram-gradient)"/>
                <rect x="11" y="11" width="16" height="16" rx="4" stroke="white" stroke-width="2"/>
                <circle cx="19" cy="19" r="4" stroke="white" stroke-width="2"/>
                <circle cx="25" cy="13" r="1.5" fill="white"/>
                <defs>
                  <linearGradient id="instagram-gradient" x1="0" y1="38" x2="38" y2="0">
                    <stop stop-color="#FFDC80"/>
                    <stop offset="0.5" stop-color="#F56040"/>
                    <stop offset="1" stop-color="#833AB4"/>
                  </linearGradient>
                </defs>
              </svg>
            </a>
          {%- else -%}
            <a href="#" class="footer__social-link" aria-label="Instagram">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="url(#instagram-gradient-default)"/>
                <rect x="11" y="11" width="16" height="16" rx="4" stroke="white" stroke-width="2"/>
                <circle cx="19" cy="19" r="4" stroke="white" stroke-width="2"/>
                <circle cx="25" cy="13" r="1.5" fill="white"/>
                <defs>
                  <linearGradient id="instagram-gradient-default" x1="0" y1="38" x2="38" y2="0">
                    <stop stop-color="#FFDC80"/>
                    <stop offset="0.5" stop-color="#F56040"/>
                    <stop offset="1" stop-color="#833AB4"/>
                  </linearGradient>
                </defs>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Category Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ 'footer.category' | t | default: 'Category' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'category_link' -%}
              {%- liquid
                assign link_url = block.settings.link
                if link_url == blank
                  assign link_url = routes.collections_url
                endif
              -%}
              <li>
                <a href="{{ link_url }}" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}

          {%- if section.blocks.size == 0 -%}
            <li><a href="{{ routes.collections_url }}">{{ 'categories.phone' | t | default: 'Phone' }}</a></li>
            <li><a href="{{ routes.collections_url }}">{{ 'categories.laptop' | t | default: 'Laptop' }}</a></li>
            <li><a href="{{ routes.collections_url }}">{{ 'categories.tablet' | t | default: 'Tablet' }}</a></li>
            <li><a href="{{ routes.collections_url }}">{{ 'categories.earbuds' | t | default: 'Earbuds' }}</a></li>
            <li><a href="{{ routes.collections_url }}">{{ 'categories.smart_speaker' | t | default: 'Smart Speaker' }}</a></li>
          {%- endif -%}
        </ul>
      </div>

      <!-- Support Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ 'footer.support' | t | default: 'Support' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'support_link' -%}
              {%- liquid
                assign link_url = block.settings.link
                assign label_lower = block.settings.label | downcase
                
                if link_url == blank
                  if label_lower contains 'about'
                    if pages['about'] != blank
                      assign link_url = pages['about'].url
                    else
                      assign link_url = '/pages/about'
                    endif
                  elsif label_lower contains 'franchise'
                    if pages['franchise'] != blank
                      assign link_url = pages['franchise'].url
                    else
                      assign link_url = '/pages/franchise'
                    endif
                  elsif label_lower contains 'contact'
                    if pages['contact'] != blank
                      assign link_url = pages['contact'].url
                    else
                      assign link_url = '/pages/contact'
                    endif
                  elsif label_lower contains 'terms' or label_lower contains 'condition'
                    if pages['terms'] != blank
                      assign link_url = pages['terms'].url
                    elsif pages['terms-conditions'] != blank
                      assign link_url = pages['terms-conditions'].url
                    else
                      assign link_url = '/pages/terms'
                    endif
                  elsif label_lower contains 'privacy'
                    if pages['privacy'] != blank
                      assign link_url = pages['privacy'].url
                    elsif pages['privacy-policy'] != blank
                      assign link_url = pages['privacy-policy'].url
                    else
                      assign link_url = '/pages/privacy'
                    endif
                  elsif label_lower contains 'help' or label_lower contains 'support'
                    if pages['help'] != blank
                      assign link_url = pages['help'].url
                    elsif pages['support'] != blank
                      assign link_url = pages['support'].url
                    else
                      assign link_url = '/pages/help'
                    endif
                  else
                    assign link_url = routes.root_url
                  endif
                endif
              -%}
              <li>
                <a href="{{ link_url }}" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}

          {%- if section.blocks.size == 0 -%}
            {%- liquid
              assign help_url = routes.root_url
              assign terms_url = routes.root_url
              assign privacy_url = routes.root_url
              
              if pages['help'] != blank
                assign help_url = pages['help'].url
              elsif pages['support'] != blank
                assign help_url = pages['support'].url
              endif
              
              if pages['terms'] != blank
                assign terms_url = pages['terms'].url
              elsif pages['terms-conditions'] != blank
                assign terms_url = pages['terms-conditions'].url
              endif
              
              if pages['privacy'] != blank
                assign privacy_url = pages['privacy'].url
              elsif pages['privacy-policy'] != blank
                assign privacy_url = pages['privacy-policy'].url
              endif
            -%}
            <li><a href="{{ help_url }}">{{ 'footer.help_support' | t | default: 'Help & Support' }}</a></li>
            <li><a href="{{ terms_url }}">{{ 'footer.terms_conditions' | t | default: 'Terms & Conditions' }}</a></li>
            <li><a href="{{ privacy_url }}">{{ 'footer.privacy_policy' | t | default: 'Privacy Policy' }}</a></li>
            <li><a href="{{ help_url }}">{{ 'footer.help' | t | default: 'Help' }}</a></li>
          {%- endif -%}
        </ul>
      </div>
    </div>
  </div>
  </div>
</footer>

{% stylesheet %}
.footer-wrapper {
  position: relative;
  padding-top: 45px;
}

.footer-wrapper--has-bg-image {
  background-image: var(--bg-image);
  background-position: var(--bg-position);
  background-size: var(--bg-size);
  background-repeat: no-repeat;
}

.footer-wrapper__overlay {
  position: absolute;
  inset: 0;
  background-color: var(--bg-overlay-color);
  opacity: var(--bg-overlay-opacity);
  z-index: 0;
  pointer-events: none;
}

.footer__laptop-illustration {
  position: absolute;
  top: -10%;
  right: 3%;
  z-index: 11;
  transform: rotate(-4.5deg);
  animation: laptopFloat 3s ease-in-out infinite;
}

.footer__laptop-img {
  width: 160px;
  height: 160px;
  display: block;
  filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.2));
}

@keyframes laptopFloat {
  0%, 100% {
    transform: rotate(-4.5deg) translateY(0);
  }
  50% {
    transform: rotate(-4.5deg) translateY(-6px);
  }
}

.footer {
  position: relative;
  z-index: 1;
  padding: 60px 0;
  background-color: var(--footer-bg);
  border-radius: 6px 6px 0 0;
  box-shadow: 8px 8px 0px 0px var(--color-black);
}

.footer__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.footer__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 40px;
}

.footer__brand {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.footer__logo {
  width: 200px;
  height: auto;
}

.footer__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.footer__logo-placeholder {
  display: flex;
  align-items: center;
  height: 100%;
}

.footer__logo-text {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 32px;
  color: var(--color-white);
}

.footer__address {
  font-family: var(--font-mono);
  font-weight: 400;
  font-size: 16px;
  line-height: 1.5;
  color: var(--color-white);
  opacity: 0.6;
  max-width: 350px;
  margin: 0;
}

.footer__social {
  display: flex;
  gap: 20px;
}

.footer__social-link {
  display: block;
  width: 38px;
  height: 38px;
  transition: transform var(--transition-fast);
}

.footer__social-link:hover {
  transform: scale(1.1);
}

.footer__social-link svg {
  width: 100%;
  height: 100%;
}

.footer__column {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.footer__column-title {
  font-family: var(--font-mono);
  font-weight: 500;
  font-size: 16px;
  line-height: 1.1;
  letter-spacing: 0.96px;
  text-transform: uppercase;
  color: var(--color-white);
  margin: 0;
}

.footer__links {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.footer__links li a {
  font-family: var(--font-mono);
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
  color: var(--color-white);
  transition: opacity var(--transition-fast);
}

.footer__links li a:hover {
  opacity: 0.7;
  text-decoration: underline;
}

/* Responsive Styles (Mobile-First) */

/* Small tablet and up */
@media screen and (min-width: 577px) {
  .footer__grid {
    grid-template-columns: 1fr 1fr;
  }

  .footer__brand {
    grid-column: span 2;
  }

  .footer__logo {
    width: 292px;
    height: 82px;
  }

  .footer__social {
    gap: 46px;
  }
}

/* Tablet and up */
@media screen and (min-width: 769px) {
  .footer-wrapper {
    padding-top: 100px;
  }

  .footer__laptop-illustration {
    right: 5%;
  }

  .footer__laptop-img {
    width: 200px;
    height: 200px;
  }
}

/* Desktop and up */
@media screen and (min-width: 993px) {
  .footer__grid {
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 60px;
  }

  .footer__brand {
    grid-column: span 1;
  }
}

/* Large desktop */
@media screen and (min-width: 1201px) {
  .footer-wrapper {
    padding-top: 120px;
  }

  .footer__grid {
    gap: 338px;
  }

  .footer__laptop-illustration {
    top: -15%;
    right: 8%;
  }

  .footer__laptop-img {
    width: 240px;
    height: 240px;
  }
}
{% endstylesheet %}

