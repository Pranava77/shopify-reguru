{%- liquid
  assign logo = section.settings.logo
  assign address = section.settings.address
  assign bg_color = section.settings.background_color | default: '#041C66'
-%}

<footer class="footer" style="--footer-bg: {{ bg_color }};">
  <div class="footer__container">
    <div class="footer__grid">
      <!-- Logo & Contact Column -->
      <div class="footer__brand">
        <div class="footer__logo">
          {%- if logo != blank -%}
            <img 
              src="{{ logo | image_url: width: 292 }}"
              alt="{{ shop.name }}"
              width="292"
              height="82"
              loading="lazy"
            >
          {%- else -%}
            <div class="footer__logo-placeholder">
              <span class="footer__logo-text">{{ shop.name }}</span>
            </div>
          {%- endif -%}
        </div>

        <p class="footer__address">
          {%- if address != blank -%}
            {{ address }}
          {%- else -%}
            Address: 2nd floor central complex sv road near mantri mall seshadripuram bengaluru 560020
          {%- endif -%}
        </p>

        <div class="footer__social">
          {%- if settings.social_facebook != blank -%}
            <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="#3B5998"/>
                <path d="M21 15H23V12H21C19.34 12 18 13.34 18 15V17H16V20H18V28H21V20H23L24 17H21V15Z" fill="white"/>
              </svg>
            </a>
          {%- else -%}
            <a href="#" class="footer__social-link" aria-label="Facebook">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="#3B5998"/>
                <path d="M21 15H23V12H21C19.34 12 18 13.34 18 15V17H16V20H18V28H21V20H23L24 17H21V15Z" fill="white"/>
              </svg>
            </a>
          {%- endif -%}

          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="url(#instagram-gradient)"/>
                <rect x="11" y="11" width="16" height="16" rx="4" stroke="white" stroke-width="2"/>
                <circle cx="19" cy="19" r="4" stroke="white" stroke-width="2"/>
                <circle cx="25" cy="13" r="1.5" fill="white"/>
                <defs>
                  <linearGradient id="instagram-gradient" x1="0" y1="38" x2="38" y2="0">
                    <stop stop-color="#FFDC80"/>
                    <stop offset="0.5" stop-color="#F56040"/>
                    <stop offset="1" stop-color="#833AB4"/>
                  </linearGradient>
                </defs>
              </svg>
            </a>
          {%- else -%}
            <a href="#" class="footer__social-link" aria-label="Instagram">
              <svg width="38" height="38" viewBox="0 0 38 38" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="19" cy="19" r="19" fill="url(#instagram-gradient-default)"/>
                <rect x="11" y="11" width="16" height="16" rx="4" stroke="white" stroke-width="2"/>
                <circle cx="19" cy="19" r="4" stroke="white" stroke-width="2"/>
                <circle cx="25" cy="13" r="1.5" fill="white"/>
                <defs>
                  <linearGradient id="instagram-gradient-default" x1="0" y1="38" x2="38" y2="0">
                    <stop stop-color="#FFDC80"/>
                    <stop offset="0.5" stop-color="#F56040"/>
                    <stop offset="1" stop-color="#833AB4"/>
                  </linearGradient>
                </defs>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Category Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ 'footer.category' | t | default: 'Category' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'category_link' -%}
              <li>
                <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}

          {%- if section.blocks.size == 0 -%}
            <li><a href="#">Sofa</a></li>
            <li><a href="#">Armchair</a></li>
            <li><a href="#">Desk Chair</a></li>
            <li><a href="#">wooden Chair</a></li>
            <li><a href="#">Park Bench</a></li>
          {%- endif -%}
        </ul>
      </div>

      <!-- Support Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">{{ 'footer.support' | t | default: 'Support' }}</h3>
        <ul class="footer__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'support_link' -%}
              <li>
                <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
                  {{ block.settings.label }}
                </a>
              </li>
            {%- endif -%}
          {%- endfor -%}

          {%- if section.blocks.size == 0 -%}
            <li><a href="#">Help & Support</a></li>
            <li><a href="#">Tearms & Conditions</a></li>
            <li><a href="#">Privacy Policy</a></li>
            <li><a href="#">Help</a></li>
          {%- endif -%}
        </ul>
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
.footer {
  padding: 60px 0;
  background-color: var(--footer-bg);
  border-radius: 6px 6px 0 0;
  box-shadow: 8px 8px 0px 0px var(--color-black);
}

.footer__container {
  max-width: var(--container-max);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.footer__grid {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr;
  gap: 338px;
}

.footer__brand {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.footer__logo {
  width: 292px;
  height: 82px;
}

.footer__logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.footer__logo-placeholder {
  display: flex;
  align-items: center;
  height: 100%;
}

.footer__logo-text {
  font-family: var(--font-heading);
  font-weight: 700;
  font-size: 32px;
  color: var(--color-white);
}

.footer__address {
  font-family: var(--font-mono);
  font-weight: 400;
  font-size: 16px;
  line-height: 1.5;
  color: var(--color-white);
  opacity: 0.6;
  max-width: 350px;
  margin: 0;
}

.footer__social {
  display: flex;
  gap: 46px;
}

.footer__social-link {
  display: block;
  width: 38px;
  height: 38px;
  transition: transform var(--transition-fast);
}

.footer__social-link:hover {
  transform: scale(1.1);
}

.footer__social-link svg {
  width: 100%;
  height: 100%;
}

.footer__column {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.footer__column-title {
  font-family: var(--font-mono);
  font-weight: 500;
  font-size: 16px;
  line-height: 1.1;
  letter-spacing: 0.96px;
  text-transform: uppercase;
  color: var(--color-white);
  margin: 0;
}

.footer__links {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.footer__links li a {
  font-family: var(--font-mono);
  font-weight: 400;
  font-size: 16px;
  line-height: 1.1;
  color: var(--color-white);
  transition: opacity var(--transition-fast);
}

.footer__links li a:hover {
  opacity: 0.7;
  text-decoration: underline;
}

@media screen and (max-width: 1200px) {
  .footer__grid {
    gap: 60px;
  }
}

@media screen and (max-width: 992px) {
  .footer__grid {
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .footer__brand {
    grid-column: span 2;
  }
}

@media screen and (max-width: 576px) {
  .footer__grid {
    grid-template-columns: 1fr;
  }

  .footer__brand {
    grid-column: span 1;
  }

  .footer__logo {
    width: 200px;
    height: auto;
  }

  .footer__social {
    gap: 20px;
  }
}
{% endstylesheet %}

