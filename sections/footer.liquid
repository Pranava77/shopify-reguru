<footer class="footer">
  <div class="footer__container container">
    <div class="footer__grid">
      <div class="footer__column footer__column--brand">
        <div class="footer__logo-wrapper">
          {%- if settings.logo != blank -%}
            <img
              src="{{ settings.logo | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              width="145"
              height="auto"
              class="footer__logo"
            >
          {%- else -%}
            <div class="footer__brand-text">
              <span class="footer__brand-re">RE</span><span class="footer__brand-guru">GURU</span>
            </div>
          {%- endif -%}
        </div>
        
        {%- if section.settings.address != blank -%}
          <p class="footer__address">
            {{ section.settings.address }}
          </p>
        {%- endif -%}
        
        <div class="footer__social">
          {%- if section.settings.social_facebook != blank -%}
            <a href="{{ section.settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.social_instagram != blank -%}
            <a href="{{ section.settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.social_twitter != blank -%}
            <a href="{{ section.settings.social_twitter }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              {%- endif -%}
              
              {%- if block.settings.menu != blank -%}
                <ul class="footer__links">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="footer__link-item">
                      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- else -%}
                <ul class="footer__links">
                  {%- for i in (1..5) -%}
                    <li class="footer__link-item">
                      <a href="#" class="footer__link">Link {{ i }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-primary, #1E1A5C);
    color: var(--color-white);
    padding: 60px 0 40px;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--grid-pattern);
    background-repeat: repeat;
    opacity: 0.1;
    pointer-events: none;
  }

  .footer__container {
    position: relative;
    z-index: 1;
    padding: 0 119px;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 80px;
  }

  .footer__column--brand {
    max-width: 350px;
  }

  .footer__logo-wrapper {
    margin-bottom: 20px;
    position: relative;
    display: inline-block;
  }

  .footer__logo-wrapper::before {
    content: '';
    position: absolute;
    inset: -10px;
    background-image: var(--grid-pattern);
    background-repeat: repeat;
    opacity: 0.3;
    pointer-events: none;
  }

  .footer__logo {
    position: relative;
    z-index: 1;
    max-width: 145px;
    height: auto;
  }

  .footer__brand-text {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: var(--font-weight-bold);
    position: relative;
    z-index: 1;
  }

  .footer__brand-re {
    color: var(--color-white);
  }

  .footer__brand-guru {
    color: var(--color-accent);
  }

  .footer__address {
    font-family: var(--font-mono);
    font-size: 13px;
    font-weight: var(--font-weight-normal);
    line-height: 1.6;
    margin: 0 0 25px 0;
    opacity: 0.6;
    max-width: 280px;
  }

  .footer__social {
    display: flex;
    gap: 12px;
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    color: var(--color-white);
    transition: all var(--transition-speed);
  }

  .footer__social-link:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-black);
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 18px;
    font-weight: var(--font-weight-semibold);
    margin: 0 0 20px 0;
    color: var(--color-white);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link-item {
    margin-bottom: 12px;
  }

  .footer__link {
    font-family: var(--font-mono);
    font-size: 13px;
    color: var(--color-white);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity var(--transition-speed);
  }

  .footer__link:hover {
    opacity: 1;
  }

  @media screen and (max-width: 1200px) {
    .footer__container {
      padding: 0 40px;
    }

    .footer__grid {
      gap: 50px;
    }
  }

  @media screen and (max-width: 1024px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer__column--brand {
      grid-column: 1 / -1;
      max-width: 100%;
      text-align: center;
    }

    .footer__address {
      max-width: 100%;
    }

    .footer__social {
      justify-content: center;
    }
  }

  @media screen and (max-width: 768px) {
    .footer__container {
      padding: 0 16px;
    }

    .footer__grid {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .footer__column {
      text-align: center;
    }

    .footer__heading {
      font-size: 16px;
    }

    .footer__address {
      font-size: 12px;
    }
  }
{% endstylesheet %}

