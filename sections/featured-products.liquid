{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_per_page
-%}

<section class="featured-products">
  <div class="featured-products__container container">
    <h2 class="featured-products__heading">{{ section.settings.heading }}</h2>
    
    {%- if section.blocks.size > 0 -%}
      <div class="featured-products__tabs" data-tabs>
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'tab' -%}
              <button
                type="button"
                class="featured-products__tab{% if forloop.first %} featured-products__tab--active{% endif %}"
                data-tab-button="{{ block.id }}"
                data-collection="{{ block.settings.collection }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.label }}
              </button>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="featured-products__grid" data-products-grid>
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..6) -%}
          {% render 'product-card' %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .featured-products {
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-white);
    position: relative;
  }

  .featured-products::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: var(--grid-pattern);
    background-repeat: repeat;
    opacity: 0.3;
    pointer-events: none;
  }

  .featured-products__container {
    position: relative;
    z-index: 1;
  }

  .featured-products__heading {
    text-align: center;
    font-family: var(--font-heading);
    font-size: 30px;
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--spacing-lg) 0;
    color: var(--color-primary);
  }

  .featured-products__tabs {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .featured-products__tab {
    padding: 10px 25px;
    background-color: var(--color-white);
    border: 0.68px solid var(--color-black);
    border-radius: 34px;
    cursor: pointer;
    font-family: var(--font-display);
    font-size: 12px;
    font-weight: var(--font-weight-medium);
    color: var(--color-black);
    box-shadow: 2.73px 2.73px 0px 0px var(--color-black);
    transition: all var(--transition-fast);
  }

  .featured-products__tab:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3.5px 3.5px 0px 0px var(--color-black);
  }

  .featured-products__tab--active {
    background-color: var(--color-accent);
    color: var(--color-black);
  }

  .featured-products__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 44px;
  }

  @media screen and (max-width: 1200px) {
    .featured-products__grid {
      gap: 30px;
    }
  }

  @media screen and (max-width: 768px) {
    .featured-products__heading {
      font-size: 24px;
    }

    .featured-products__tabs {
      gap: 8px;
    }

    .featured-products__tab {
      padding: 8px 16px;
      font-size: 11px;
    }

    .featured-products__grid {
      gap: 20px;
      justify-content: center;
    }
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('[data-tab-button]');
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        tabs.forEach(t => t.classList.remove('featured-products__tab--active'));
        this.classList.add('featured-products__tab--active');
      });
    });
  });
</script>

