{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_to_show = section.settings.products_per_page
-%}

<div class="featured-products">
  <div class="featured-products__container container">
    <h2 class="featured-products__heading">{{ section.settings.heading }}</h2>
    
    {%- if section.blocks.size > 0 -%}
      <div class="featured-products__tabs" data-tabs>
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'tab' -%}
              <button
                type="button"
                class="featured-products__tab{% if forloop.first %} featured-products__tab--active{% endif %}"
                data-tab-button="{{ block.id }}"
                data-collection="{{ block.settings.collection }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.label }}
              </button>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="featured-products__grid" data-products-grid>
      {%- if collection != blank and collection.products.size > 0 -%}
        {%- for product in collection.products limit: products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..6) -%}
          {% render 'product-card' %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% stylesheet %}
  .featured-products {
    padding: var(--spacing-2xl) 0;
    background-color: var(--color-background);
  }

  .featured-products__heading {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    color: var(--color-text);
  }

  .featured-products__tabs {
    display: flex;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
  }

  .featured-products__tab {
    padding: 0.625rem 1.5rem;
    background-color: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    cursor: pointer;
    font-size: 0.875rem;
    font-family: var(--font-body);
    color: var(--color-text);
    transition: all var(--transition-speed);
  }

  .featured-products__tab:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .featured-products__tab--active {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  @media screen and (max-width: 1024px) {
    .featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    .featured-products__heading {
      font-size: 2rem;
    }

    .featured-products__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% schema %}
