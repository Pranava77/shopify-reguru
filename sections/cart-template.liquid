<div class="cart-template">
  <div class="cart-template__container container">
    <h1 class="cart-template__title">{{ 'cart.general.title' | t }}</h1>

    {%- if cart.item_count > 0 -%}
      <form action="{{ routes.cart_url }}" method="post" novalidate data-cart-form>
        <div class="cart-template__items">
          {%- for item in cart.items -%}
            <div class="cart-item" data-cart-item data-line-item-key="{{ item.key }}">
              <div class="cart-item__image">
                {%- if item.image -%}
                  <img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title | escape }}" width="200" height="auto">
                {%- endif -%}
              </div>

              <div class="cart-item__details">
                <h3 class="cart-item__title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                
                {%- if item.variant.title != 'Default Title' -%}
                  <p class="cart-item__variant">{{ item.variant.title }}</p>
                {%- endif -%}

                <div class="cart-item__price">
                  <span class="cart-item__price-each">{{ item.price | money }}</span>
                  {%- if item.original_price > item.price -%}
                    <span class="cart-item__price-original">{{ item.original_price | money }}</span>
                  {%- endif -%}
                </div>
              </div>

              <div class="cart-item__quantity">
                <div class="quantity-selector">
                  <button type="button" class="quantity-selector__button" data-quantity-minus>-</button>
                  <input
                    type="number"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="0"
                    class="quantity-selector__input"
                    data-quantity-input
                  >
                  <button type="button" class="quantity-selector__button" data-quantity-plus>+</button>
                </div>
              </div>

              <div class="cart-item__total">
                {{ item.line_price | money }}
              </div>

              <button type="button" class="cart-item__remove" data-cart-remove aria-label="{{ 'cart.general.remove' | t }}">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
          {%- endfor -%}
        </div>

        <div class="cart-template__footer">
          <div class="cart-template__subtotal">
            <span>{{ 'cart.general.subtotal' | t }}</span>
            <span class="cart-template__subtotal-price" data-cart-total>{{ cart.total_price | money }}</span>
          </div>
          
          <button type="submit" name="checkout" class="cart-template__checkout">
            {{ 'cart.general.checkout' | t }}
          </button>
        </div>
      </form>
    {%- else -%}
      <div class="cart-template__empty">
        <p>{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="cart-template__continue">
          {{ 'cart.general.continue_shopping' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .cart-template {
    padding: var(--spacing-2xl) 0;
    min-height: 60vh;
  }

  .cart-template__title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .cart-template__items {
    margin-bottom: var(--spacing-xl);
  }

  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr 150px 100px 40px;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    margin-bottom: var(--spacing-md);
    align-items: center;
  }

  .cart-item__image img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
  }

  .cart-item__title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  .cart-item__title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .cart-item__variant {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xs);
  }

  .cart-item__price {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .cart-item__price-original {
    text-decoration: line-through;
    color: var(--color-text-light);
    font-size: 0.875rem;
  }

  .cart-item__total {
    font-weight: 700;
    font-size: 1.125rem;
  }

  .cart-item__remove {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-text-light);
    padding: 0.5rem;
    transition: color var(--transition-speed);
  }

  .cart-item__remove:hover {
    color: #EF4444;
  }

  .cart-template__footer {
    max-width: 400px;
    margin-left: auto;
    padding: var(--spacing-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
  }

  .cart-template__subtotal {
    display: flex;
    justify-content: space-between;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
  }

  .cart-template__checkout {
    width: 100%;
    padding: 1rem;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--border-radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-speed);
  }

  .cart-template__checkout:hover {
    background-color: #1E3A8A;
  }

  .cart-template__empty {
    text-align: center;
    padding: var(--spacing-2xl) 0;
  }

  .cart-template__empty p {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-lg);
  }

  .cart-template__continue {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--color-primary);
    color: white;
    text-decoration: none;
    border-radius: var(--border-radius-md);
    font-weight: 600;
  }

  @media screen and (max-width: 768px) {
    .cart-item {
      grid-template-columns: 80px 1fr 40px;
      gap: var(--spacing-sm);
    }

    .cart-item__quantity,
    .cart-item__total {
      grid-column: 2 / 3;
    }

    .cart-template__footer {
      max-width: 100%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Cart Template",
  "settings": []
}
{% endschema %}



