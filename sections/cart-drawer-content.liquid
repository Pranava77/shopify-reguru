{%- comment -%}
  Cart Drawer Content Section
  
  This section is used to render cart drawer items via the Section Rendering API.
  It can be fetched using: /?section_id=cart-drawer-content
{%- endcomment -%}

<div class="cart-drawer-content-wrapper">
  {%- if cart.item_count > 0 -%}
    <div class="cart-drawer__items" data-cart-drawer-items>
      {%- for item in cart.items -%}
        {% render 'cart-drawer-item', item: item %}
      {%- endfor -%}
    </div>
  {%- else -%}
    <div class="cart-drawer__empty" data-cart-drawer-empty style="display: flex;">
      <p class="cart-drawer__empty-text">{{ 'general.cart.empty' | t | default: 'Your cart is empty' }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn--blue cart-drawer__continue">
        {{ 'general.cart.continue_shopping' | t | default: 'Continue Shopping' }}
      </a>
    </div>
  {%- endif -%}
  
  <span data-cart-drawer-subtotal style="display: none;">{{ cart.total_price | money }}</span>
</div>

{% schema %}
{
  "name": "Cart Drawer Content",
  "settings": []
}
{% endschema %}

